import requests
import time
from typing import Optional
from ..logging_config import api_logger
from .base_adapter import AIClient, AIResponse, AIPlatformType, AIErrorType
from config_manager import Config as PlatformConfigManager

class DoubaoAdapter(AIClient):
    """
    Doubao (ByteDance) AI 平台的适配器
    """
    def __init__(self, api_key: str, model_name: str = "ernie-bot-4", base_url: Optional[str] = None):
        super().__init__(AIPlatformType.DOUBAO, model_name, api_key)
        # 使用字节跳动方舟平台的正确API端点
        self.base_url = base_url or "https://ark.cn-beijing.volces.com/api/v3/chat/completions"
        self.headers = {
            "Content-Type": "application/json",
            "Authorization": f"Bearer {self.api_key}"
        }
        api_logger.info(f"DoubaoAdapter initialized for model: {model_name}")

    def send_prompt(self, prompt: str, **kwargs) -> AIResponse:
        """
        向 Doubao API 发送请求
        """
        messages = [{"role": "user", "content": prompt}]

        platform_config_manager = PlatformConfigManager()
        doubao_config = platform_config_manager.get_platform_config('doubao')

        temperature = kwargs.get('temperature', doubao_config.default_temperature if doubao_config else 0.7)
        max_tokens = kwargs.get('max_tokens', doubao_config.default_max_tokens if doubao_config else 1000)
        timeout = kwargs.get('timeout', doubao_config.timeout if doubao_config else 60)  # 增加超时时间

        payload = {
            "model": self.model_name,
            "messages": messages,
            "temperature": temperature,
            "max_tokens": max_tokens,
            "stream": False
        }

        start_time = time.time()
        try:
            response = requests.post(self.base_url, headers=self.headers, json=payload, timeout=timeout)
            response.raise_for_status()
            response_data = response.json()
            latency = time.time() - start_time

            if response_data and response_data.get("choices"):
                content = response_data["choices"][0]["message"]["content"]
                tokens_used = response_data.get("usage", {}).get("total_tokens", 0)
                api_logger.info(f"Doubao response success. Tokens: {tokens_used}, Latency: {latency:.2f}s")
                return AIResponse(
                    success=True,
                    content=content,
                    model=self.model_name,
                    platform=self.platform_type.value,
                    tokens_used=tokens_used,
                    latency=latency,
                    metadata=response_data
                )
            else:
                error_message = response_data.get("error", {}).get("message", "Unknown Doubao API error")
                error_code = response_data.get("error", {}).get("code", "")
                error_type = self._map_error_message(error_message, error_code)
                api_logger.error(f"Doubao API returned no output: {error_code} - {error_message}")
                return AIResponse(success=False, error_message=error_message, error_type=error_type, model=self.model_name, platform=self.platform_type.value, latency=latency)

        except requests.exceptions.Timeout:
            error_message = f"Doubao API request timed out after {timeout} seconds"
            api_logger.error(error_message)
            return AIResponse(success=False, error_message=error_message, error_type=AIErrorType.TIMEOUT, model=self.model_name, platform=self.platform_type.value, latency=timeout)
        except requests.exceptions.RequestException as e:
            error_message = f"Doubao API request failed: {e}"
            error_type = AIErrorType.UNKNOWN_ERROR
            if isinstance(e, requests.exceptions.HTTPError):
                if e.response.status_code == 401:
                    error_type = AIErrorType.INVALID_API_KEY
                elif e.response.status_code == 429:
                    error_type = AIErrorType.RATE_LIMIT_EXCEEDED
                elif e.response.status_code >= 500:
                    error_type = AIErrorType.SERVER_ERROR
                elif e.response.status_code == 404:
                    error_type = AIErrorType.INVALID_MODEL

            api_logger.error(error_message)
            return AIResponse(success=False, error_message=error_message, error_type=error_type, model=self.model_name, platform=self.platform_type.value, latency=time.time() - start_time)
        except Exception as e:
            error_message = f"An unexpected error occurred with Doubao API: {e}"
            api_logger.error(error_message)
            return AIResponse(success=False, error_message=error_message, error_type=AIErrorType.UNKNOWN_ERROR, model=self.model_name, platform=self.platform_type.value, latency=time.time() - start_time)

    def _map_error_message(self, error_message: str, error_code: str = "") -> AIErrorType:
        """将豆包的错误信息映射到标准错误类型"""
        error_message_lower = error_message.lower()
        if "invalid api key" in error_message_lower or "authentication" in error_message_lower or "auth" in error_message_lower:
            return AIErrorType.INVALID_API_KEY
        if "insufficient quota" in error_message_lower or "credit" in error_message_lower or "balance" in error_message_lower or "exhausted" in error_message_lower:
            return AIErrorType.INSUFFICIENT_QUOTA
        if "content risk" in error_message_lower or "safety" in error_message_lower or "moderation" in error_message_lower or "policy" in error_message_lower:
            return AIErrorType.CONTENT_SAFETY
        if "not found" in error_message_lower or "does not exist" in error_message_lower or "model" in error_message_lower and "not found" in error_message_lower:
            return AIErrorType.INVALID_MODEL
        if error_code and "InvalidEndpointOrModel" in error_code:
            return AIErrorType.INVALID_MODEL
        return AIErrorType.UNKNOWN_ERROR
