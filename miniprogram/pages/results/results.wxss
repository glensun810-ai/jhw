/* 失败状态卡片 */
.error-card {
  background-color: #2c2c2c;
  border-radius: 16rpx;
  padding: 30rpx;
  border: 1rpx solid #3a3a3a;
  border-left: 8rpx solid #F5222D; /* 警告深红 */
}

.error-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #3a3a3a;
}

.brand-tag.tag-error {
  background-color: #595959;
  color: #a6a6a6;
}

.error-body {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.error-icon {
  font-size: 60rpx;
  margin-right: 30rpx;
  opacity: 0.8;
}

.error-content {
  display: flex;
  flex-direction: column;
}

.error-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF8C00; /* 风险橙 */
  margin-bottom: 10rpx;
}

.error-desc {
  font-size: 26rpx;
  color: #a6a6a6;
  line-height: 1.5;
}

.error-footer {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.solution-btn {
  background-color: #00A9FF;
  color: #fff;
  border: none;
  font-weight: bold;
}

