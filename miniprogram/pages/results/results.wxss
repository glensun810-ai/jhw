/* 全局样式 */
page {
  background-color: #121826; /* 深蓝灰色背景 */
  color: #e8e8e8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 20rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx 0;
}

.page-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #fff;
}

.page-subtitle {
  font-size: 28rpx;
  color: #8c8c8c;
  margin-top: 15rpx;
}

/* PK Swiper */
.pk-swiper {
  height: 1200rpx; /* 需要一个足够的高度来容纳内容 */
}

.swiper-item-container {
  padding: 20rpx;
  border-radius: 16rpx;
  background-size: cover;
  background-position: center;
}

.platform-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
  color: #fff;
  text-shadow: 0 0 10rpx rgba(0,0,0,0.5);
}

/* 平台视觉图腾 */
.platform-bg-DeepSeek {
  background-color: #1a1a1a;
  /* background-image: url('path/to/deepseek-logo.svg'); */
}
.platform-bg-Kimi {
  background-color: #1a202c;
  /* background-image: url('path/to/kimi-logo.svg'); */
}
.platform-bg-TongyiQianwen {
  background-color: #1d1c2a;
  /* background-image: url('path/to/qwen-logo.svg'); */
}

/* 底部按钮 */
.footer-actions {
  padding: 30rpx 20rpx;
  background-color: #1A202C;
  border-top: 1rpx solid #303030;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 10;
  display: flex;
  gap: 20rpx;
}
.btn-primary, .btn-secondary {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.btn-primary { background-color: #00F5A0; color: #141414; }
.btn-secondary { background-color: #3a3a3a; color: #e8e8e8; }