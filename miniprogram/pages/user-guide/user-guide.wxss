/* pages/user-guide/user-guide.wxss */

page {
  background-color: #121826;
  color: #e8e8e8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 40rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background: linear-gradient(135deg, #1a1f29 0%, #121826 100%);
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 60rpx;
}
.page-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #FFFFFF;
  display: block;
  margin-bottom: 20rpx;
}
.page-subtitle {
  font-size: 28rpx;
  color: #8c8c8c;
  display: block;
}

/* 功能介绍部分 */
.features-section {
  margin-bottom: 60rpx;
}
.feature-item {
  display: flex;
  align-items: flex-start;
  background-color: #1A202C;
  border: 1rpx solid #303030;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.feature-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}
.feature-content {
  flex: 1;
}
.feature-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #00F5A0;
  margin-bottom: 10rpx;
}
.feature-desc {
  display: block;
  font-size: 26rpx;
  color: #8c8c8c;
  line-height: 1.5;
}

/* 使用步骤部分 */
.steps-section {
  margin-bottom: 60rpx;
}
.step-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 40rpx;
}
.step-number {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #00A9FF, #00F5A0);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #141414;
  margin-right: 20rpx;
  flex-shrink: 0;
}
.step-content {
  flex: 1;
}
.step-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #e8e8e8;
  margin-bottom: 10rpx;
}
.step-desc {
  display: block;
  font-size: 26rpx;
  color: #8c8c8c;
  line-height: 1.5;
}

/* 常见问题部分 */
.faq-section {
  margin-bottom: 60rpx;
}
.faq-item {
  margin-bottom: 20rpx;
}
.faq-question {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #1A202C;
  border: 1rpx solid #303030;
  border-radius: 16rpx;
  padding: 30rpx;
}
.faq-q-text {
  flex: 1;
  font-size: 28rpx;
  font-weight: bold;
  color: #e8e8e8;
}
.faq-arrow {
  font-size: 24rpx;
  color: #8c8c8c;
  margin-left: 20rpx;
  transition: transform 0.3s ease;
}
.faq-arrow.expanded {
  transform: rotate(180deg);
}
.faq-answer {
  background-color: #1A202C;
  border: 1rpx solid #303030;
  border-top: none;
  border-radius: 0 0 16rpx 16rpx;
  padding: 30rpx;
}
.faq-a-text {
  font-size: 26rpx;
  color: #8c8c8c;
  line-height: 1.5;
}

/* 操作按钮部分 */
.action-buttons {
  display: flex;
  gap: 20rpx;
}
.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}
.start-btn {
  background: linear-gradient(to right, #00F5A0, #00D18C);
  color: #141414;
}
.contact-btn {
  background: linear-gradient(to right, #00A9FF, #0088cc);
  color: #fff;
}