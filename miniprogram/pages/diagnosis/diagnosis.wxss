/* 诊断页面样式 */

.diagnosis-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #ffffff 100%);
  padding-bottom: 120rpx;
}

/* 进度区域 */
.progress-section {
  margin: 20rpx;
}

/* 错误区域 */
.error-section {
  margin: 30rpx 20rpx;
  padding: 40rpx 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 77, 79, 0.1);
}

.error-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.error-icon {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #ff4d4f;
  color: #fff;
  font-size: 48rpx;
  font-weight: bold;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.error-message {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 30rpx;
  line-height: 1.6;
}

.error-actions {
  display: flex;
  gap: 20rpx;
}

.btn-retry {
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 48rpx;
  border-radius: 32rpx;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
  font-size: 28rpx;
  padding: 16rpx 48rpx;
  border-radius: 32rpx;
}

/* 详细信息区域 */
.details-section {
  margin: 20rpx;
}

.detail-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.detail-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.detail-row:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 26rpx;
  color: #999;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.btn-details {
  flex: 1;
  background-color: #1890ff;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: 32rpx;
}

.btn-cancel-outline {
  flex: 1;
  background-color: #fff;
  color: #ff4d4f;
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: 32rpx;
  border: 1rpx solid #ff4d4f;
}

/* 加载遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.9);
  z-index: 1000;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 6rpx solid #f0f0f0;
  border-top-color: #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 暗色模式支持 */
@media (prefers-color-scheme: dark) {
  .diagnosis-page {
    background: linear-gradient(180deg, #1a1a1a 0%, #2d2d2d 100%);
  }

  .error-section,
  .detail-card {
    background-color: #2d2d2d;
  }

  .detail-title {
    color: #fff;
  }

  .detail-value {
    color: #fff;
  }

  .btn-cancel {
    background-color: #3d3d3d;
    color: #ccc;
  }

  .action-bar {
    background-color: #2d2d2d;
  }

  .btn-cancel-outline {
    background-color: transparent;
  }

  .loading-mask {
    background-color: rgba(0, 0, 0, 0.9);
  }
}
