/* 全局样式 */
page {
  background-color: #121826;
  color: #e8e8e8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 标题区域 */
.title-section {
  text-align: center;
  margin-top: 60rpx;
  margin-bottom: 80rpx;
}

.main-title {
  font-size: 52rpx;
  font-weight: bold;
  color: #fff;
}

.subtitle {
  font-size: 28rpx;
  color: #8c8c8c;
  margin-top: 15rpx;
}

/* 战术布局区 */
.battlefield-section {
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: flex-start;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.camp-section {
  flex: 1;
  background-color: #1A202C;
  border: 1rpx solid #303030;
  border-radius: 16rpx;
  padding: 30rpx;
}

.camp-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #a6a6a6;
  margin-bottom: 20rpx;
  text-align: center;
}

.my-brand-camp .camp-title { color: #00F5A0; }
.competitor-camp .camp-title { color: #00A9FF; }

.main-brand-input {
  width: 100%;
  height: 88rpx;
  background-color: #262626;
  border: 1rpx solid #3a3a3a;
  border-radius: 8rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
}

.vs-icon {
  font-size: 40rpx;
  font-weight: bold;
  color: #555;
  padding-top: 120rpx;
}

.competitor-input-wrapper {
  display: flex;
  align-items: center;
  position: relative;
  height: 88rpx;
  border-radius: 8rpx;
  background-color: #262626;
  border: 1rpx solid #3a3a3a;
}

.competitor-input {
  flex: 1;
  height: 100%;
  padding: 0 88rpx 0 30rpx;
  font-size: 28rpx;
  color: #fff;
}

.add-icon-btn {
  position: absolute;
  right: 0;
  top: 0;
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #8c8c8c;
}

.competitor-list {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  min-height: 100rpx;
}

.competitor-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #262626;
  padding: 15rpx 20rpx;
  border-radius: 8rpx;
}

.competitor-name {
  font-size: 26rpx;
  color: #d9d9d9;
}

.remove-icon {
  font-size: 32rpx;
  color: #8c8c8c;
}

/* 高级设置 */
.advanced-toggle {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #8c8c8c;
  margin-bottom: 40rpx;
}
.setting-icon { font-size: 28rpx; margin-right: 10rpx; }
.advanced-toggle .arrow { margin-left: 10rpx; transition: transform 0.3s ease; }
.advanced-toggle .arrow.expanded { transform: rotate(90deg); }

.advanced-settings-section {
  width: 100%;
  background-color: #1A202C;
  border-radius: 16rpx;
  padding: 0 40rpx;
  margin-bottom: 40rpx;
  border: 1rpx solid #303030;
  max-height: 0;
  overflow: hidden;
  opacity: 0;
  transition: all 0.5s cubic-bezier(0.25, 0.8, 0.25, 1);
}
.advanced-settings-section.visible {
  max-height: 2000rpx;
  opacity: 1;
  padding: 40rpx;
}

.setting-block { margin-bottom: 64rpx; }
.setting-block:last-child { margin-bottom: 0; }
.setting-title { font-size: 32rpx; font-weight: bold; color: #e8e8e8; margin-bottom: 10rpx; display: block; }
.setting-subtitle { font-size: 24rpx; color: #8c8c8c; margin-bottom: 30rpx; display: block; }

/* AI平台矩阵 */
.ai-category { margin-bottom: 40rpx; }
.category-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20rpx; }
.category-title { font-size: 28rpx; color: #a6a6a6; }
.select-all-btn { background: none; color: #00A9FF; font-size: 24rpx; padding: 5rpx 10rpx; border: 1rpx solid #00A9FF; border-radius: 6rpx; }

.model-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200rpx, 1fr));
  gap: 20rpx;
}

.model-chip-pro {
  background-color: #262626;
  border: 1rpx solid #3a3a3a;
  border-radius: 12rpx;
  padding: 20rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.model-chip-pro.checked {
  border-color: #00A9FF;
  background-color: rgba(0, 169, 255, 0.1);
}

.model-chip-pro.disabled {
  opacity: 0.4;
  pointer-events: none;
}

.logo-placeholder {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  background-color: #3a3a3a;
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
}

.model-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #e8e8e8;
  margin-bottom: 10rpx;
}

.tag-list {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.tag {
  font-size: 20rpx;
  background-color: #3a3a3a;
  color: #a6a6a6;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
}

.check-icon {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  font-size: 24rpx;
  color: #00A9FF;
  opacity: 0;
  transform: scale(0.5);
  transition: all 0.3s ease;
}

.model-chip-pro.checked .check-icon {
  opacity: 1;
  transform: scale(1);
}

/* 主操作按钮 */
.main-action-section { width: 100%; }
.scan-button { width: 100%; height: 96rpx; background-color: #00F5A0; color: #141414; font-size: 32rpx; font-weight: bold; border-radius: 48rpx; }

/* 进度条 */
.progress-section { width: 100%; margin-top: 60rpx; text-align: center; }
.progress-bar-container { width: 100%; height: 16rpx; background-color: #262626; border-radius: 8rpx; overflow: hidden; }
.progress-bar { height: 100%; background: linear-gradient(90deg, #00A9FF, #00F5A0); transition: width 0.5s ease; }
.progress-text { font-size: 26rpx; color: #8c8c8c; margin-top: 20rpx; }

/* 快速访问 */
.quick-access-section { margin-top: 64rpx; width: 100%; }
.quick-link, .history-link { display: flex; justify-content: space-between; align-items: center; background-color: #1A202C; border: 1rpx solid #303030; border-radius: 16rpx; padding: 30rpx; margin-bottom: 20rpx; }
.quick-link:last-child, .history-link:last-child { margin-bottom: 0; }
.quick-link:active, .history-link:active { background-color: #262626; }
.arrow-right { font-size: 40rpx; color: #8c8c8c; }