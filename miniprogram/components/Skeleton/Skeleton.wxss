/* components/Skeleton/Skeleton.wxss */
.skeleton-wrapper {
  width: 100%;
}

.skeleton-line {
  height: 32rpx;
  margin-bottom: 16rpx;
  background: linear-gradient(90deg, #262626 25%, #3a3a3a 50%, #262626 75%);
  background-size: 200% 100%;
  border-radius: 8rpx;
  position: relative;
  overflow: hidden;
}

.skeleton-line:last-child {
  margin-bottom: 0;
}

.skeleton-line.animated::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  animation: shimmer 1.5s infinite;
}

@keyframes shimmer {
  0% {
    left: -100%;
  }
  100% {
    left: 100%;
  }
}