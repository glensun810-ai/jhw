<view class="chart-container">
  <!-- ECharts Canvas -->
  <view class="echart-wrap" wx:if="{{ isLoaded && !isError }}">
    <ec-canvas id="{{ canvasId }}" canvas-id="{{ canvasId }}" ec="{{ ec }}"></ec-canvas>
  </view>

  <!-- Skeleton Loading -->
  <view class="skeleton-wrap" wx:if="{{ !isLoaded && !isError }}">
    <view class="skeleton-item"></view>
  </view>

  <!-- Error State -->
  <view class="error-wrap" wx:if="{{ isError }}">
    <text>图表加载失败</text>
  </view>
</view>