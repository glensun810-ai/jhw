/**
 * 情感分布组件样式
 *
 * 支持饼图和环形图两种展示方式
 * 包含情感概览和详细统计
 */

/* 组件容器 */
.sentiment-chart {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 标题栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.total-count {
  font-size: 24rpx;
  color: #999999;
}

.toggle-btn {
  font-size: 24rpx;
  color: #1890ff;
  padding: 8rpx 16rpx;
  background-color: #f0f5ff;
  border-radius: 8rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid #f0f0f0;
  border-top-color: #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #999999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.5;
}

.empty-text {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #999999;
}

/* 图表容器 */
.chart-container {
  padding: 20rpx 0;
}

/* 情感概览卡片 */
.sentiment-overview {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.overview-icon {
  font-size: 64rpx;
  margin-right: 24rpx;
}

.overview-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.overview-label {
  font-size: 24rpx;
  color: #6c757d;
}

.overview-value {
  font-size: 32rpx;
  font-weight: 600;
}

.overview-score {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 100rpx;
}

.score-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #333333;
}

.score-label {
  font-size: 22rpx;
  color: #999999;
  margin-top: 4rpx;
}

/* 图表包装器 */
.chart-wrapper {
  display: flex;
  justify-content: center;
  margin: 32rpx 0;
}

/* 环形图样式 */
.donut-chart {
  position: relative;
}

.donut-outer {
  position: relative;
  width: 320rpx;
  height: 320rpx;
}

.donut-ring {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  position: relative;
}

.donut-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 160rpx;
  height: 160rpx;
  background-color: #ffffff;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.center-total {
  font-size: 44rpx;
  font-weight: 700;
  color: #333333;
}

.center-label {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

/* 饼图样式 */
.pie-chart {
  width: 320rpx;
  height: 320rpx;
}

.pie-outer {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/* 详细数据区域 */
.details-section {
  margin-top: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  transition: all 0.2s ease;
}

.detail-item:active {
  background-color: #e9ecef;
  transform: scale(0.98);
}

.detail-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.detail-icon {
  font-size: 32rpx;
}

.detail-name {
  font-size: 28rpx;
  color: #333333;
}

.detail-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
  margin-left: 24rpx;
}

.detail-bar {
  flex: 1;
  height: 16rpx;
  background-color: #e9ecef;
  border-radius: 8rpx;
  overflow: hidden;
}

.detail-bar-fill {
  height: 100%;
  border-radius: 8rpx;
  transition: width 0.5s ease;
  animation: growWidth 0.5s ease-out;
}

@keyframes growWidth {
  from {
    width: 0;
  }
}

.detail-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  min-width: 80rpx;
  text-align: right;
}

/* 情感描述区域 */
.description-section {
  margin-top: 24rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  border-left: 4rpx solid #1890ff;
}

.description-text {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

/* 警告提示 */
.warning-tip {
  display: flex;
  align-items: center;
  padding: 16rpx;
  margin-top: 16rpx;
  background-color: #fff7e6;
  border-radius: 8rpx;
  border-left: 4rpx solid #faad14;
}

.warning-icon {
  margin-right: 12rpx;
}

.warning-text {
  font-size: 24rpx;
  color: #fa8c16;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .title {
    font-size: 28rpx;
  }

  .overview-icon {
    font-size: 56rpx;
  }

  .overview-value {
    font-size: 28rpx;
  }

  .donut-outer,
  .pie-outer {
    width: 280rpx;
    height: 280rpx;
  }

  .center-total {
    font-size: 36rpx;
  }

  .detail-name {
    font-size: 26rpx;
  }

  .detail-value {
    font-size: 26rpx;
  }
}
