/* components/BattlefieldMatrix/BattlefieldMatrix.wxss */
.battlefield-matrix {
  width: 100%;
  background-color: #0D1117; /* 深空黑 */
  padding: 20rpx;
  box-sizing: border-box;
}

.matrix-header {
  margin-bottom: 30rpx;
  text-align: center;
}

.matrix-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #00F2FF; /* 高亮科技青 */
  display: block;
}

.matrix-container {
  width: 100%;
  overflow: hidden;
}

.horizontal-scroll {
  width: 100%;
  white-space: nowrap;
}

.matrix-table {
  display: inline-block;
  min-width: 100%;
  transition: opacity 0.3s ease, transform 0.3s ease;
}

.matrix-table.fade-transition {
  opacity: 0.5;
  transform: translateY(10rpx);
}

.table-header {
  display: flex;
  width: fit-content;
}

.table-body {
  width: fit-content;
}

.table-row {
  display: flex;
  width: fit-content;
}

.cell {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 180rpx;
  height: 120rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1px solid rgba(255, 255, 255, 0.1);
  background-color: rgba(255, 255, 255, 0.05); /* 玻璃拟态背景 */
  backdrop-filter: blur(10px); /* 玻璃拟态模糊 */
  border-radius: 8rpx;
  margin-right: -1px;
  margin-bottom: -1px;
}

.header-cell {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.15) 100%);
  font-weight: bold;
  color: #00F2FF; /* 高亮科技青 */
  font-size: 24rpx;
}

.corner-cell {
  min-width: 250rpx;
  background: linear-gradient(135deg, rgba(0, 242, 255, 0.1) 0%, rgba(0, 242, 255, 0.2) 100%);
}

.brand-header {
  min-width: 180rpx;
  text-align: center;
}

.question-cell {
  min-width: 250rpx;
  background: linear-gradient(135deg, rgba(0, 242, 255, 0.05) 0%, rgba(0, 242, 255, 0.1) 100%);
  align-items: flex-start;
  text-align: left;
}

.question-text {
  font-size: 24rpx;
  color: #e8e8e8;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-align: left;
  word-break: break-all;
}

.score-cell {
  cursor: pointer;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.score-cell:hover {
  transform: scale(1.05);
  box-shadow: 0 0 15rpx rgba(0, 242, 255, 0.5);
}

.score-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #e8e8e8;
  font-family: 'Courier New', 'DIN', monospace; /* 等宽字体 */
}

.number-font {
  font-family: 'Courier New', 'DIN', monospace;
  font-weight: bold;
}

.loading-container, .empty-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  width: 100%;
}

.loading-text, .empty-text {
  font-size: 28rpx;
  color: #8c8c8c;
}