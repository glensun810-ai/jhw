<!-- components/auth-wrapper/auth-wrapper.wxml -->
<view>
  <!-- 有权限时显示内容 -->
  <view wx:if="{{isLoggedIn && hasPermission}}">
    <slot></slot>
  </view>
  
  <!-- 无权限时显示提示 -->
  <view wx:elif="{{showLoginPrompt && !isLoggedIn}}" class="auth-prompt" bindtap="triggerLogin">
    <text class="prompt-text">{{promptText}}</text>
    <text class="login-link">点击登录 ></text>
  </view>
  
  <!-- 有登录但无权限时显示提示 -->
  <view wx:elif="{{isLoggedIn && !hasPermission}}" class="auth-prompt">
    <text class="prompt-text">您没有访问此功能的权限</text>
  </view>
</view>