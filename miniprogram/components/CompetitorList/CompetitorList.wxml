<!-- components/CompetitorList/CompetitorList.wxml -->
<view class="competitor-list competitor-list-wrapper">
  <view class="list-header competitor-list-header">
    <text class="list-title">{{title}}</text>
  </view>

  <skeleton type="paragraph" rows="5" loading="{{loading}}">
    <!-- 关键词对比布局 -->
    <view class="keywords-layout competitor-list-keywords-layout" wx:if="{{!loading && (brandKeywords.length > 0 || sharedKeywords.length > 0)}}">
      <!-- 左侧：本品牌核心词 -->
      <view class="keywords-column brand-column">
        <view class="column-header">
          <text class="column-title">本品牌核心词</text>
        </view>
        <view class="keyword-tags">
          <view class="keyword-tag brand-keyword" wx:for="{{brandKeywords}}" wx:key="index">
            {{item}}
          </view>
          <view class="placeholder" wx:if="{{brandKeywords.length === 0}}">
            <text class="placeholder-text">暂无数据</text>
          </view>
        </view>
      </view>

      <!-- 右侧：竞品重叠词 -->
      <view class="keywords-column competitor-column">
        <view class="column-header">
          <text class="column-title">竞品重叠词</text>
        </view>
        <view class="keyword-tags">
          <view class="keyword-tag competitor-keyword" wx:for="{{sharedKeywords}}" wx:key="index">
            {{item}}
          </view>
          <view class="placeholder" wx:if="{{sharedKeywords.length === 0}}">
            <text class="placeholder-text">暂无数据</text>
          </view>
        </view>
      </view>
    </view>

    <!-- 防御性渲染：当数据为空时显示占位符 -->
    <view class="placeholder-container competitor-list-placeholder-container" wx:if="{{!loading && (!competitionData || (brandKeywords.length === 0 && sharedKeywords.length === 0))}}">
      <text class="placeholder-text">暂无竞争分析数据</text>
    </view>
  </skeleton>
</view>