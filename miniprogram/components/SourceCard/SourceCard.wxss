/* components/SourceCard/SourceCard.wxss */
.source-card-container {
  background-color: #1A202C;
  border: 1rpx solid #303030;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  overflow: hidden;
}

/* 添加海军蓝渐变边框效果 */
.source-card-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #1A237E, #00E5FF);
  z-index: 1;
}

.source-card-container > .view,
.source-card-container > .list-header,
.source-card-container > .source-cards,
.source-card-container > .placeholder-container {
  position: relative;
  z-index: 2;
}

.list-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.list-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #e8e8e8;
}

.cyber-cyan { color: #00E5FF; }

.list-count {
  font-size: 24rpx;
  color: #00E5FF; /* 使用科技青色 */
  margin-left: 10rpx;
  font-weight: bold;
  font-family: 'Courier New', 'DIN', monospace; /* 等宽字体 */
}

.source-cards {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.source-card {
  background-color: #262626;
  border-radius: 12rpx;
  border: 1rpx solid #3a3a3a;
  overflow: hidden;
}

.source-card:active {
  opacity: 0.8;
}

.card-content {
  display: flex;
  align-items: center;
  padding: 20rpx;
}

.card-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #1A237E 0%, #00E5FF 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.domain-initial {
  font-size: 24rpx;
  font-weight: bold;
  color: white;
  font-family: 'Courier New', 'DIN', monospace; /* 等宽字体 */
}

.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #e8e8e8;
  display: block;
  word-break: break-all;
}

.card-domain {
  font-size: 24rpx;
  color: #00E5FF; /* 使用科技青色 */
  display: block;
}

.card-url {
  font-size: 20rpx;
  color: #8c8c8c;
  display: block;
  word-break: break-all;
  font-family: 'Courier New', 'DIN', monospace; /* 等宽字体 */
}

.card-arrow {
  font-size: 32rpx;
  color: #8c8c8c;
  margin-left: 10rpx;
  flex-shrink: 0;
}

/* 占位符样式 */
.placeholder-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  width: 100%;
}

.placeholder-text {
  font-size: 28rpx;
  color: #00E5FF; /* 使用科技青色 */
  font-weight: bold;
  font-family: 'Courier New', 'DIN', monospace; /* 等宽字体 */
  text-align: center;
}