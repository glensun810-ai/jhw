/* components/SourceList/SourceList.wxss */
.source-list {
  background-color: #1A202C;
  border: 1rpx solid #303030;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  overflow: hidden;
}

/* 添加海军蓝渐变边框效果 */
.source-list::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #1A237E, #00E5FF);
  z-index: 1;
}

.source-list > .view,
.source-list > .list-header,
.source-list > .source-items,
.source-list > .placeholder-container {
  position: relative;
  z-index: 2;
}

.list-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.list-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #e8e8e8;
}

.list-count {
  font-size: 24rpx;
  color: #00E5FF; /* 使用科技青色 */
  margin-left: 10rpx;
  font-weight: bold;
  font-family: 'Courier New', 'DIN', monospace; /* 等宽字体 */
}

.source-items {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.source-item {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  background-color: #262626;
  border-radius: 12rpx;
  border: 1rpx solid #3a3a3a;
}

.source-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 10rpx;
}

.source-main {
  flex: 1;
  margin-right: 15rpx;
}

.source-actions {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.copy-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #1A237E 0%, #00E5FF 100%); /* 渐变背景 */
  border-radius: 50%;
  padding: 10rpx;
}

.copy-icon {
  font-size: 24rpx;
  color: #FFFFFF; /* 白色图标 */
}

.source-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #e8e8e8;
  margin-bottom: 8rpx;
}

.source-url {
  font-size: 24rpx;
  color: #00E5FF; /* 使用科技青色 */
  word-break: break-all;
  font-family: 'Courier New', 'DIN', monospace; /* 等宽字体 */
}

.source-meta {
  display: flex;
  gap: 15rpx;
  flex-wrap: wrap;
}

.source-score, .source-type {
  font-size: 22rpx;
  color: #e8e8e8;
  background: linear-gradient(135deg, #1A237E 0%, #00E5FF 100%); /* 渐变背景 */
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  font-weight: bold;
  font-family: 'Courier New', 'DIN', monospace; /* 等宽字体 */
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.loading-item {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  padding: 20rpx;
  background-color: #262626;
  border-radius: 12rpx;
}

.loading-line {
  height: 30rpx;
  background: linear-gradient(90deg, #1A237E 25%, #00E5FF 50%, #1A237E 75%); /* 渐变背景 */
  background-size: 200% 100%;
  border-radius: 4rpx;
  animation: loading 1.5s infinite;
}

.loading-line.short {
  width: 70%;
}

/* 占位符样式 */
.placeholder-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  width: 100%;
}

.placeholder-text {
  font-size: 28rpx;
  color: #00E5FF; /* 使用科技青色 */
  font-weight: bold;
  font-family: 'Courier New', 'DIN', monospace; /* 等宽字体 */
}

@keyframes loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}