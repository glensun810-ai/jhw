/* pages/history-detail/history-detail.wxss */

.page-container {
  background-color: #121826;
  color: #e8e8e8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 40rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background: linear-gradient(135deg, #1a1f29 0%, #121826 100%);
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 60rpx;
}
.page-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #FFFFFF;
  display: block;
  margin-bottom: 20rpx;
}
.page-subtitle {
  font-size: 28rpx;
  color: #8c8c8c;
  display: block;
}

/* 总体评分部分 */
.overall-score-section {
  margin-bottom: 60rpx;
}
.score-card {
  background: linear-gradient(135deg, #00A9FF 0%, #00F5A0 100%);
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 169, 255, 0.2);
  position: relative;
  overflow: hidden;
}
.score-number {
  font-size: 80rpx;
  font-weight: bold;
  color: #141414;
  display: block;
  line-height: 1;
}
.score-grade {
  font-size: 36rpx;
  font-weight: bold;
  color: #141414;
  display: block;
  margin-top: 10rpx;
}
.score-desc {
  font-size: 28rpx;
  color: #141414;
  display: block;
  margin-top: 20rpx;
  opacity: 0.9;
}

/* 评分维度部分 */
.score-dimensions-section {
  margin-bottom: 60rpx;
}
.dimension-item {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}
.dimension-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #e8e8e8;
}
.dimension-bar {
  flex: 1;
  height: 24rpx;
  background-color: #262626;
  border-radius: 12rpx;
  margin: 0 20rpx;
  overflow: hidden;
  position: relative;
}
.bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #00A9FF, #00F5A0);
  border-radius: 12rpx;
  transition: width 1s ease;
}
.dimension-value {
  width: 100rpx;
  font-size: 24rpx;
  color: #8c8c8c;
  text-align: right;
}

/* 详细结果部分 */
.detailed-results-section {
  margin-bottom: 60rpx;
}
.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #e8e8e8;
  display: block;
  margin-bottom: 30rpx;
}
.result-item {
  background-color: #1A202C;
  border: 1rpx solid #303030;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.result-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.result-brand, .result-model {
  font-size: 26rpx;
  font-weight: bold;
  color: #e8e8e8;
}
.result-question, .result-response {
  font-size: 26rpx;
  color: #8c8c8c;
  margin-bottom: 15rpx;
  line-height: 1.5;
}
.result-scores {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 15rpx;
}
.score-item {
  font-size: 24rpx;
  color: #00A9FF;
  background-color: #262626;
  padding: 8rpx 15rpx;
  border-radius: 6rpx;
}
.result-score {
  font-size: 28rpx;
  font-weight: bold;
  color: #00A9FF;
}

/* 底部操作栏 */
.bottom-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}
.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}
.home-btn {
  background: linear-gradient(to right, #00F5A0, #00D18C);
  color: #141414;
}
.history-btn {
  background: linear-gradient(to right, #00A9FF, #0088cc);
  color: #fff;
}
.report-btn {
  background: linear-gradient(to right, #ff7e5f, #feb47b);
  color: #141414;
}