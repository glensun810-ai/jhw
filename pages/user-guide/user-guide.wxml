<view class="container">
  <!-- 页面头部 -->
  <view class="page-header">
    <text class="page-title">使用指南</text>
    <text class="page-subtitle">快速了解平台功能和使用方法</text>
  </view>

  <!-- 功能介绍 -->
  <view class="features-section">
    <text class="section-title">核心功能</text>
    <view class="feature-item" wx:for="{{features}}" wx:key="id">
      <view class="feature-icon">{{item.icon}}</view>
      <view class="feature-content">
        <text class="feature-title">{{item.title}}</text>
        <text class="feature-desc">{{item.description}}</text>
      </view>
    </view>
  </view>

  <!-- 使用步骤 -->
  <view class="steps-section">
    <text class="section-title">使用步骤</text>
    <view class="step-item" wx:for="{{steps}}" wx:key="id">
      <view class="step-number">{{item.number}}</view>
      <view class="step-content">
        <text class="step-title">{{item.title}}</text>
        <text class="step-desc">{{item.description}}</text>
      </view>
    </view>
  </view>

  <!-- 常见问题 -->
  <view class="faq-section">
    <text class="section-title">常见问题</text>
    <view class="faq-item" wx:for="{{faqs}}" wx:key="id">
      <view class="faq-question" bindtap="toggleAnswer" data-index="{{index}}">
        <text class="faq-q-text">{{item.question}}</text>
        <text class="faq-arrow {{item.showAnswer ? 'expanded' : ''}}">▼</text>
      </view>
      <view class="faq-answer" wx:if="{{item.showAnswer}}">
        <text class="faq-a-text">{{item.answer}}</text>
      </view>
    </view>
  </view>

  <!-- 操作按钮 -->
  <view class="action-buttons">
    <button class="action-btn start-btn" bindtap="startDiagnosis">开始诊断</button>
    <button class="action-btn contact-btn" bindtap="contactSupport">联系客服</button>
  </view>
</view>