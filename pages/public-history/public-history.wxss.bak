/* pages/public-history/public-history.wxss */

page {
  background-color: #121826;
  color: #e8e8e8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 40rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background: linear-gradient(135deg, #1a1f29 0%, #121826 100%);
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 60rpx;
}
.page-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #fff;
  display: block;
  margin-bottom: 20rpx;
}
.page-subtitle {
  font-size: 28rpx;
  color: #8c8c8c;
  display: block;
}

/* 搜索和筛选区域 */
.search-filter-section {
  margin-bottom: 40rpx;
}
.search-bar {
  display: flex;
  background-color: #1A202C;
  border-radius: 16rpx;
  padding: 10rpx 20rpx;
  border: 1rpx solid #303030;
  margin-bottom: 20rpx;
}
.search-input {
  flex: 1;
  height: 60rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #fff;
}
.search-btn {
  width: 120rpx;
  height: 60rpx;
  background: linear-gradient(to right, #00A9FF, #0088cc);
  color: #fff;
  border-radius: 8rpx;
  font-size: 26rpx;
  margin-left: 10rpx;
}
.filter-bar {
  display: flex;
  justify-content: space-between;
}
.filter-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #1A202C;
  border-radius: 16rpx;
  padding: 20rpx;
  border: 1rpx solid #303030;
  margin: 0 10rpx;
}
.filter-item:first-child {
  margin-left: 0;
}
.filter-item:last-child {
  margin-right: 0;
}
.arrow {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #8c8c8c;
}

/* 历史记录列表 */
.history-list {
  margin-bottom: 40rpx;
}
.history-card {
  background-color: #1A202C;
  border: 1rpx solid #303030;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #303030;
}
.brand-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #e8e8e8;
}
.test-time {
  font-size: 24rpx;
  color: #8c8c8c;
}
.card-content {
  margin-bottom: 20rpx;
}
.score-display {
  display: flex;
  align-items: baseline;
  margin-bottom: 15rpx;
}
.score-num {
  font-size: 48rpx;
  font-weight: bold;
}
.score-num.text-green { color: #00F5A0; }
.score-num.text-orange { color: #FF8C00; }
.score-num.text-red { color: #ff4d4f; }
.score-label {
  font-size: 24rpx;
  color: #8c8c8c;
  margin-left: 4rpx;
}
.dimension-scores {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}
.dimension-score {
  font-size: 24rpx;
  color: #00A9FF;
  background-color: #262626;
  padding: 8rpx 15rpx;
  border-radius: 6rpx;
}
.card-footer {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #8c8c8c;
}

/* 空状态和加载状态 */
.empty-state, .loading-state {
  text-align: center;
  padding: 80rpx 0;
  color: #8c8c8c;
  font-size: 28rpx;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}
.modal-content {
  width: 80%;
  max-width: 600rpx;
  background-color: #1A202C;
  border-radius: 16rpx;
  padding: 40rpx;
  border: 1rpx solid #303030;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.3);
}
.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.modal-header text {
  font-size: 32rpx;
  font-weight: bold;
  color: #e8e8e8;
}
.close-btn {
  font-size: 36rpx;
  color: #8c8c8c;
}
.close-btn:active {
  color: #e8e8e8;
}
.modal-body {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.time-option {
  padding: 20rpx;
  background-color: #262626;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #e8e8e8;
}
.time-option:active {
  background-color: #3a3a3a;
}
.score-range-selector {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.score-slider {
  width: 100%;
}
.score-range-text {
  font-size: 24rpx;
  color: #8c8c8c;
  text-align: center;
  margin: 10rpx 0;
}
.apply-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(to right, #00F5A0, #00D18C);
  color: #141414;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: bold;
}