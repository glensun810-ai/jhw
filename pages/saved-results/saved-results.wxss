/* pages/saved-results/saved-results.wxss */

.page-container {
  background-color: #121826;
  color: #e8e8e8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 40rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background: linear-gradient(135deg, #1a1f29 0%, #121826 100%);
}

/* 页面头部 */
.page-header {
  margin-bottom: 40rpx;
}
.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #FFFFFF;
  display: block;
  margin-bottom: 30rpx;
}
.search-bar {
  display: flex;
  background-color: #1A202C;
  border-radius: 16rpx;
  padding: 10rpx 20rpx;
  border: 1rpx solid #303030;
}
.search-input {
  flex: 1;
  height: 60rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #fff;
}
.search-btn {
  width: 120rpx;
  height: 60rpx;
  background: linear-gradient(to right, #00A9FF, #0088cc);
  color: #fff;
  border-radius: 8rpx;
  font-size: 26rpx;
  margin-left: 10rpx;
}

/* 筛选工具栏 */
.filter-bar {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.filter-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #1A202C;
  border-radius: 16rpx;
  padding: 20rpx;
  border: 1rpx solid #303030;
  margin: 0 10rpx;
}
.filter-item:first-child {
  margin-left: 0;
}
.filter-item:last-child {
  margin-right: 0;
}
.arrow {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #8c8c8c;
}

/* 结果列表 */
.results-list {
  margin-bottom: 40rpx;
}
.result-card {
  background-color: #1A202C;
  border: 1rpx solid #303030;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #303030;
}
.brand-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #00F5A0;
}
.save-time {
  font-size: 24rpx;
  color: #8c8c8c;
}
.card-content {
  margin-bottom: 20rpx;
}
.score-summary {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 15rpx;
}
.score-item {
  font-size: 24rpx;
  color: #00A9FF;
  background-color: #262626;
  padding: 8rpx 15rpx;
  border-radius: 6rpx;
}
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 10rpx;
}
.tag {
  font-size: 22rpx;
  color: #8c8c8c;
  background-color: #262626;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
}
.notes {
  font-size: 24rpx;
  color: #8c8c8c;
  margin-top: 10rpx;
}
.card-actions {
  display: flex;
  justify-content: flex-end;
  gap: 15rpx;
}
.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #fff;
}
.view-btn {
  background: linear-gradient(to right, #00F5A0, #00D18C);
}
.edit-btn {
  background: linear-gradient(to right, #00A9FF, #0088cc);
}
.delete-btn {
  background: linear-gradient(to right, #ff6b6b, #ff5252);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 0;
  color: #8c8c8c;
  font-size: 28rpx;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}
.modal-content {
  width: 80%;
  max-width: 600rpx;
  background-color: #1A202C;
  border-radius: 16rpx;
  padding: 40rpx;
  border: 1rpx solid #303030;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.3);
}
.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.modal-header text {
  font-size: 32rpx;
  font-weight: bold;
  color: #e8e8e8;
}
.close-btn {
  font-size: 36rpx;
  color: #8c8c8c;
}
.close-btn:active {
  color: #e8e8e8;
}
.modal-body {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.time-option, .category-option, .sort-option {
  padding: 20rpx;
  background-color: #262626;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #e8e8e8;
}
.time-option:active, .category-option:active, .sort-option:active {
  background-color: #3a3a3a;
}