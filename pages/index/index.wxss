/* 导入全局过渡动画样式 */
@import "../../app.wxss";

/* 页面容器基础样式 */
.page-container {
  background-color: #121826;
  color: #e8e8e8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

/* 页面加载状态 */
.page-container.loaded .content-wrapper {
  animation: pageEnter 0.4s cubic-bezier(0.16, 1, 0.3, 1);
}

@keyframes pageEnter {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 主色调定义 */
.navy-blue { color: #1A237E; }
.cyber-cyan { color: #00E5FF; }
.bg-navy-blue { background-color: #1A237E; }
.bg-cyber-cyan { background-color: #00E5FF; }

/* 按钮样式更新 */
.scan-button {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #1A237E 0%, #00E5FF 100%);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 48rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 229, 255, 0.3);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}
.scan-button:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 229, 255, 0.4);
}

/* 进度条样式更新 */
.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #1A237E, #00E5FF);
  transition: width 0.5s ease;
}

/* 数字字体样式 */
.number-font {
  font-family: 'Courier New', 'DIN', monospace;
  font-weight: bold;
}

/* 吸顶头部样式 */
.sticky-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 80rpx;
  background-color: #1A202C;
  border-bottom: 1rpx solid #303030;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  transform: translateY(-100%);
  opacity: 0;
  transition: transform 0.3s ease, opacity 0.3s ease;
}

.sticky-header.sticky {
  transform: translateY(0);
  opacity: 1;
}

.score-summary {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.score-label {
  font-size: 24rpx;
  color: #8c8c8c;
}

.score-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #00E5FF; /* 科技青色 */
}

.score-trend {
  font-size: 32rpx;
}

/* 内容动画包装器 */
.content-animation-wrapper {
  opacity: 0;
  transform: translateY(20px);
  transition: opacity 0.5s ease, transform 0.5s ease;
}

.content-animation-wrapper.visible {
  opacity: 1;
  transform: translateY(0);
}

/* 战略战局中心入口 */
.strategic-war-room-entry {
  margin-top: 40rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}

.war-room-btn {
  width: 80%;
  height: 80rpx;
  background: linear-gradient(135deg, #0D1117 0%, #00F2FF 100%);
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  border: none;
}

.war-room-btn .btn-arrow {
  margin-left: 10rpx;
  font-size: 32rpx;
}

.container {
  position: relative;
  padding: 40rpx;
  min-height: 100vh;
  box-sizing: border-box;
  overflow: hidden;
}

/* 动态背景 */
.particle-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}
.container::before, .container::after {
  content: '';
  position: absolute;
  border-radius: 50%;
  filter: blur(120px);
  z-index: 0;
  pointer-events: none;
}
.container::before {
  width: 450rpx;
  height: 450rpx;
  background: radial-gradient(circle, rgba(0, 245, 160, 0.15) 0%, rgba(0, 245, 160, 0) 70%);
  top: 5%;
  left: -15%;
  animation: nebula-float-1 25s infinite ease-in-out;
}
.container::after {
  width: 350rpx;
  height: 350rpx;
  background: radial-gradient(circle, rgba(0, 169, 255, 0.15) 0%, rgba(0, 169, 255, 0) 70%);
  bottom: 10%;
  right: -10%;
  animation: nebula-float-2 30s infinite ease-in-out;
}
@keyframes nebula-float-1 {
  0%, 100% { transform: translate(0, 0) rotate(0deg); }
  50% { transform: translate(60rpx, 80rpx) rotate(180deg); }
}
@keyframes nebula-float-2 {
  0%, 100% { transform: translate(0, 0) rotate(0deg); }
  50% { transform: translate(-70rpx, -40rpx) rotate(180deg); }
}

.content-wrapper {
  position: relative;
  z-index: 2;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx; /* 为固定头部留出空间 */
}

/* 标题区域 */
.title-section {
  text-align: center;
  margin-top: 80rpx;
  margin-bottom: 120rpx;
}
.main-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #FFFFFF;
  letter-spacing: 4rpx;
  display: block;
}
.subtitle {
  font-size: 28rpx;
  color: #8c8c8c;
  margin-top: 30rpx;
  display: block;
}

/* 战术布局区 */
.battlefield-section {
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: flex-start;
  gap: 20rpx;
  margin-bottom: 64rpx;
}

/* 玻璃拟态卡片 */
.camp-section {
  flex: 1;
  background-color: rgba(26, 32, 44, 0.6);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border-radius: 16rpx;
  padding: 30rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.camp-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #a6a6a6;
  margin-bottom: 20rpx;
  text-align: center;
}
.my-brand-camp .camp-title { color: #00F5A0; }
.competitor-camp .camp-title { color: #00A9FF; }

/* 统一输入框样式 */
.brand-input-wrapper {
  display: flex;
  align-items: center;
  position: relative;
  height: 88rpx;
  border-radius: 8rpx;
  background-color: #262626;
  border: 1rpx solid #3a3a3a;
}
.brand-input {
  width: 100%;
  height: 100%;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
}
.competitor-camp .brand-input {
  text-align: left;
  padding-right: 88rpx;
}

.vs-icon {
  font-size: 40rpx;
  font-weight: bold;
  color: #555;
  padding-top: 120rpx;
}

.add-icon-btn {
  position: absolute;
  right: 0;
  top: 0;
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #8c8c8c;
}

.competitor-list { margin-top: 20rpx; display: flex; flex-direction: column; gap: 15rpx; min-height: 100rpx; }
.competitor-card { display: flex; align-items: center; justify-content: space-between; background-color: #262626; padding: 15rpx 20rpx; border-radius: 8rpx; }
.competitor-name { font-size: 26rpx; color: #d9d9d9; }
.remove-icon { font-size: 32rpx; color: #8c8c8c; }

/* 高级设置 */
.advanced-toggle { display: flex; align-items: center; justify-content: center; font-size: 26rpx; color: #8c8c8c; margin-bottom: 64rpx; }
.setting-icon { font-size: 28rpx; margin-right: 10rpx; }
.advanced-toggle .arrow { margin-left: 10rpx; transition: transform 0.3s ease; }
.advanced-toggle .arrow.expanded { transform: rotate(90deg); }
.advanced-settings-section { width: 100%; background-color: #1A202C; border-radius: 16rpx; padding: 0 40rpx; margin-bottom: 40rpx; border: 1rpx solid #303030; max-height: 0; overflow: hidden; opacity: 0; transition: all 0.5s cubic-bezier(0.25, 0.8, 0.25, 1); }
.advanced-settings-section.visible { max-height: 2000rpx; opacity: 1; padding: 40rpx; }
.setting-block { margin-bottom: 64rpx; }
.setting-block:last-child { margin-bottom: 0; }
.setting-title { font-size: 32rpx; font-weight: bold; color: #e8e8e8; margin-bottom: 10rpx; display: block; }
.setting-subtitle { font-size: 24rpx; color: #8c8c8c; margin-bottom: 30rpx; display: block; }

/* 自定义问题输入 */
.questions-container { margin-top: 20rpx; }
.question-item { margin-bottom: 20rpx; }
.question-input-wrapper { display: flex; align-items: center; position: relative; background-color: #262626; border-radius: 8rpx; padding: 0 20rpx; border: 1rpx solid #3a3a3a; }
.question-input { flex: 1; height: 80rpx; padding: 0 20rpx; font-size: 26rpx; color: #fff; }
.remove-question-btn { width: 60rpx; height: 80rpx; display: flex; align-items: center; justify-content: center; font-size: 32rpx; color: #ff4d4f; }
.add-question-btn { width: 100%; height: 80rpx; display: flex; align-items: center; justify-content: center; background-color: rgba(26, 32, 44, 0.6); border: 1rpx dashed #3a3a3a; border-radius: 8rpx; color: #8c8c8c; font-size: 26rpx; }
.add-question-btn:active { background-color: rgba(38, 38, 38, 0.6); }

/* 保存配置按钮 */
.save-config-btn { width: 100%; height: 80rpx; display: flex; align-items: center; justify-content: center; background-color: rgba(0, 169, 255, 0.15); border: 1rpx solid #00A9FF; border-radius: 8rpx; color: #00A9FF; font-size: 28rpx; }

/* 清空重置按钮 */
.reset-config-btn { width: 100%; height: 80rpx; display: flex; align-items: center; justify-content: center; background-color: rgba(255, 77, 79, 0.15); border: 1rpx solid #ff4d4f; border-radius: 8rpx; color: #ff4d4f; font-size: 28rpx; }
.reset-config-btn:active { background-color: rgba(255, 77, 79, 0.25); }

/* 模态框样式 */
.modal-overlay { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.6); display: flex; align-items: center; justify-content: center; z-index: 1000; }
.modal-content { width: 80%; max-width: 600rpx; background-color: #1A202C; border-radius: 16rpx; padding: 40rpx; border: 1rpx solid #303030; box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.3); }
.modal-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 30rpx; }
.modal-header text { font-size: 32rpx; font-weight: bold; color: #e8e8e8; }
.close-btn { font-size: 36rpx; color: #8c8c8c; }
.close-btn:active { color: #e8e8e8; }
.modal-body { margin-bottom: 40rpx; }
.config-name-input { width: 100%; height: 80rpx; background-color: #262626; border: 1rpx solid #3a3a3a; border-radius: 8rpx; padding: 0 20rpx; font-size: 28rpx; color: #fff; }
.modal-footer { display: flex; justify-content: space-between; }
.modal-cancel-btn, .modal-confirm-btn { flex: 1; height: 80rpx; border-radius: 8rpx; font-size: 28rpx; }
.modal-cancel-btn { background-color: #3a3a3a; color: #e8e8e8; margin-right: 20rpx; }
.modal-confirm-btn { background-color: #00A9FF; color: #fff; margin-left: 20rpx; }

/* AI平台矩阵 */
.ai-category { margin-bottom: 40rpx; }
.category-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20rpx; }
.category-title { font-size: 28rpx; color: #a6a6a6; }
.select-all-btn { background: none; color: #00A9FF; font-size: 24rpx; padding: 5rpx 10rpx; border: 1rpx solid #00A9FF; border-radius: 6rpx; }
.model-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(200rpx, 1fr)); gap: 20rpx; }
.model-chip-pro { background-color: #262626; border: 1rpx solid #3a3a3a; border-radius: 12rpx; padding: 20rpx; transition: all 0.3s ease; position: relative; overflow: hidden; }
.model-chip-pro.checked { border-color: #00A9FF; background-color: rgba(0, 169, 255, 0.1); }
.model-chip-pro.disabled { opacity: 0.4; pointer-events: none; }
.logo-placeholder { width: 48rpx; height: 48rpx; line-height: 48rpx; text-align: center; background-color: #3a3a3a; color: #fff; font-size: 24rpx; font-weight: bold; border-radius: 8rpx; margin-bottom: 15rpx; }
.model-name { font-size: 28rpx; font-weight: bold; color: #e8e8e8; margin-bottom: 10rpx; }
.tag-list { display: flex; gap: 8rpx; flex-wrap: wrap; }
.tag { font-size: 20rpx; background-color: #3a3a3a; color: #a6a6a6; padding: 4rpx 10rpx; border-radius: 6rpx; }
.check-icon { position: absolute; top: 10rpx; right: 10rpx; font-size: 24rpx; color: #00A9FF; opacity: 0; transform: scale(0.5); transition: all 0.3s ease; }
.model-chip-pro.checked .check-icon { opacity: 1; transform: scale(1); }

/* 主操作按钮 */
.main-action-section { width: 100%; }
.scan-button { width: 100%; height: 96rpx; background-image: linear-gradient(to top, #00F5A0, #00D18C); color: #141414; font-size: 32rpx; font-weight: bold; border-radius: 48rpx; box-shadow: 0 4rpx 15rpx rgba(0, 245, 160, 0.2); border: none; display: flex; align-items: center; justify-content: center; padding: 0; }
.scan-button:active { transform: scale(0.98); box-shadow: 0 2rpx 10rpx rgba(0, 245, 160, 0.3); }

/* 进度条 */
.progress-section { width: 100%; margin-top: 60rpx; text-align: center; }
.progress-bar-container { 
  width: 100%; 
  height: 16rpx; 
  background-color: #262626; 
  border-radius: 8rpx; 
  overflow: hidden;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}
.progress-bar { 
  height: 100%; 
  background: linear-gradient(90deg, #00A9FF, #00F5A0); 
  transition: width 0.5s ease;
  position: relative;
  overflow: hidden;
}

/* P2 新增：进度条流光特效 */
.progress-bar::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(255, 255, 255, 0.4) 50%,
    transparent 100%
  );
  animation: progress-shine 2s ease-in-out infinite;
}

@keyframes progress-shine {
  0% {
    left: -100%;
  }
  100% {
    left: 100%;
  }
}

/* P2 新增：进度条外发光效果 */
.progress-bar::before {
  content: '';
  position: absolute;
  top: -4rpx;
  left: 0;
  right: 0;
  bottom: -4rpx;
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(0, 169, 255, 0.4) 50%, 
    transparent 100%);
  filter: blur(10rpx);
  opacity: 0.6;
  animation: progress-glow 3s ease-in-out infinite;
  z-index: -1;
}

@keyframes progress-glow {
  0%, 100% {
    opacity: 0.4;
  }
  50% {
    opacity: 0.8;
  }
}

.progress-text { font-size: 26rpx; color: #8c8c8c; margin-top: 20rpx; }

/* Debug 区域 */
.debug-section { width: 100%; margin-top: 30rpx; background-color: #1A202C; border: 1rpx solid #303030; border-radius: 16rpx; padding: 30rpx; }
.debug-header { margin-bottom: 20rpx; }
.debug-title { font-size: 28rpx; font-weight: bold; color: #FF6B6B; }
.debug-content { background-color: #000; padding: 20rpx; border-radius: 8rpx; max-height: 300rpx; overflow-y: auto; }
.debug-json { font-size: 20rpx; color: #ccc; font-family: monospace; white-space: pre-wrap; word-break: break-all; }

/* 配置管理链接 */
.config-manager-link-section { margin-top: 32rpx; width: 100%; }
.config-manager-link { display: flex; justify-content: space-between; align-items: center; background-color: #1A202C; border: 1rpx solid #303030; border-radius: 16rpx; padding: 30rpx; }

/* 权限管理链接 */
.permission-manager-link-section { margin-top: 32rpx; width: 100%; }
.permission-manager-link { display: flex; justify-content: space-between; align-items: center; background-color: #1A202C; border: 1rpx solid #303030; border-radius: 16rpx; padding: 30rpx; }

/* 数据管理链接 */
.data-manager-link-section { margin-top: 32rpx; width: 100%; }
.data-manager-link { display: flex; justify-content: space-between; align-items: center; background-color: #1A202C; border: 1rpx solid #303030; border-radius: 16rpx; padding: 30rpx; }

/* 使用指南链接 */
.user-guide-link-section { margin-top: 32rpx; width: 100%; }
.user-guide-link { display: flex; justify-content: space-between; align-items: center; background-color: #1A202C; border: 1rpx solid #303030; border-radius: 16rpx; padding: 30rpx; }

/* 历史记录 */
.history-link-section { margin-top: 32rpx; width: 100%; }
.history-link { display: flex; justify-content: space-between; align-items: center; background-color: #1A202C; border: 1rpx solid #303030; border-radius: 16rpx; padding: 30rpx; }

/* 服务器设置 */
.server-setting-section { margin-top: 32rpx; width: 100%; }
.server-setting-link { display: flex; justify-content: space-between; align-items: center; background-color: #1A202C; border: 1rpx solid #303030; border-radius: 16rpx; padding: 30rpx; }
.history-link-left { display: flex; flex-direction: column; }
.history-title { font-size: 30rpx; font-weight: bold; color: #e8e8e8; margin-bottom: 8rpx; }
.history-subtitle { font-size: 24rpx; color: #8c8c8c; }
.history-link-right .arrow-right { font-size: 40rpx; color: #8c8c8c; }


/* ========== 诊断完成后的按钮样式 ========== */

/* 隐藏类 */
.hidden {
  display: none !important;
}

/* 完成状态徽章 */
.completed-actions {
  animation: fadeInUp 0.5s ease-out;
}

.completed-badge {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, rgba(39, 174, 96, 0.1) 0%, rgba(39, 174, 96, 0.05) 100%);
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid rgba(39, 174, 96, 0.3);
}

.badge-icon {
  font-size: 32rpx;
}

.badge-text {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--success-color, #27ae60);
}

.badge-time {
  font-size: 22rpx;
  color: var(--text-secondary, #7f8c8d);
  margin-left: 8rpx;
}

/* 完成后的按钮组 */
.completed-buttons {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.btn-primary-view {
  height: 88rpx;
  background: linear-gradient(135deg, var(--primary-color, #1a1a2e) 0%, var(--accent-color, #0f3460) 100%);
  color: var(--text-light, #ffffff);
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 44rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(26, 26, 46, 0.3);
  transition: all 0.3s ease;
}

.btn-primary-view:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.btn-primary-view .btn-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

.btn-secondary-retry {
  height: 72rpx;
  background: var(--bg-color, #f5f6fa);
  color: var(--text-primary, #2c3e50);
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 36rpx;
  border: 2rpx solid rgba(26, 26, 46, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.btn-secondary-retry:active {
  transform: scale(0.98);
  background: rgba(26, 26, 46, 0.05);
}

.btn-secondary-retry .btn-icon {
  margin-right: 10rpx;
  font-size: 28rpx;
}

/* 按钮内容布局优化 */
.button-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.button-icon {
  font-size: 32rpx;
}

/* 加载动画 */
.loading-spinner {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 36rpx;
  height: 36rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: translateY(-50%) rotate(360deg); }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ========== 【P1 新增】输入恢复提示样式 ========== */
.input-restore-banner {
  margin: 24rpx 0;
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(147, 51, 234, 0.1) 100%);
  border-radius: 16rpx;
  border: 2rpx solid rgba(59, 130, 246, 0.3);
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s ease;
}

.input-restore-banner.hidden {
  display: none;
}

.banner-content {
  flex: 1;
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.banner-icon {
  font-size: 48rpx;
  flex-shrink: 0;
}

.banner-text {
