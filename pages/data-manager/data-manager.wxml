<view class="page-container container">
  <!-- 页面头部 -->
  <view class="page-header">
    <text class="page-title">数据管理</text>
    <text class="page-subtitle">管理您的本地和云端数据</text>
  </view>

  <!-- 存储使用情况 -->
  <view class="storage-section">
    <text class="section-title">存储使用情况</text>
    <view class="storage-card">
      <view class="storage-info">
        <text class="storage-used">{{storageUsed}} / {{storageTotal}} MB</text>
        <text class="storage-percent">{{storagePercent}}%</text>
      </view>
      <view class="storage-bar">
        <view class="storage-fill" style="width: {{storagePercent}}%;"></view>
      </view>
      <text class="storage-status {{storageStatusClass}}">{{storageStatus}}</text>
    </view>
  </view>

  <!-- 数据统计 -->
  <view class="data-stats-section">
    <text class="section-title">数据统计</text>
    <view class="stats-grid">
      <view class="stat-item">
        <text class="stat-value">{{localHistoryCount}}</text>
        <text class="stat-label">本地历史</text>
      </view>
      <view class="stat-item">
        <text class="stat-value">{{savedResultsCount}}</text>
        <text class="stat-label">保存结果</text>
      </view>
      <view class="stat-item">
        <text class="stat-value">{{syncedResultsCount}}</text>
        <text class="stat-label">已同步</text>
      </view>
      <view class="stat-item">
        <text class="stat-value">{{pendingSyncCount}}</text>
        <text class="stat-label">待同步</text>
      </view>
    </view>
  </view>

  <!-- 数据操作 -->
  <view class="data-actions-section">
    <text class="section-title">数据操作</text>
    <view class="action-item">
      <text class="action-label">同步数据</text>
      <button class="action-btn sync-btn" bindtap="syncData">立即同步</button>
    </view>
    <view class="action-item">
      <text class="action-label">清理缓存</text>
      <button class="action-btn clean-btn" bindtap="cleanCache">清理缓存</button>
    </view>
    <view class="action-item">
      <text class="action-label">备份数据</text>
      <button class="action-btn backup-btn" bindtap="backupData">备份数据</button>
    </view>
    <view class="action-item">
      <text class="action-label">恢复数据</text>
      <button class="action-btn restore-btn" bindtap="restoreData">恢复数据</button>
    </view>
  </view>

  <!-- 数据安全 -->
  <view class="data-security-section">
    <text class="section-title">数据安全</text>
    <view class="security-item">
      <text class="security-label">数据加密</text>
      <switch class="security-switch" checked="{{dataEncrypted}}" bindchange="toggleEncryption" />
    </view>
    <view class="security-item">
      <text class="security-label">自动备份</text>
      <switch class="security-switch" checked="{{autoBackupEnabled}}" bindchange="toggleAutoBackup" />
    </view>
  </view>

  <!-- 操作按钮 -->
  <view class="action-buttons">
    <button class="action-btn main-btn" bindtap="goHome">返回首页</button>
  </view>
</view>