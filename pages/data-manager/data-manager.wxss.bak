/* pages/data-manager/data-manager.wxss */

page {
  background-color: #121826;
  color: #e8e8e8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 40rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background: linear-gradient(135deg, #1a1f29 0%, #121826 100%);
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 60rpx;
}
.page-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #FFFFFF;
  display: block;
  margin-bottom: 20rpx;
}
.page-subtitle {
  font-size: 28rpx;
  color: #8c8c8c;
  display: block;
}

/* 存储使用情况部分 */
.storage-section {
  margin-bottom: 60rpx;
}
.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #e8e8e8;
  display: block;
  margin-bottom: 30rpx;
}
.storage-card {
  background-color: #1A202C;
  border: 1rpx solid #303030;
  border-radius: 16rpx;
  padding: 30rpx;
}
.storage-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.storage-used {
  font-size: 28rpx;
  color: #e8e8e8;
}
.storage-percent {
  font-size: 28rpx;
  font-weight: bold;
  color: #00F5A0;
}
.storage-bar {
  height: 24rpx;
  background-color: #262626;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}
.storage-fill {
  height: 100%;
  background: linear-gradient(90deg, #00A9FF, #00F5A0);
  border-radius: 12rpx;
  transition: width 0.5s ease;
}
.storage-status {
  font-size: 24rpx;
  text-align: center;
}
.storage-status.warning {
  color: #FF8C00;
}
.storage-status.danger {
  color: #ff4d4f;
}
.storage-status.safe {
  color: #00F5A0;
}

/* 数据统计部分 */
.data-stats-section {
  margin-bottom: 60rpx;
}
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}
.stat-item {
  background-color: #1A202C;
  border: 1rpx solid #303030;
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: center;
}
.stat-value {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #00F5A0;
  margin-bottom: 10rpx;
}
.stat-label {
  display: block;
  font-size: 24rpx;
  color: #8c8c8c;
}

/* 数据操作部分 */
.data-actions-section {
  margin-bottom: 60rpx;
}
.action-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #1A202C;
  border: 1rpx solid #303030;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.action-label {
  font-size: 28rpx;
  color: #e8e8e8;
}
.action-btn {
  height: 60rpx;
  padding: 0 30rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}
.sync-btn {
  background: linear-gradient(to right, #00F5A0, #00D18C);
  color: #141414;
}
.clean-btn {
  background: linear-gradient(to right, #ff6b6b, #ff5252);
  color: #fff;
}
.backup-btn {
  background: linear-gradient(to right, #00A9FF, #0088cc);
  color: #fff;
}
.restore-btn {
  background: linear-gradient(to right, #FFD930, #FFC53D);
  color: #141414;
}

/* 数据安全部分 */
.data-security-section {
  margin-bottom: 60rpx;
}
.security-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #1A202C;
  border: 1rpx solid #303030;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.security-label {
  font-size: 28rpx;
  color: #e8e8e8;
}
.security-switch {
  transform: scale(0.8);
}

/* 操作按钮部分 */
.action-buttons {
  display: flex;
  justify-content: center;
}
.main-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(to right, #00F5A0, #00D18C);
  color: #141414;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}