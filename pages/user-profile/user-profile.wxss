/* pages/user-profile/user-profile.wxss */

.container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar {
  position: relative;
  margin-bottom: 30rpx;
}

.avatar-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.avatar-edit {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 50rpx;
  height: 50rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.avatar-edit .icon-edit {
  color: #667eea;
  font-size: 28rpx;
}

.nickname-section {
  width: 100%;
}

.nickname-input {
  width: 100%;
  background-color: rgba(255, 255, 255, 0.2);
  border: none;
  border-radius: 10rpx;
  padding: 20rpx 30rpx;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
}

.nickname-input::placeholder {
  color: rgba(255, 255, 255, 0.6);
}

/* 用户信息列表 */
.info-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-item .label {
  color: #666;
  font-size: 28rpx;
  font-weight: 500;
}

.info-item .value {
  color: #333;
  font-size: 28rpx;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 操作按钮 */
.action-section {
  margin-bottom: 30rpx;
}

.save-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 28rpx 0;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.save-btn[loading] {
  opacity: 0.8;
}

.logout-btn {
  background-color: #fff;
  color: #ff4d4f;
  border: 2rpx solid #ff4d4f;
  border-radius: 50rpx;
  padding: 26rpx 0;
  font-size: 30rpx;
  font-weight: 500;
}
