<view class="container">
  <!-- 头部 -->
  <view class="header">
    <view class="avatar">
      <image class="avatar-img" src="{{avatarUrl || '/images/default-avatar.png'}}" mode="aspectFill"></image>
      <view class="avatar-edit" bindtap="chooseAvatar">
        <text class="iconfont icon-edit"></text>
      </view>
    </view>
    <view class="nickname-section">
      <input 
        class="nickname-input" 
        value="{{nickname}}" 
        placeholder="点击设置昵称"
        bindinput="onNicknameInput"
        maxlength="20"
      />
    </view>
  </view>

  <!-- 用户信息列表 -->
  <view class="info-section">
    <view class="info-item">
      <text class="label">用户 ID</text>
      <text class="value">{{userId || '-'}}</text>
    </view>
    
    <view class="info-item">
      <text class="label">手机号</text>
      <text class="value">{{phone || '-'}}</text>
    </view>
    
    <view class="info-item">
      <text class="label">注册时间</text>
      <text class="value">{{createdAt || '-'}}</text>
    </view>
  </view>

  <!-- 保存按钮 -->
  <view class="action-section">
    <button class="save-btn" bindtap="saveProfile" loading="{{saving}}">
      保存
    </button>
  </view>

  <!-- 退出登录按钮 -->
  <view class="action-section">
    <button class="logout-btn" bindtap="logout">
      退出登录
    </button>
  </view>
</view>
