/* pages/detail/index.wxss */
/* P0 视觉优化：从"战局中心"到"商业仪表盘" */

.page-container {
  background: linear-gradient(180deg, #0a0e14 0%, #1a1f2c 100%);
  color: #e8e8e8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.detail-container {
  position: relative;
  padding: 40rpx;
  min-height: 100vh;
  box-sizing: border-box;
  overflow: hidden;
  background: linear-gradient(180deg, #0a0e14 0%, #1a1f2c 100%);
}

/* 动态背景 */
.particle-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  opacity: 0.6;
}

.content-wrapper {
  position: relative;
  z-index: 2;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 标题区域 - 左对齐，模仿彭博终端 */
.title-section {
  text-align: left;
  margin-bottom: 60rpx;
  width: 100%;
  padding-left: 10rpx;
}

.main-title {
  font-size: 44rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #ffd700 0%, #ffb347 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: 2rpx;
  display: block;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  font-weight: 300;
  letter-spacing: 1rpx;
  display: block;
}

/* 时间预估区域 - 毛玻璃效果增强 */
.time-estimation-section {
  width: 100%;
  margin-bottom: 40rpx;
  padding: 40rpx;
  background: rgba(255, 255, 255, 0.03);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
}

.time-estimate {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.estimate-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  font-weight: 300;
}

.estimate-value {
  font-size: 36rpx;
  background: linear-gradient(135deg, #ffd700 0%, #ffb347 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: 700;
  margin-left: 12rpx;
  font-family: 'DIN', 'Courier New', monospace;
}

/* 【P2-9 新增】网络质量显示样式 */
.network-quality-display {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
  padding: 10rpx 20rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 8rpx;
  gap: 10rpx;
}

.quality-label {
  font-size: 22rpx;
  color: #8c8c8c;
}

.quality-value {
  font-size: 24rpx;
  font-weight: 500;
}

.quality-value.excellent {
  color: #22c55e;
}

.quality-value.good {
  color: #3b82f6;
}

.quality-value.fair {
  color: #f59e0b;
}

.quality-value.poor,
.quality-value.bad {
  color: #ef4444;
}

/* 【P2-10 新增】订阅消息按钮样式 */
.subscribe-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 15rpx;
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(147, 51, 234, 0.2) 100%);
  border: 1rpx solid rgba(147, 51, 234, 0.3);
  border-radius: 12rpx;
  gap: 10rpx;
  width: fit-content;
  margin-left: auto;
  margin-right: auto;
  transition: all 0.3s ease;
}

.subscribe-btn:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.3) 0%, rgba(147, 51, 234, 0.3) 100%);
}

.subscribe-btn.subscribed {
  background: rgba(34, 197, 94, 0.1);
  border-color: rgba(34, 197, 94, 0.3);
}

.subscribe-icon {
  font-size: 28rpx;
}

.subscribe-text {
  font-size: 24rpx;
  color: #9333EA;
  font-weight: 500;
}

.subscribe-btn.subscribed .subscribe-text {
  color: #22c55e;
}

/* 【P2-8 新增】取消诊断按钮样式 */
.cancel-diagnosis-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  padding: 12rpx 24rpx;
  background: rgba(244, 67, 54, 0.1);
  border: 1rpx solid rgba(244, 67, 54, 0.3);
  border-radius: 12rpx;
  gap: 10rpx;
  width: fit-content;
  margin-left: auto;
  margin-right: auto;
}

.cancel-diagnosis-btn:active {
  background: rgba(244, 67, 54, 0.2);
  transform: scale(0.98);
}

.cancel-icon {
  font-size: 28rpx;
}

.cancel-text {
  font-size: 24rpx;
  color: #F44336;
  font-weight: 500;
}

/* 进度条容器 - 毛玻璃效果 */
.progress-container {
  width: 100%;
  height: 16rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  position: relative;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.08);
}

/* 【P0 优化】进度条：科技金配色 + 流光动画 */
.progress-inner {
  height: 100%;
  background: linear-gradient(90deg, #ffd700 0%, #ffb347 50%, #ffd700 100%);
  border-radius: 8rpx;
  transition: width 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  box-shadow: 0 0 20rpx rgba(255, 215, 0, 0.6);
}

/* 【P0 新增】进度条流光动画 */
.progress-inner::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255,255,255,0.4),
    transparent
  );
  animation: shine 2s infinite;
}

@keyframes shine {
  0% {
    left: -100%;
  }
  100% {
    left: 100%;
  }
}

/* 【P1-5 新增】进度条脉冲效果 (接近完成时) */
.progress-inner.near-complete {
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0%, 100% {
    box-shadow: 0 0 20rpx rgba(255, 215, 0, 0.8);
  }
  50% {
    box-shadow: 0 0 35rpx rgba(255, 215, 0, 1);
  }
}

/* 进度文本容器 */
.progress-text-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  flex: 1;
  font-weight: 300;
}

.progress-percentage {
  font-size: 32rpx;
  background: linear-gradient(135deg, #ffd700 0%, #ffb347 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: 700;
  font-family: 'DIN', 'Courier New', monospace;
}

/* 惊喜消息 */
.surprise-message {
  margin: 20rpx 0;
  padding: 20rpx;
  background: rgba(0, 242, 255, 0.1);
  border: 1px solid #00F2FF;
  border-radius: 12rpx;
  text-align: center;
}

.surprise-text {
  font-size: 26rpx;
  color: #00F2FF;
  font-weight: bold;
}

/* 【P0 新增】预计剩余时间 */
.remaining-time {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 15rpx 0;
  padding: 12rpx 24rpx;
  background: rgba(255, 193, 7, 0.1);
  border: 1rpx solid rgba(255, 193, 7, 0.3);
  border-radius: 12rpx;
}

.remaining-label {
  font-size: 24rpx;
  color: #FFC107;
  margin-right: 8rpx;
}

.remaining-value {
  font-size: 28rpx;
  color: #FFC107;
  font-weight: bold;
  font-family: 'Courier New', 'DIN', monospace;
}

/* 【P0 新增】任务状态区域 */
.task-status-section {
  margin: 20rpx 0;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.status-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.status-row.completed .status-icon {
  font-size: 28rpx;
}

.status-row.current .status-icon {
  font-size: 28rpx;
  animation: spin 2s linear infinite;
}

.status-row.pending .status-icon {
  font-size: 28rpx;
}

.status-label {
  font-size: 24rpx;
  color: #8c8c8c;
}

.status-value {
  font-size: 26rpx;
  color: #FFFFFF;
  font-weight: 500;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 【P0 新增】后台运行按钮 */
.background-run-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
  padding: 24rpx 32rpx;
  background: linear-gradient(135deg, rgba(26, 26, 46, 0.8) 0%, rgba(15, 52, 96, 0.8) 100%);
  border: 2rpx solid rgba(0, 242, 255, 0.3);
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.background-run-btn:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, rgba(26, 26, 46, 0.9) 0%, rgba(15, 52, 96, 0.9) 100%);
}

.btn-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.btn-text {
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 600;
  margin-bottom: 6rpx;
}

.btn-hint {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 【P1-4 新增】进度警告样式 */
.progress-warning {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 15rpx 0;
  padding: 16rpx 24rpx;
  background: rgba(255, 152, 0, 0.1);
  border: 1rpx solid rgba(255, 152, 0, 0.3);
  border-radius: 12rpx;
  gap: 10rpx;
}

.warning-icon {
  font-size: 32rpx;
}

.warning-text {
  font-size: 24rpx;
  color: #FF9800;
  font-weight: 500;
}

/* 【P1-6 新增】阶段说明样式 */
.stage-description {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 15rpx 0;
  padding: 12rpx 24rpx;
  background: rgba(0, 242, 255, 0.05);
  border: 1rpx solid rgba(0, 242, 255, 0.2);
  border-radius: 12rpx;
  gap: 10rpx;
}

.stage-label {
  font-size: 24rpx;
  color: #00F2FF;
}

.stage-value {
  font-size: 26rpx;
  color: #FFFFFF;
  font-weight: 500;
}

/* 【P0 新增】Insight Pulse 智能知识跑马灯样式 */
.insight-pulse-container {
  margin-top: 30rpx;
  padding: 30rpx;
  background: rgba(255, 215, 0, 0.05);
  border: 1px solid rgba(255, 215, 0, 0.2);
  border-radius: 16rpx;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  animation: pulseFadeIn 0.8s ease-out;
}

@keyframes pulseFadeIn {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.insight-pulse-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  gap: 10rpx;
}

.pulse-icon {
  font-size: 28rpx;
  animation: pulseGlow 2s infinite;
}

@keyframes pulseGlow {
  0%, 100% {
    opacity: 0.6;
  }
  50% {
    opacity: 1;
  }
}

.pulse-title {
  font-size: 24rpx;
  background: linear-gradient(135deg, #ffd700 0%, #ffb347 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.insight-pulse-content {
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 12rpx;
  border-left: 4rpx solid #ffd700;
}

.insight-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
  font-weight: 300;
  display: block;
}



.explanation-icon {
  font-size: 32rpx;
}

.explanation-text {
  font-size: 24rpx;
  color: #673AB7;
  font-weight: 500;
}

/* 【P0 新增】诊断知识科普 */
.knowledge-section {
  display: flex;
  align-items: flex-start;
  margin-top: 25rpx;
  padding: 20rpx;
  background: rgba(0, 242, 255, 0.05);
  border: 1rpx solid rgba(0, 242, 255, 0.2);
  border-radius: 12rpx;
  gap: 15rpx;
}

.knowledge-icon {
  font-size: 40rpx;
  flex-shrink: 0;
}

.knowledge-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.knowledge-title {
  font-size: 24rpx;
  color: #00F2FF;
  font-weight: 600;
}

.knowledge-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
}

/* 数据流动画 */
.data-flow-animation {
  display: flex;
  justify-content: center;
  gap: 10rpx;
  margin-top: 15rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background: #00F2FF; /* 科技青 */
  border-radius: 50%;
  animation: pulse 1.5s infinite ease-in-out;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.4;
    transform: scale(0.8);
  }
  50% {
    opacity: 1;
    transform: scale(1.2);
  }
}

/* 视图切换器容器 */
.view-switcher-container {
  width: 100%;
  margin: 20rpx 0 40rpx 0;
}

/* 透视切换器容器 */
.pivot-switcher-container {
  width: 100%;
  margin: 20rpx 0 40rpx 0;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.pivot-switcher {
  position: relative;
  width: 100%;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.05); /* 玻璃拟态 */
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 40rpx;
  backdrop-filter: blur(10px); /* 玻璃拟态模糊 */
  display: flex;
  overflow: hidden;
}

.switcher-option {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  z-index: 2;
  color: #8c8c8c;
  font-size: 28rpx;
  font-weight: 500;
}

.switcher-option.active {
  color: #00F2FF; /* 高亮科技青 */
}

.switcher-slider {
  position: absolute;
  top: 4rpx;
  height: calc(100% - 8rpx);
  width: calc(50% - 20rpx);
  background: linear-gradient(135deg, #00F2FF 0%, #00C853 100%); /* 科技青到绿渐变 */
  border-radius: 36rpx;
  transition: transform 0.3s ease;
  z-index: 1;
}

.slide-to-panorama {
  transform: translateX(20rpx);
}

.slide-to-model {
  transform: translateX(calc(100% + 20rpx));
}

/* 选择器容器 */
.selector-container {
  width: 100%;
  margin-bottom: 40rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.picker-view {
  display: flex;
  align-items: center;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.05); /* 玻璃拟态 */
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 0 30rpx;
  backdrop-filter: blur(10px); /* 玻璃拟态模糊 */
}

.picker-label {
  font-size: 26rpx;
  color: #8c8c8c;
  margin-right: 10rpx;
}

.picker-value {
  font-size: 28rpx;
  color: #00F2FF; /* 高亮科技青 */
  font-weight: bold;
  flex: 1;
}

.picker-icon {
  font-size: 24rpx;
  color: #8c8c8c;
}

/* 战略对阵矩阵容器 */
.battlefield-matrix-container {
  width: 100%;
  height: 800rpx;
  margin-bottom: 40rpx;
}

.matrix-scroll {
  width: 100%;
  height: 100%;
}

.matrix-grid {
  display: inline-block;
  min-width: 100%;
}

.grid-header {
  display: flex;
  width: fit-content;
}

.grid-body {
  width: fit-content;
}

.grid-row {
  display: flex;
  width: fit-content;
}

.cell {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 180rpx;
  height: 120rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1px solid rgba(255, 255, 255, 0.1);
  background-color: rgba(255, 255, 255, 0.05); /* 玻璃拟态背景 */
  backdrop-filter: blur(10px); /* 玻璃拟态模糊 */
  border-radius: 8rpx;
  margin-right: -1px;
  margin-bottom: -1px;
}

.header-cell {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.15) 100%);
  font-weight: bold;
  color: #00F2FF; /* 高亮科技青 */
  font-size: 24rpx;
}

.corner-cell {
  min-width: 250rpx;
  background: linear-gradient(135deg, rgba(0, 242, 255, 0.1) 0%, rgba(0, 242, 255, 0.2) 100%);
}

.question-cell {
  min-width: 250rpx;
  background: linear-gradient(135deg, rgba(0, 242, 255, 0.05) 0%, rgba(0, 242, 255, 0.1) 100%);
  align-items: flex-start;
  text-align: left;
}

.question-text {
  font-size: 24rpx;
  color: #e8e8e8;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-align: left;
  word-break: break-all;
}

.score-cell {
  cursor: pointer;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  position: relative;
  overflow: hidden;
}

.score-cell::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(0, 242, 255, 0.1) 0%, rgba(0, 242, 255, 0.2) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: 0;
}

.score-cell:hover {
  transform: scale(1.05);
  box-shadow: 0 0 15rpx rgba(0, 242, 255, 0.5);
}

.score-cell:hover::before {
  opacity: 1;
}

.score-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #e8e8e8;
  font-family: 'Courier New', 'DIN', monospace; /* 等宽字体 */
  position: relative;
  z-index: 1;
}

/* 固定左侧列 */
.sticky-left {
  position: sticky;
  left: 0;
  z-index: 5;
  background: linear-gradient(135deg, rgba(0, 242, 255, 0.05) 0%, rgba(0, 242, 255, 0.1) 100%);
}

/* 品牌标签呼吸动画 */
.brand-label {
  animation: breathe 2s ease-in-out infinite alternate;
}

@keyframes breathe {
  0% {
    opacity: 0.7;
  }
  100% {
    opacity: 1;
  }
}

/* 统计概览 */
.stats-overview {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-top: 40rpx;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.05); /* 玻璃拟态 */
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  backdrop-filter: blur(10px); /* 玻璃拟态模糊 */
}

.stat-card {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 24rpx;
  color: #8c8c8c;
  margin-bottom: 10rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #00F2FF; /* 高亮科技青 */
}

.number-font {
  font-family: 'Courier New', 'DIN', monospace;
  font-weight: bold;
}

/* ========== 【阶段 1】实时统计样式 ========== */
.realtime-stats-container {
  margin: 24rpx 0;
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(147, 51, 234, 0.1) 100%);
  border-radius: 16rpx;
  border: 2rpx solid rgba(59, 130, 246, 0.3);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
