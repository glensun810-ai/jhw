/* pages/detail/index.wxss */
page {
  background-color: #0D1117; /* 深空黑 */
  color: #e8e8e8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.detail-container {
  position: relative;
  padding: 40rpx;
  min-height: 100vh;
  box-sizing: border-box;
  overflow: hidden;
  background-color: #0D1117; /* 深空黑 */
}

/* 动态背景 */
.particle-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.content-wrapper {
  position: relative;
  z-index: 2;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 标题区域 */
.title-section {
  text-align: center;
  margin-bottom: 60rpx;
  width: 100%;
}

.main-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #00F2FF; /* 高亮科技青 */
  letter-spacing: 4rpx;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: #8c8c8c;
  margin-top: 20rpx;
  display: block;
}

/* 时间预估区域 */
.time-estimation-section {
  width: 100%;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.05); /* 玻璃拟态 */
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  backdrop-filter: blur(10px); /* 玻璃拟态模糊 */
}

.time-estimate {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.estimate-label {
  font-size: 26rpx;
  color: #8c8c8c;
}

.estimate-value {
  font-size: 32rpx;
  color: #00F2FF; /* 高亮科技青 */
  font-weight: bold;
  margin-left: 10rpx;
  font-family: 'Courier New', 'DIN', monospace; /* 等宽字体 */
}

/* 进度条容器 */
.progress-container {
  width: 100%;
  height: 12rpx;
  background: rgba(255, 255, 255, 0.1); /* 玻璃拟态背景 */
  border-radius: 6rpx;
  margin-bottom: 15rpx;
  overflow: hidden;
  position: relative;
}

.progress-inner {
  height: 100%;
  background: linear-gradient(90deg, #0066FF 0%, #00F2FF 100%); /* 从深蓝到科技青渐变 */
  border-radius: 6rpx;
  transition: width 0.3s ease;
  position: relative;
}

/* 进度文本容器 */
.progress-text-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #8c8c8c;
  flex: 1;
}

.progress-percentage {
  font-size: 28rpx;
  color: #00F2FF; /* 高亮科技青 */
  font-weight: bold;
  font-family: 'Courier New', 'DIN', monospace; /* 等宽字体 */
}

/* 惊喜消息 */
.surprise-message {
  margin: 20rpx 0;
  padding: 20rpx;
  background: rgba(0, 242, 255, 0.1); /* 科技青半透明背景 */
  border: 1px solid #00F2FF;
  border-radius: 12rpx;
  text-align: center;
}

.surprise-text {
  font-size: 26rpx;
  color: #00F2FF; /* 高亮科技青 */
  font-weight: bold;
}

/* 数据流动画 */
.data-flow-animation {
  display: flex;
  justify-content: center;
  gap: 10rpx;
  margin-top: 15rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background: #00F2FF; /* 科技青 */
  border-radius: 50%;
  animation: pulse 1.5s infinite ease-in-out;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.4;
    transform: scale(0.8);
  }
  50% {
    opacity: 1;
    transform: scale(1.2);
  }
}

/* 视图切换器容器 */
.view-switcher-container {
  width: 100%;
  margin: 20rpx 0 40rpx 0;
}

/* 透视切换器容器 */
.pivot-switcher-container {
  width: 100%;
  margin: 20rpx 0 40rpx 0;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.pivot-switcher {
  position: relative;
  width: 100%;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.05); /* 玻璃拟态 */
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 40rpx;
  backdrop-filter: blur(10px); /* 玻璃拟态模糊 */
  display: flex;
  overflow: hidden;
}

.switcher-option {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  z-index: 2;
  color: #8c8c8c;
  font-size: 28rpx;
  font-weight: 500;
}

.switcher-option.active {
  color: #00F2FF; /* 高亮科技青 */
}

.switcher-slider {
  position: absolute;
  top: 4rpx;
  height: calc(100% - 8rpx);
  width: calc(50% - 20rpx);
  background: linear-gradient(135deg, #00F2FF 0%, #00C853 100%); /* 科技青到绿渐变 */
  border-radius: 36rpx;
  transition: transform 0.3s ease;
  z-index: 1;
}

.slide-to-panorama {
  transform: translateX(20rpx);
}

.slide-to-model {
  transform: translateX(calc(100% + 20rpx));
}

/* 选择器容器 */
.selector-container {
  width: 100%;
  margin-bottom: 40rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.picker-view {
  display: flex;
  align-items: center;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.05); /* 玻璃拟态 */
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 0 30rpx;
  backdrop-filter: blur(10px); /* 玻璃拟态模糊 */
}

.picker-label {
  font-size: 26rpx;
  color: #8c8c8c;
  margin-right: 10rpx;
}

.picker-value {
  font-size: 28rpx;
  color: #00F2FF; /* 高亮科技青 */
  font-weight: bold;
  flex: 1;
}

.picker-icon {
  font-size: 24rpx;
  color: #8c8c8c;
}

/* 战略对阵矩阵容器 */
.battlefield-matrix-container {
  width: 100%;
  height: 800rpx;
  margin-bottom: 40rpx;
}

.matrix-scroll {
  width: 100%;
  height: 100%;
}

.matrix-grid {
  display: inline-block;
  min-width: 100%;
}

.grid-header {
  display: flex;
  width: fit-content;
}

.grid-body {
  width: fit-content;
}

.grid-row {
  display: flex;
  width: fit-content;
}

.cell {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 180rpx;
  height: 120rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1px solid rgba(255, 255, 255, 0.1);
  background-color: rgba(255, 255, 255, 0.05); /* 玻璃拟态背景 */
  backdrop-filter: blur(10px); /* 玻璃拟态模糊 */
  border-radius: 8rpx;
  margin-right: -1px;
  margin-bottom: -1px;
}

.header-cell {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.15) 100%);
  font-weight: bold;
  color: #00F2FF; /* 高亮科技青 */
  font-size: 24rpx;
}

.corner-cell {
  min-width: 250rpx;
  background: linear-gradient(135deg, rgba(0, 242, 255, 0.1) 0%, rgba(0, 242, 255, 0.2) 100%);
}

.question-cell {
  min-width: 250rpx;
  background: linear-gradient(135deg, rgba(0, 242, 255, 0.05) 0%, rgba(0, 242, 255, 0.1) 100%);
  align-items: flex-start;
  text-align: left;
}

.question-text {
  font-size: 24rpx;
  color: #e8e8e8;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-align: left;
  word-break: break-all;
}

.score-cell {
  cursor: pointer;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  position: relative;
  overflow: hidden;
}

.score-cell::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(0, 242, 255, 0.1) 0%, rgba(0, 242, 255, 0.2) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: 0;
}

.score-cell:hover {
  transform: scale(1.05);
  box-shadow: 0 0 15rpx rgba(0, 242, 255, 0.5);
}

.score-cell:hover::before {
  opacity: 1;
}

.score-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #e8e8e8;
  font-family: 'Courier New', 'DIN', monospace; /* 等宽字体 */
  position: relative;
  z-index: 1;
}

/* 固定左侧列 */
.sticky-left {
  position: sticky;
  left: 0;
  z-index: 5;
  background: linear-gradient(135deg, rgba(0, 242, 255, 0.05) 0%, rgba(0, 242, 255, 0.1) 100%);
}

/* 品牌标签呼吸动画 */
.brand-label {
  animation: breathe 2s ease-in-out infinite alternate;
}

@keyframes breathe {
  0% {
    opacity: 0.7;
  }
  100% {
    opacity: 1;
  }
}

/* 统计概览 */
.stats-overview {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-top: 40rpx;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.05); /* 玻璃拟态 */
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  backdrop-filter: blur(10px); /* 玻璃拟态模糊 */
}

.stat-card {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 24rpx;
  color: #8c8c8c;
  margin-bottom: 10rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #00F2FF; /* 高亮科技青 */
}

.number-font {
  font-family: 'Courier New', 'DIN', monospace;
  font-weight: bold;
}