/**
 * MVP 平台选择器页面样式
 */

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  color: white;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

.section {
  background: white;
  margin-bottom: 30rpx;
  padding: 30rpx;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.reset-btn {
  background: #f0f0f0;
  color: #666;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  border: none;
}

.platform-selector {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.platform-option {
  display: flex;
  align-items: center;
  padding: 15rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
}

.platform-option radio {
  margin-right: 15rpx;
}

.input-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.input {
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.input:focus {
  border-color: #1890ff;
}

.questions-container {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.question-item {
  display: flex;
  flex-direction: column;
}

.question-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.question-input {
  width: 100%;
  min-height: 120rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background-color: #fafafa;
}

.question-input:focus {
  border-color: #1890ff;
}

.action-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.start-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
}

.start-btn.disabled {
  background: #cccccc;
  opacity: 0.6;
}

.back-btn {
  background: white;
  color: #666;
  border: 2rpx solid #e0e0e0;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  border: none;
}

.back-btn::after {
  border: none;
}

.progress-section {
  background: white;
  padding: 30rpx;
  border-radius: 15rpx;
  margin-top: 20rpx;
}

.progress-text {
  display: block;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
}

/* 适配高分辨率屏幕 */
@media screen and (min-width: 750px) {
  .container {
    max-width: 750rpx;
    margin: 0 auto;
  }
}