/* MVP首页样式 - 仅使用类选择器 */

.mvp-container {
  padding: 30rpx;
  background: linear-gradient(180deg, #f8f9fa 0%, #f0f2f5 100%);
  min-height: 100vh;
  box-sizing: border-box;
}

/* 头部 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding-top: 20rpx;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #1a1a1a;
  display: block;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
  display: block;
}

/* 输入区域 */
.input-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.input-group {
  margin-bottom: 24rpx;
}

.input-group:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.input {
  height: 88rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #333;
  background: #fafafa;
  transition: border-color 0.2s;
}

.input:focus {
  border-color: #07c160;
  background: #fff;
}

/* 问题区域 */
.questions-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.section-hint {
  font-size: 22rpx;
  color: #999;
}

.question-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.question-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.question-number {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #07c160 0%, #05a050 100%);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 600;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.question-input {
  flex: 1;
  min-height: 100rpx;
  max-height: 200rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  background: #fafafa;
}

.question-input:focus {
  border-color: #07c160;
  background: #fff;
}

/* 平台区域 */
.platform-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.platform-tag {
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 32rpx;
  background: linear-gradient(135deg, #07c160 0%, #05a050 100%);
  border-radius: 40rpx;
  margin-top: 16rpx;
}

.platform-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
}

.platform-badge {
  font-size: 20rpx;
  color: #07c160;
  background: rgba(255, 255, 255, 0.95);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

/* 启动按钮 */
.start-btn {
  height: 100rpx;
  line-height: 100rpx;
  background: linear-gradient(135deg, #07c160 0%, #05a050 100%);
  color: #fff;
  font-size: 34rpx;
  font-weight: 600;
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s;
}

.start-btn::after {
  border: none;
}

.start-btn.disabled {
  background: #ccc;
  box-shadow: none;
}

/* 进度区域 */
.progress-section {
  margin-top: 40rpx;
  background: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.status-text {
  text-align: center;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

/* 底部 */
.footer {
  margin-top: 60rpx;
  text-align: center;
  padding-bottom: 40rpx;
}

.footer-link {
  font-size: 28rpx;
  color: #07c160;
  text-decoration: underline;
}
