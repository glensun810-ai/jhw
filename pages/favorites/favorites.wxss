/* pages/favorites/favorites.wxss */
/**
 * 收藏列表页样式
 * 
 * 设计理念:
 * - 清晰的信息层级
 * - 易于操作的交互
 * - 与项目整体风格一致
 */

/* 变量定义 */
page {
  --primary-color: #667eea;
  --primary-dark: #5a67d8;
  --secondary-color: #764ba2;
  --success-color: #27ae60;
  --warning-color: #f39c12;
  --danger-color: #e74c3c;
  --text-primary: #2c3e50;
  --text-secondary: #7f8c8d;
  --text-light: #ffffff;
  --bg-color: #f5f6fa;
  --card-bg: #ffffff;
  --border-radius: 16rpx;
  --shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
}

.container {
  padding: 24rpx;
  padding-bottom: 40rpx;
  background: var(--bg-color);
  min-height: 100vh;
}

/* ====================
   加载状态
   ==================== */
.loading-container {
  padding: 40rpx 0;
}

/* ====================
   统计栏
   ==================== */
.stats-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  color: var(--text-light);
}

.stats-text {
  font-size: 28rpx;
  font-weight: 600;
}

.stats-hint {
  font-size: 24rpx;
  opacity: 0.9;
}

/* ====================
   收藏列表
   ==================== */
.favorites-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 收藏卡片 */
.favorite-card {
  background: var(--card-bg);
  border-radius: var(--border-radius);
  overflow: hidden;
  box-shadow: var(--shadow);
  transition: all 0.3s ease;
}

.favorite-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.06);
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 24rpx 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.brand-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.brand-name {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.favorite-badge {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 6rpx 16rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  border-radius: 20rpx;
  width: fit-content;
}

.favorite-icon {
  font-size: 20rpx;
}

.favorite-text {
  font-size: 22rpx;
  color: var(--text-light);
  font-weight: 600;
}

.card-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 10rpx 20rpx;
  background: #f5f6fa;
  border-radius: 20rpx;
  border: 1rpx solid #e0e0e0;
}

.action-btn-hover {
  background: #ffebee;
}

.action-icon {
  font-size: 24rpx;
}

.action-text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 卡片内容 */
.card-body {
  padding: 24rpx;
}

/* 评分行 */
.score-row {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 20rpx 0;
  margin-bottom: 16rpx;
}

.score-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.score-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.score-value {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.score-value.excellent {
  color: var(--success-color);
}

.score-value.good {
  color: var(--primary-color);
}

.score-value.normal {
  color: var(--text-secondary);
}

.score-value.positive {
  color: var(--success-color);
}

.score-value.negative {
  color: var(--danger-color);
}

.score-divider {
  width: 1rpx;
  height: 60rpx;
  background: #e0e0e0;
}

/* 元信息行 */
.meta-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 0;
}

.meta-icon {
  font-size: 24rpx;
}

.meta-text {
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* 卡片底部 */
.card-footer {
  padding: 0 24rpx 24rpx;
}

.view-detail-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  border-radius: 12rpx;
  color: var(--text-light);
  font-size: 28rpx;
  font-weight: 600;
}

.arrow-icon {
  font-size: 32rpx;
}

/* ====================
   空状态
   ==================== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.empty-subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: 48rpx;
}

.go-home-btn {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
  color: var(--text-light);
  border: none;
  border-radius: 44rpx;
  padding: 24rpx 80rpx;
  font-size: 30rpx;
  font-weight: 600;
}

/* ====================
   错误状态
   ==================== */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.error-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 40rpx;
}

.retry-btn {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
  color: var(--text-light);
  border: none;
  border-radius: 44rpx;
  padding: 24rpx 80rpx;
  font-size: 30rpx;
  font-weight: 600;
}

/* ====================
   动画效果
   ==================== */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.favorite-card {
  animation: fadeIn 0.4s ease-out;
}

.favorite-card:nth-child(1) { animation-delay: 0.05s; }
.favorite-card:nth-child(2) { animation-delay: 0.1s; }
.favorite-card:nth-child(3) { animation-delay: 0.15s; }
.favorite-card:nth-child(4) { animation-delay: 0.2s; }
