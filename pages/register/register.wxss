/* pages/register/register.wxss */

.page-container {
  background-color: #121826;
  color: #e8e8e8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 40rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background: linear-gradient(135deg, #1a1f29 0%, #121826 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 注册头部 */
.register-header {
  text-align: center;
  margin-bottom: 60rpx;
  width: 100%;
}
.logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}
.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #FFFFFF;
  display: block;
  margin-bottom: 20rpx;
}
.subtitle {
  font-size: 28rpx;
  color: #8c8c8c;
  display: block;
}

/* 注册表单 */
.register-form {
  width: 100%;
  max-width: 600rpx;
}

/* 输入框组 */
.input-group {
  margin-bottom: 40rpx;
  position: relative;
}
.input-field {
  width: 100%;
  height: 80rpx;
  background-color: #1A202C;
  border: 1rpx solid #303030;
  border-radius: 16rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #fff;
}
.verify-code-group {
  display: flex;
  align-items: center;
}
.verify-code-input {
  flex: 1;
  margin-right: 20rpx;
}
.verify-code-btn {
  width: 180rpx;
  height: 80rpx;
  background: linear-gradient(to right, #00A9FF, #0088cc);
  color: #fff;
  border-radius: 16rpx;
  font-size: 24rpx;
}
.verify-code-btn[disabled] {
  background: #555;
  opacity: 0.6;
}

/* 注册按钮 */
.register-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(to right, #00F5A0, #00D18C);
  color: #141414;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  margin-bottom: 40rpx;
}
.btn-text {
  font-weight: bold;
}

/* 登录提示 */
.login-tips {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #8c8c8c;
}
.tips-text {
  margin: 0 5rpx;
}
.link-text {
  color: #00A9FF;
  margin: 0 5rpx;
  text-decoration: underline;
}

/* 登录链接 */
.login-link {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  color: #8c8c8c;
  margin-top: 20rpx;
}

/* 协议弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}
.agreement-modal {
  width: 80%;
  max-width: 600rpx;
  background-color: #1A202C;
  border-radius: 16rpx;
  padding: 40rpx;
  border: 1rpx solid #303030;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.3);
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}
.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #e8e8e8;
}
.close-btn {
  font-size: 36rpx;
  color: #8c8c8c;
}
.close-btn:active {
  color: #e8e8e8;
}
.modal-content {
  flex: 1;
  overflow-y: auto;
  color: #8c8c8c;
  font-size: 24rpx;
  line-height: 1.6;
  margin-bottom: 30rpx;
}
.modal-footer {
  display: flex;
  justify-content: center;
}
.modal-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(to right, #00A9FF, #0088cc);
  color: #fff;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: bold;
}