/* pages/config-manager/config-manager.wxss */

page {
  background-color: #121826;
  color: #e8e8e8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 40rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 标题区域 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #FFFFFF;
  display: block;
}

/* 配置列表 */
.configs-list {
  margin-bottom: 60rpx;
}

.config-item {
  background-color: #1A202C;
  border: 1rpx solid #303030;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}

.config-info {
  flex: 1;
  margin-right: 20rpx;
}

.config-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #e8e8e8;
  display: block;
  margin-bottom: 10rpx;
}

.config-details {
  font-size: 24rpx;
  color: #8c8c8c;
  display: block;
}

.config-actions {
  display: flex;
  gap: 15rpx;
}

.load-btn, .delete-btn, .quick-search-btn {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 25rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
}

.load-btn {
  background-color: #00A9FF;
  color: #fff;
}

.quick-search-btn {
  background-color: #00F5A0;
  color: #141414;
  margin: 0 10rpx;
}

.delete-btn {
  background-color: #ff4d4f;
  color: #fff;
}

.empty-state {
  text-align: center;
  padding: 80rpx 0;
  color: #8c8c8c;
  font-size: 28rpx;
}

/* 底部按钮 */
.footer {
  text-align: center;
}

.back-btn {
  width: 100%;
  height: 96rpx;
  background-image: linear-gradient(to top, #00F5A0, #00D18C);
  color: #141414;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 48rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 245, 160, 0.2);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}