<view class="page-container container">
  <!-- 标题 -->
  <view class="header">
    <text class="title">搜索配置管理</text>
  </view>

  <!-- 配置列表 -->
  <view class="configs-list">
    <view class="config-item" wx:for="{{savedConfigs}}" wx:key="name">
      <view class="config-info">
        <text class="config-name">{{item.name}}</text>
        <text class="config-details">
          品牌: {{item.brandName}}, 竞品: {{item.competitorBrands.length}}个, 问题: {{item.validQuestionsCount}}个
        </text>
      </view>
      <view class="config-actions">
        <button class="load-btn" bindtap="loadConfig" data-name="{{item.name}}">加载</button>
        <button class="quick-search-btn" bindtap="quickSearchWithConfig" data-name="{{item.name}}">快速搜索</button>
        <button class="delete-btn" bindtap="deleteConfig" data-name="{{item.name}}">删除</button>
      </view>
    </view>

    <view class="empty-state" wx:if="{{savedConfigs.length === 0}}">
      <text>暂无保存的配置</text>
    </view>
  </view>

  <!-- 返回按钮 -->
  <view class="footer">
    <button class="back-btn" bindtap="goBack">返回首页</button>
  </view>
</view>