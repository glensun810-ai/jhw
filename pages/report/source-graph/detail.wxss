/* pages/report/source-graph/detail.wxss */

.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e0e0e0;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 30rpx;
  color: #999;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  color: #999;
  font-size: 30rpx;
}

/* 页面头部 */
.page-header {
  margin-bottom: 30rpx;
}

.page-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

/* 概览卡片 */
.overview-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.card-subtitle {
  font-size: 26rpx;
  color: #999;
  margin-left: 10rpx;
}

.overview-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.overview-item {
  text-align: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.overview-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 10rpx;
}

.overview-label {
  font-size: 24rpx;
  color: #999;
}

/* 信源卡片 */
.sources-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

/* 信源列表 */
.source-list {
  margin-top: 20rpx;
}

.source-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.source-item:last-child {
  border-bottom: none;
}

.source-rank {
  width: 50rpx;
  height: 50rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.source-info {
  flex: 1;
  margin-left: 20rpx;
  overflow: hidden;
}

.source-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.source-domain {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.source-stats {
  text-align: right;
  flex-shrink: 0;
}

.source-citations {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.source-percentage {
  font-size: 24rpx;
  color: #999;
}

/* 类型列表 */
.type-list {
  margin-top: 20rpx;
}

.type-item {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
}

.type-label {
  width: 120rpx;
  font-size: 26rpx;
  color: #666;
  flex-shrink: 0;
}

.type-bar {
  flex: 1;
  height: 16rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  margin: 0 20rpx;
  overflow: hidden;
}

.type-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.type-value {
  width: 120rpx;
  text-align: right;
  font-size: 24rpx;
  color: #999;
  flex-shrink: 0;
}

/* 可信度网格 */
.credibility-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-top: 20rpx;
}

.credibility-item {
  text-align: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.credibility-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.credibility-value {
  font-size: 40rpx;
  font-weight: bold;
}

.credibility-value.high {
  color: #52c41a;
}

.credibility-value.medium {
  color: #faad14;
}

.credibility-value.low {
  color: #ff4d4f;
}
