/* 原始数据详情页样式 - P0 级空缺修复 */

.container {
  min-height: 100vh;
  background: #f5f6fa;
  padding: 24rpx;
  padding-bottom: 140rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #e0e0e0;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 32rpx;
  font-size: 28rpx;
  color: #999;
}

/* 摘要卡片 */
.summary-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  color: #ffffff;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
}

.summary-header {
  margin-bottom: 24rpx;
}

.summary-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
}

.summary-subtitle {
  display: block;
  font-size: 22rpx;
  opacity: 0.8;
  margin-top: 8rpx;
}

.summary-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.summary-item {
  text-align: center;
  padding: 16rpx 8rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
}

.summary-value {
  font-size: 36rpx;
  font-weight: 700;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.summary-label {
  font-size: 22rpx;
  opacity: 0.8;
  margin-top: 8rpx;
}

/* 筛选栏 */
.filter-bar {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.filter-group {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  background: #f5f6fa;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
}

.filter-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  font-weight: 600;
}

.sort-group {
  display: flex;
  justify-content: flex-end;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.sort-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #666;
  padding: 8rpx 16rpx;
  background: #f5f6fa;
  border-radius: 20rpx;
}

/* 数据列表 */
.data-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.data-item {
  position: relative;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.data-item:active {
  transform: scale(0.98);
}

.data-item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.data-item-brand {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a2e;
}

.data-item-model {
  font-size: 24rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.data-item-content {
  margin-bottom: 16rpx;
}

.data-item-question {
  margin-bottom: 12rpx;
}

.data-item-question .label {
  font-size: 24rpx;
  color: #999;
  margin-right: 8rpx;
}

.data-item-question .text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.data-item-response {
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 16rpx;
}

.data-item-response .label {
  font-size: 24rpx;
  color: #999;
  margin-right: 8rpx;
}

.response-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.data-item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.data-item-meta {
  display: flex;
  gap: 24rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 22rpx;
  color: #666;
}

.meta-icon {
  font-size: 24rpx;
}

.data-item-time {
  font-size: 22rpx;
  color: #999;
}

.expand-indicator {
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
  transition: transform 0.3s ease;
}

.expand-indicator text {
  font-size: 40rpx;
  color: #ccc;
  line-height: 1;
}

.expand-indicator.expanded {
  transform: rotate(90deg);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 200rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 200rpx 0;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.error-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 32rpx;
}

.retry-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border: none;
  border-radius: 40rpx;
  padding: 16rpx 48rpx;
  font-size: 28rpx;
}
