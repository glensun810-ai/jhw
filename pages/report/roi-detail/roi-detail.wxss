/* pages/report/roi-detail/roi-detail.wxss */
/**
 * ROI 详情分析页样式
 * 
 * 设计理念:
 * - 专业、简洁、高端
 * - 强调数据可视化和对比
 * - 与 Dashboard 风格保持一致
 */

/* 变量定义 */
page {
  --primary-color: #667eea;
  --primary-dark: #5a67d8;
  --secondary-color: #764ba2;
  --accent-color: #f093fb;
  --success-color: #27ae60;
  --warning-color: #f39c12;
  --danger-color: #e74c3c;
  --text-primary: #2c3e50;
  --text-secondary: #7f8c8d;
  --text-light: #ffffff;
  --bg-color: #f5f6fa;
  --card-bg: #ffffff;
  --border-radius: 16rpx;
  --shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
  --shadow-hover: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
}

.container {
  padding: 24rpx;
  padding-bottom: 40rpx;
  background: var(--bg-color);
  min-height: 100vh;
}

/* 内容包装器 */
.content-wrapper {
  padding-bottom: 20rpx;
}

/* ====================
   加载状态
   ==================== */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid rgba(102, 126, 234, 0.2);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* ====================
   错误状态
   ==================== */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.error-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 40rpx;
}

.retry-btn {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
  color: var(--text-light);
  border: none;
  border-radius: 44rpx;
  padding: 24rpx 80rpx;
  font-size: 30rpx;
  font-weight: 600;
}

/* ====================
   核心指标卡片
   ==================== */
.metrics-card {
  background: var(--card-bg);
  border-radius: var(--border-radius);
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow);
}

.card-header {
  display: flex;
  flex-direction: column;
  margin-bottom: 32rpx;
}

.card-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.card-subtitle {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
}

.metrics-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.metric-item {
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 12rpx;
  padding: 24rpx;
  position: relative;
  overflow: hidden;
}

.metric-item.primary {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
}

.metric-item.primary .metric-label,
.metric-item.primary .metric-unit {
  color: rgba(255, 255, 255, 0.9);
}

.metric-item.highlight {
  background: linear-gradient(135deg, var(--secondary-color) 0%, var(--secondary-color) 100%);
}

.metric-item.highlight .metric-label,
.metric-item.highlight .metric-unit,
.metric-item.highlight .metric-sub {
  color: rgba(255, 255, 255, 0.9);
}

.metric-label {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
}

.metric-value {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--text-primary);
  line-height: 1;
}

.metric-item.primary .metric-value,
.metric-item.highlight .metric-value {
  color: var(--text-light);
}

.metric-unit {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-left: 8rpx;
}

.metric-item.primary .metric-unit,
.metric-item.highlight .metric-unit {
  color: rgba(255, 255, 255, 0.8);
}

.metric-trend {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.metric-trend.positive {
  color: var(--success-color);
}

.metric-trend.negative {
  color: var(--danger-color);
}

.metric-sub {
  font-size: 22rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
}

/* ====================
   影响力评分卡片
   ==================== */
.impact-card {
  background: var(--card-bg);
  border-radius: var(--border-radius);
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow);
}

.impact-overview {
  display: flex;
  justify-content: center;
  padding: 32rpx 0;
  margin-bottom: 32rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  border-radius: 12rpx;
}

.impact-total {
  text-align: center;
}

.impact-total-value {
  font-size: 72rpx;
  font-weight: 700;
  color: var(--primary-color);
  line-height: 1;
}

.impact-total-label {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-top: 12rpx;
}

.impact-level {
  display: inline-block;
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
  margin-top: 16rpx;
}

.impact-level.excellent {
  background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
  color: #ffffff;
}

.impact-level.good {
  background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
  color: #ffffff;
}

.impact-level.average {
  background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
  color: #ffffff;
}

.impact-level.poor {
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
  color: #ffffff;
}

.impact-details {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.impact-item {
  padding: 20rpx 0;
}

.impact-item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.impact-item-label {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.impact-item-value {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--primary-color);
}

.impact-bar {
  height: 12rpx;
  background: #e8ecef;
  border-radius: 6rpx;
  overflow: hidden;
}

.impact-bar-fill {
  height: 100%;
  border-radius: 6rpx;
  transition: width 0.5s ease;
}

.impact-bar-fill.authority {
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
}

.impact-bar-fill.visibility {
  background: linear-gradient(90deg, #f093fb 0%, #f5576c 100%);
}

.impact-bar-fill.sentiment {
  background: linear-gradient(90deg, #4facfe 0%, #00f2fe 100%);
}

/* ====================
   行业对比卡片
   ==================== */
.benchmark-card {
  background: var(--card-bg);
  border-radius: var(--border-radius);
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow);
}

.benchmark-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.benchmark-item {
  padding: 24rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 12rpx;
  border-left: 4rpx solid var(--primary-color);
}

.benchmark-label {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 600;
  margin-bottom: 16rpx;
}

.benchmark-compare {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.benchmark-my {
  font-size: 26rpx;
  color: var(--primary-color);
  font-weight: 600;
}

.benchmark-industry {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.benchmark-delta {
  font-size: 24rpx;
  font-weight: 600;
  margin-top: 8rpx;
}

.benchmark-delta.positive {
  color: var(--success-color);
}

.benchmark-delta.negative {
  color: var(--danger-color);
}

/* ====================
   数字字体
   ==================== */
.number-font {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-feature-settings: 'tnum' on;
  font-variant-numeric: tabular-nums;
}

/* ====================
   动画效果
   ==================== */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.metrics-card,
.impact-card,
.benchmark-card {
  animation: fadeIn 0.4s ease-out;
}

.impact-card {
  animation-delay: 0.1s;
}

.benchmark-card {
  animation-delay: 0.2s;
}
