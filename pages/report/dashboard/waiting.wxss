/**
 * 等待页面样式 - 情报流水线风格
 * 
 * 设计特性:
 * 1. 高斯模糊背景
 * 2. 进度条流光特效
 * 3. 情报流水线动画
 * 4. 现代科技感
 */

/* ====================
   页面基础样式
   ==================== */
page {
  --primary-color: #1a1a2e;
  --secondary-color: #16213e;
  --accent-color: #0f3460;
  --highlight-color: #e94560;
  --success-color: #27ae60;
  --warning-color: #f39c12;
  --text-primary: #2c3e50;
  --text-secondary: #7f8c8d;
  --text-light: #ecf0f1;
  --bg-gradient-start: #0f0c29;
  --bg-gradient-mid: #302b63;
  --bg-gradient-end: #24243e;
}

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, var(--bg-gradient-start) 0%, var(--bg-gradient-mid) 50%, var(--bg-gradient-end) 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  position: relative;
  overflow: hidden;
}

/* ====================
   P1 新增：高斯模糊背景层
   ==================== */
.blur-background {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 50% 50%, rgba(15, 52, 96, 0.3) 0%, rgba(15, 12, 41, 0.8) 100%);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  z-index: 1;
  pointer-events: none;
}

/* 动态光斑背景 */
.blur-orb {
  position: absolute;
  border-radius: 50%;
  filter: blur(60rpx);
  opacity: 0.4;
  animation: orb-float 20s ease-in-out infinite;
}

.orb-1 {
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(233, 69, 96, 0.4) 0%, transparent 70%);
  top: 10%;
  left: 20%;
  animation-delay: 0s;
}

.orb-2 {
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(15, 52, 96, 0.5) 0%, transparent 70%);
  bottom: 10%;
  right: 10%;
  animation-delay: -7s;
}

.orb-3 {
  width: 250rpx;
  height: 250rpx;
  background: radial-gradient(circle, rgba(46, 204, 113, 0.3) 0%, transparent 70%);
  top: 50%;
  right: 30%;
  animation-delay: -14s;
}

@keyframes orb-float {
  0%, 100% {
    transform: translate(0, 0) scale(1);
  }
  25% {
    transform: translate(30rpx, -30rpx) scale(1.1);
  }
  50% {
    transform: translate(-20rpx, 20rpx) scale(0.9);
  }
  75% {
    transform: translate(20rpx, 30rpx) scale(1.05);
  }
}

/* ====================
   主内容区域
   ==================== */
.content-wrapper {
  position: relative;
  z-index: 10;
  width: 100%;
  max-width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* ====================
   标题区域
   ==================== */
.title-section {
  text-align: center;
  margin-bottom: 60rpx;
}

.main-title {
  font-size: 44rpx;
  font-weight: 700;
  color: var(--text-light);
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 2rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(236, 240, 241, 0.7);
  font-weight: 300;
}

/* ====================
   P1 新增：进度条容器（带流光特效）
   ==================== */
.progress-container {
  width: 100%;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 30rpx;
  padding: 8rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  position: relative;
  overflow: hidden;
}

.progress-track {
  height: 24rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, 
    var(--accent-color) 0%, 
    var(--highlight-color) 50%, 
    var(--accent-color) 100%);
  border-radius: 20rpx;
  transition: width 0.5s ease;
  position: relative;
  width: 0%;
}

/* P1 新增：流光特效 */
.progress-shine {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(255, 255, 255, 0.4) 50%,
    transparent 100%
  );
  animation: shine 2s ease-in-out infinite;
}

@keyframes shine {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

/* 进度条外发光 */
.progress-glow {
  position: absolute;
  top: -10rpx;
  left: 0;
  right: 0;
  bottom: -10rpx;
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(233, 69, 96, 0.3) 50%, 
    transparent 100%);
  filter: blur(20rpx);
  opacity: 0.5;
  animation: glow-pulse 3s ease-in-out infinite;
}

@keyframes glow-pulse {
  0%, 100% {
    opacity: 0.3;
  }
  50% {
    opacity: 0.7;
  }
}

/* ====================
   时间显示区域
   ==================== */
.time-section {
  text-align: center;
  margin-bottom: 40rpx;
}

.time-label {
  font-size: 26rpx;
  color: rgba(236, 240, 241, 0.6);
  margin-bottom: 12rpx;
}

.time-value {
  font-size: 56rpx;
  font-weight: 700;
  color: var(--text-light);
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', monospace;
  text-shadow: 0 0 30rpx rgba(233, 69, 96, 0.5);
}

.time-range {
  font-size: 28rpx;
  color: rgba(236, 240, 241, 0.5);
  margin-top: 8rpx;
}

/* ====================
   P1 新增：情报流水线组件
   ==================== */
.intelligence-pipeline {
  width: 100%;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
}

.pipeline-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.pipeline-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-light);
  display: flex;
  align-items: center;
}

.pipeline-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
  animation: icon-pulse 2s ease-in-out infinite;
}

@keyframes icon-pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.8;
  }
}

.pipeline-count {
  font-size: 24rpx;
  color: rgba(236, 240, 241, 0.5);
  background: rgba(255, 255, 255, 0.05);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.pipeline-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  max-height: 400rpx;
  overflow-y: auto;
}

/* 情报项目卡片 */
.intelligence-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  border-left: 4rpx solid var(--accent-color);
  animation: item-slide-in 0.5s ease-out;
  transition: all 0.3s ease;
}

.intelligence-item.new {
  border-left-color: var(--highlight-color);
  background: rgba(233, 69, 96, 0.1);
}

.intelligence-item.success {
  border-left-color: var(--success-color);
}

.intelligence-item.error {
  border-left-color: var(--warning-color);
}

@keyframes item-slide-in {
  from {
    opacity: 0;
    transform: translateX(-30rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.item-status {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  flex-shrink: 0;
  position: relative;
}

.status-pending {
  background: rgba(255, 255, 255, 0.3);
}

.status-processing {
  background: var(--accent-color);
  animation: status-blink 1s ease-in-out infinite;
}

.status-success {
  background: var(--success-color);
}

.status-error {
  background: var(--warning-color);
}

@keyframes status-blink {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.4;
  }
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 0;
}

.item-question {
  font-size: 26rpx;
  color: var(--text-light);
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 22rpx;
  color: rgba(236, 240, 241, 0.5);
}

.item-model {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.model-badge {
  background: rgba(15, 52, 96, 0.5);
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
}

.item-time {
  font-family: 'SF Mono', monospace;
}

/* ====================
   状态提示区域
   ==================== */
.status-section {
  text-align: center;
  margin-bottom: 40rpx;
}

.status-text {
  font-size: 30rpx;
  color: rgba(236, 240, 241, 0.8);
  margin-bottom: 16rpx;
}

.status-detail {
  font-size: 26rpx;
  color: rgba(236, 240, 241, 0.5);
}

/* ====================
   底部提示区域
   ==================== */
.footer-tips {
  width: 100%;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.08);
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin-bottom: 16rpx;
  font-size: 24rpx;
  color: rgba(236, 240, 241, 0.6);
  line-height: 1.6;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

/* ====================
   加载动画
   ==================== */
.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.1);
  border-top-color: var(--highlight-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 32rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* ====================
   空状态
   ==================== */
.empty-state {
  text-align: center;
  padding: 60rpx 32rpx;
  color: rgba(236, 240, 241, 0.4);
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
}

/* ====================
   滚动条样式
   ==================== */
.pipeline-list::-webkit-scrollbar {
  width: 6rpx;
}

.pipeline-list::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.03);
  border-radius: 10rpx;
}

.pipeline-list::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 10rpx;
}

.pipeline-list::-webkit-scrollbar-thumb:hover {
  background: rgba(255, 255, 255, 0.3);
}
