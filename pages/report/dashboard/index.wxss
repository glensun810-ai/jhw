/**
 * GEO 品牌战略诊断看板 - 麦肯锡风格样式 (P0 增强版)
 *
 * 设计理念：
 * - 专业、简洁、高端
 * - 强调数据可视化
 * - 风险预警色彩鲜明
 *
 * P0 增强:
 * - ROI 指标卡片样式
 * - 影响力仪表盘样式
 * - 工作流发现列表样式
 */

/* 变量定义 */
page {
  --primary-color: #1a1a2e;
  --secondary-color: #16213e;
  --accent-color: #0f3460;
  --success-color: #27ae60;
  --warning-color: #f39c12;
  --danger-color: #e74c3c;
  --text-primary: #2c3e50;
  --text-secondary: #7f8c8d;
  --text-light: #ecf0f1;
  --bg-color: #f5f6fa;
  --card-bg: #ffffff;
  --border-radius: 12rpx;
  --shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  --shadow-hover: 0 4rpx 24rpx rgba(0, 0, 0, 0.12);
}

/* P0 新增：ROI 和影响力卡片区域 */
.p0-section {
  margin-bottom: 24rpx;
}

/* 情报流水线区域 */
.pipeline-section {
  margin-bottom: 24rpx;
}

.container {
  padding: 24rpx;
  padding-bottom: 140rpx;
  background: var(--bg-color);
  min-height: 100vh;
}

/* ====================
   第一段：概览评分卡片
   ==================== */

.header-card {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
  border-radius: var(--border-radius);
  padding: 32rpx;
  margin-bottom: 24rpx;
  color: var(--text-light);
  box-shadow: 0 8rpx 32rpx rgba(26, 26, 46, 0.3);
}

.brand-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  opacity: 0.9;
}

.score-section {
  background: rgba(255, 255, 255, 0.08);
  border-radius: var(--border-radius);
  padding: 24rpx;
}

.score-box {
  text-align: center;
  margin-bottom: 24rpx;
}

.score-label {
  display: block;
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 12rpx;
}

.score-value {
  display: inline-block;
  font-size: 80rpx;
  font-weight: 700;
  line-height: 1;
}

.score-value.excellent {
  color: #2ecc71;
}

.score-value.good {
  color: #f1c40f;
}

.score-value.warning {
  color: #e74c3c;
}

.score-unit {
  display: block;
  font-size: 24rpx;
  opacity: 0.7;
  margin-top: 8rpx;
}

.metrics-row {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-top: 24rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.15);
}

.metric-item {
  flex: 1;
  text-align: center;
}

.metric-value {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-light);
}

.metric-value.positive {
  color: #2ecc71;
}

.metric-value.negative {
  color: #e74c3c;
}

.metric-label {
  font-size: 22rpx;
  opacity: 0.7;
  margin-top: 8rpx;
}

.metric-sub {
  font-size: 20rpx;
  opacity: 0.5;
  margin-top: 4rpx;
}

.metric-divider {
  width: 1rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.15);
  margin: 0 24rpx;
}

/* ====================
   第二段：问题诊断
   ==================== */

.section {
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  display: flex;
  align-items: center;
}

.title-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.title-text {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.section-subtitle {
  font-size: 22rpx;
  color: var(--text-secondary);
}

.question-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.question-card {
  background: var(--card-bg);
  border-radius: var(--border-radius);
  padding: 24rpx;
  box-shadow: var(--shadow);
  transition: all 0.3s ease;
  border-left: 6rpx solid var(--success-color);
}

.question-card.safe {
  border-left-color: var(--success-color);
}

.question-card.risk {
  border-left-color: var(--danger-color);
}

.question-card:active {
  box-shadow: var(--shadow-hover);
  transform: translateY(-2rpx);
}

.q-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.q-number {
  background: var(--primary-color);
  color: var(--text-light);
  font-size: 20rpx;
  font-weight: 600;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.q-text {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-primary);
  line-height: 1.5;
  font-weight: 500;
}

.q-body {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.q-metrics {
  display: flex;
  gap: 24rpx;
}

.q-metric {
  display: flex;
  flex-direction: column;
}

.q-metric-label {
  font-size: 20rpx;
  color: var(--text-secondary);
  margin-bottom: 4rpx;
}

.q-metric-value {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.q-metric-value.unranked {
  color: var(--text-secondary);
}

.q-metric-value.positive {
  color: var(--success-color);
}

.q-metric-value.negative {
  color: var(--danger-color);
}

.q-status {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.q-status.safe {
  background: rgba(39, 174, 96, 0.1);
  color: var(--success-color);
}

.q-status.risk {
  background: rgba(231, 76, 60, 0.1);
  color: var(--danger-color);
}

.status-icon {
  margin-right: 6rpx;
  font-size: 24rpx;
}

.q-footer {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
}

.warning-banner {
  display: flex;
  align-items: center;
  background: linear-gradient(90deg, rgba(243, 156, 18, 0.1) 0%, rgba(243, 156, 18, 0.05) 100%);
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  border-left: 4rpx solid var(--warning-color);
}

.warning-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.warning-text {
  flex: 1;
  font-size: 24rpx;
  color: var(--text-primary);
}

.warning-brand {
  font-weight: 600;
  color: var(--danger-color);
}

/* ====================
   第三段：负面信源
   ==================== */

.toxic-sources-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.toxic-source-card {
  background: var(--card-bg);
  border-radius: var(--border-radius);
  padding: 24rpx;
  box-shadow: var(--shadow);
  border-left: 6rpx solid var(--danger-color);
  transition: all 0.3s ease;
}

.toxic-source-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  background: rgba(239, 68, 68, 0.05);
}

.ts-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.ts-site {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
  background: rgba(231, 76, 60, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

.ts-tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.ts-tag.negative {
  background: var(--danger-color);
  color: var(--text-light);
}

.ts-url {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
  word-break: break-all;
  line-height: 1.4;
}

.ts-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  gap: 12rpx;
}

.ts-model {
  font-size: 22rpx;
  color: var(--text-secondary);
  flex: 1;
}

.ts-impact {
  font-size: 22rpx;
  color: var(--danger-color);
  font-weight: 500;
  background: rgba(231, 76, 60, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.ts-copy {
  font-size: 20rpx;
  color: var(--primary-color);
  font-weight: 500;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  background: rgba(26, 26, 46, 0.1);
  flex-shrink: 0;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 24rpx;
  background: var(--card-bg);
  border-radius: var(--border-radius);
  box-shadow: var(--shadow);
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 30rpx;
  color: var(--text-primary);
  font-weight: 500;
  margin-bottom: 12rpx;
}

.empty-sub {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* ====================
   底部操作栏
   ==================== */

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 16rpx;
  padding: 16rpx 24rpx;
  background: var(--card-bg);
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.btn-secondary,
.btn-primary {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.btn-secondary {
  background: var(--bg-color);
  color: var(--text-primary);
}

.btn-primary {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--accent-color) 100%);
  color: var(--text-light);
}

.btn-secondary:active,
.btn-primary:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* ====================
   加载状态
   ==================== */

.loading-container,
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background: var(--bg-color);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(26, 26, 46, 0.1);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text,
.error-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.error-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.btn-retry {
  margin-top: 32rpx;
  padding: 16rpx 48rpx;
  background: var(--primary-color);
  color: var(--text-light);
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}
