/* pages/report/history/history.wxss */
/**
 * 报告历史页样式
 * 
 * 设计理念:
 * - 深色主题，与 Dashboard 风格一致
 * - 清晰的信息层级
 * - 易于操作的交互
 */

/* 变量定义 */
page {
  --primary-color: #1a1a2e;
  --primary-light: #2d3561;
  --secondary-color: #16213e;
  --accent-color: #0f3460;
  --success-color: #27ae60;
  --warning-color: #f39c12;
  --danger-color: #e74c3c;
  --text-primary: #2c3e50;
  --text-secondary: #7f8c8d;
  --text-light: #ffffff;
  --bg-color: #f5f6fa;
  --card-bg: #ffffff;
  --border-radius: 16rpx;
  --shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
}

.container {
  padding: 24rpx;
  padding-bottom: 40rpx;
  background: var(--bg-color);
  min-height: 100vh;
}

/* ====================
   加载状态
   ==================== */
.loading-container {
  padding: 40rpx 0;
}

/* ====================
   统计栏
   ==================== */
.stats-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  color: var(--text-light);
}

.stats-text {
  font-size: 28rpx;
  font-weight: 600;
}

.stats-hint {
  font-size: 24rpx;
  opacity: 0.9;
}

/* ====================
   筛选栏
   ==================== */
.filter-bar {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.filter-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  padding: 16rpx;
  background: var(--card-bg);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.filter-item.active {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--accent-color) 100%);
  color: var(--text-light);
}

.filter-icon {
  font-size: 28rpx;
}

.filter-text {
  font-size: 24rpx;
  font-weight: 500;
}

/* ====================
   报告列表
   ==================== */
.reports-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 报告卡片 */
.report-card {
  background: var(--card-bg);
  border-radius: var(--border-radius);
  overflow: hidden;
  box-shadow: var(--shadow);
  transition: all 0.3s ease;
}

.report-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.06);
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 24rpx 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.brand-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.brand-name {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.report-date {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.report-badge {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  border-radius: 24rpx;
  background: #f5f6fa;
}

.report-badge.excellent {
  background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
}

.report-badge.good {
  background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
}

.report-badge.normal {
  background: linear-gradient(135deg, #95a5a6 0%, #7f8c8d 100%);
}

.report-badge.excellent .badge-score,
.report-badge.good .badge-score,
.report-badge.normal .badge-score {
  color: var(--text-light);
}

.badge-score {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--primary-color);
}

.badge-label {
  font-size: 22rpx;
  color: var(--text-secondary);
  margin-left: 4rpx;
}

/* 卡片内容 */
.card-body {
  padding: 24rpx;
}

/* 指标行 */
.metrics-row {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 16rpx 0;
}

.metric-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
}

.metric-icon {
  font-size: 24rpx;
}

.metric-value {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.metric-value.positive {
  color: var(--success-color);
}

.metric-value.negative {
  color: var(--danger-color);
}

.metric-value.normal {
  color: var(--text-secondary);
}

.metric-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.metric-divider {
  width: 1rpx;
  height: 50rpx;
  background: #e0e0e0;
}

/* 执行 ID */
.execution-id {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  margin-top: 16rpx;
}

.id-label {
  font-size: 22rpx;
  color: var(--text-secondary);
  font-weight: 600;
}

.id-value {
  font-size: 22rpx;
  color: var(--text-secondary);
  font-family: monospace;
}

/* 卡片底部 */
.card-footer {
  padding: 0 24rpx 24rpx;
}

.view-detail-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  border-radius: 12rpx;
  color: var(--text-light);
  font-size: 28rpx;
  font-weight: 600;
}

.arrow-icon {
  font-size: 32rpx;
}

/* ====================
   空状态
   ==================== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.empty-subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: 48rpx;
}

.go-home-btn {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
  color: var(--text-light);
  border: none;
  border-radius: 44rpx;
  padding: 24rpx 80rpx;
  font-size: 30rpx;
  font-weight: 600;
}

/* ====================
   错误状态
   ==================== */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.error-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 40rpx;
}

.retry-btn {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
  color: var(--text-light);
  border: none;
  border-radius: 44rpx;
  padding: 24rpx 80rpx;
  font-size: 30rpx;
  font-weight: 600;
}

/* ====================
   动画效果
   ==================== */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.report-card {
  animation: fadeIn 0.4s ease-out;
}

.report-card:nth-child(1) { animation-delay: 0.05s; }
.report-card:nth-child(2) { animation-delay: 0.1s; }
.report-card:nth-child(3) { animation-delay: 0.15s; }
.report-card:nth-child(4) { animation-delay: 0.2s; }
