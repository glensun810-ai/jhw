/* pages/admin/users/users.wxss */

.admin-container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部 */
.admin-header {
  margin-bottom: 30rpx;
}

.admin-title {
  display: block;
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
}

.admin-subtitle {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.search-btn {
  width: 160rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 12rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 批量操作工具栏 */
.batch-toolbar {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  color: #fff;
}

.toolbar-info {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.toolbar-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.toolbar-actions .action-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 16rpx 32rpx;
  font-size: 26rpx;
}

.toolbar-actions .action-btn.warning {
  background-color: rgba(250, 173, 20, 0.8);
}

.toolbar-actions .action-btn.secondary {
  background-color: rgba(255, 255, 255, 0.1);
}

.toolbar-actions .action-btn.danger {
  background-color: rgba(255, 77, 79, 0.8);
}

/* 全选栏 */
.select-all-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.select-all-label {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 28rpx;
  color: #666;
}

.export-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 12rpx 32rpx;
  font-size: 26rpx;
}

/* 用户列表 */
.user-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.user-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.user-select {
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.user-phone {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.user-nickname {
  font-size: 26rpx;
  color: #666;
}

.user-tags {
  display: flex;
  gap: 10rpx;
}

.tag {
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.tag.admin {
  background-color: rgba(102, 126, 234, 0.1);
  color: #667eea;
}

.tag.date {
  background-color: #f0f0f0;
  color: #999;
}

.user-actions {
  display: flex;
  gap: 10rpx;
}

.action-btn-small {
  background-color: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 50rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
}

.action-btn-small.warning {
  background-color: rgba(250, 173, 20, 0.1);
  color: #faad14;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  color: #999;
  font-size: 30rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e0e0e0;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 30rpx;
  color: #999;
  font-size: 28rpx;
}

/* 分页 */
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 30rpx;
  margin-top: 40rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
}

.page-btn {
  background-color: #667eea;
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 16rpx 32rpx;
  font-size: 26rpx;
}

.page-btn[disabled] {
  background-color: #e0e0e0;
}

.page-info {
  font-size: 28rpx;
  color: #666;
}
