/* pages/admin/dashboard/dashboard.wxss */

.admin-container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部 */
.admin-header {
  margin-bottom: 30rpx;
}

.admin-title {
  display: block;
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
}

.admin-subtitle {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e0e0e0;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 30rpx;
  color: #999;
  font-size: 28rpx;
}

/* 概览卡片 */
.overview-section {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.overview-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.overview-card.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.overview-card.primary .card-value,
.overview-card.primary .card-label {
  color: #fff;
}

.card-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.card-content {
  flex: 1;
}

.card-value {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #667eea;
  line-height: 1;
  margin-bottom: 8rpx;
}

.card-label {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 区块 */
.section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-subtitle {
  font-size: 24rpx;
  color: #999;
}

/* 任务列表 */
.task-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.task-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.task-stage {
  font-size: 28rpx;
  color: #666;
}

.task-count {
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
}

/* 活动列表 */
.activity-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.activity-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.activity-info {
  flex: 1;
}

.activity-brand {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.activity-user {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.activity-meta {
  text-align: right;
}

.activity-score {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 8rpx;
}

.activity-time {
  display: block;
  font-size: 22rpx;
  color: #999;
}

/* 功能网格 */
.function-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin-top: 30rpx;
}

.function-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.function-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.function-label {
  font-size: 24rpx;
  color: #666;
}
