/* pages/permission-manager/permission-manager.wxss */

.page-container {
  background-color: #121826;
  color: #e8e8e8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 40rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background: linear-gradient(135deg, #1a1f29 0%, #121826 100%);
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 60rpx;
}
.page-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #FFFFFF;
  display: block;
  margin-bottom: 20rpx;
}
.page-subtitle {
  font-size: 28rpx;
  color: #8c8c8c;
  display: block;
}

/* 用户信息部分 */
.user-info-section {
  margin-bottom: 60rpx;
}
.user-card {
  background-color: #1A202C;
  border: 1rpx solid #303030;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
}
.user-avatar {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #00A9FF, #00F5A0);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}
.avatar-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #141414;
}
.user-details {
  flex: 1;
}
.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #e8e8e8;
  margin-bottom: 10rpx;
}
.user-id {
  display: block;
  font-size: 24rpx;
  color: #8c8c8c;
  margin-bottom: 10rpx;
}
.user-permission {
  display: block;
  font-size: 24rpx;
  color: #00A9FF;
}

/* 权限列表部分 */
.permission-list-section {
  margin-bottom: 60rpx;
}
.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #e8e8e8;
  display: block;
  margin-bottom: 30rpx;
}
.permission-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #1A202C;
  border: 1rpx solid #303030;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.permission-info {
  flex: 1;
}
.permission-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #e8e8e8;
  margin-bottom: 10rpx;
}
.permission-desc {
  display: block;
  font-size: 24rpx;
  color: #8c8c8c;
}
.permission-switch {
  transform: scale(0.8);
}

/* 权限说明部分 */
.permission-explanation-section {
  margin-bottom: 60rpx;
}
.explanation-item {
  background-color: #1A202C;
  border: 1rpx solid #303030;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.explanation-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #00F5A0;
  margin-bottom: 10rpx;
}
.explanation-desc {
  display: block;
  font-size: 24rpx;
  color: #8c8c8c;
  line-height: 1.5;
}

/* 操作按钮部分 */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.action-btn {
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}
.logout-btn {
  background: linear-gradient(to right, #ff6b6b, #ff5252);
  color: #fff;
}
.upgrade-btn {
  background: linear-gradient(to right, #00F5A0, #00D18C);
  color: #141414;
}