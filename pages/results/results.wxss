  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 77, 79, 0.3);
}

.error-banner-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.error-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.error-message {
  font-size: 28rpx;
  color: #ffffff;
  flex: 1;
}

.error-retry-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: #ffffff;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  font-size: 24rpx;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  margin-left: 20rpx;
}

/* P0-006 新增：降级提示条样式 */
.fallback-banner {
  background: linear-gradient(135deg, #faad14 0%, #ffc53d 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(250, 173, 20, 0.3);
}

.fallback-banner-content {
  display: flex;
  align-items: center;
  width: 100%;
}

.fallback-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.fallback-message {
  font-size: 28rpx;
  color: #141414;
  font-weight: 500;
}

/* P0-006 新增：部分结果警告条样式 */
.partial-banner {
  background: linear-gradient(135deg, #ff9c38 0%, #ffb96b 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 156, 56, 0.3);
}

.partial-banner-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.partial-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.partial-messages {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.partial-message {
  font-size: 26rpx;
  color: #141414;
  margin-bottom: 8rpx;
}

.partial-message:last-child {
  margin-bottom: 0;
}

.partial-detail-btn {
  background-color: rgba(20, 20, 20, 0.1);
  color: #141414;
  font-size: 24rpx;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  margin-left: 20rpx;
  border: 2rpx solid rgba(20, 20, 20, 0.2);
}

/* P0-009 新增：完成率提示条样式 */
.completion-banner {
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.3);
}

.completion-banner-content {
  display: flex;
  align-items: center;
  width: 100%;
}

.completion-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.completion-text {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
}

/* P0-008 新增：错误标记样式 */
.detail-score-wrapper {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.detail-score.error-score {
  color: #ff4d4f;
  opacity: 0.7;
}

.error-badge {
  font-size: 28rpx;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.6;
    transform: scale(1.1);
  }
}

/* P1-016 新增：配额恢复建议样式 */
.quota-recovery-section {
  margin: 30rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #1a2a3a 0%, #2a3a4a 100%);
  border-radius: 20rpx;
  border: 2rpx solid #ff9c38;
}

.quota-recovery-cards {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 20rpx;
}

.quota-recovery-card {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  padding: 30rpx;
  border: 1rpx solid rgba(255, 156, 56, 0.3);
}

.quota-recovery-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.quota-model-icon {
  font-size: 36rpx;
  margin-right: 15rpx;
}

.quota-model-name {
  font-size: 30rpx;
  color: #ff9c38;
  font-weight: bold;
}

.quota-recovery-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.quota-suggestion {
  display: flex;
  align-items: flex-start;
  font-size: 26rpx;
  color: #e8e8e8;
  line-height: 1.6;
}

.suggestion-bullet {
  color: #ff9c38;
  margin-right: 10rpx;
  font-weight: bold;
}

.suggestion-text {
  flex: 1;
}

.suggestion-text[text*="http"] {
  color: #40a9ff;
  text-decoration: underline;
}

.quota-recovery-footer {
  display: flex;
  justify-content: flex-end;
}

.retry-platform-btn {
  background: linear-gradient(135deg, #ff9c38 0%, #ffb96b 100%);
  color: #141414;
  font-size: 26rpx;
  font-weight: 500;
  padding: 16rpx 30rpx;
  border-radius: 30rpx;
  border: none;
}

.retry-platform-btn::after {
  border: none;
}

/* P2-022 新增：错误详情模态框样式 */
/* P1-002 修复：提高 z-index 避免与其他组件冲突 */
.error-details-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999; /* P1-002: 从 1000 提高到 9999，确保在最上层 */
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
}

.modal-content {
  position: relative;
  width: 90%;
  max-height: 80vh;
  background: linear-gradient(135deg, #1a2a3a 0%, #2a3a4a 100%);
  border-radius: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
}

.modal-close {
  font-size: 40rpx;
  color: #8c8c8c;
  padding: 10rpx;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
}

.error-summary-section {
  margin-bottom: 30rpx;
}

.error-summary-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
  display: block;
  margin-bottom: 20rpx;
}

.error-summary-grid {
  display: flex;
  gap: 20rpx;
}

.summary-item {
  flex: 1;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  padding: 20rpx;
  text-align: center;
}

.summary-label {
  font-size: 24rpx;
  color: #8c8c8c;
  display: block;
  margin-bottom: 10rpx;
}

.summary-value {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
}

.summary-value.error {
  color: #ff4d4f;
}

.summary-value.warning {
  color: #faad14;
}

.summary-value.info {
  color: #1890ff;
}

.error-list-section {
  margin-top: 30rpx;
}

.error-list-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
  display: block;
  margin-bottom: 20rpx;
}

.error-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.error-item {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  padding: 24rpx;
  border-left: 4rpx solid #ff4d4f;
}

.error-item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.error-type-badge {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.error-type-badge.quota_exhausted,
.error-type-badge.insufficient_quota {
  background: rgba(250, 173, 20, 0.2);
  color: #ffc53d;
}

.error-type-badge.timeout {
  background: rgba(24, 144, 255, 0.2);
  color: #40a9ff;
}

.error-type-badge.network_error {
  background: rgba(82, 196, 26, 0.2);
  color: #95de64;
}

.error-type-badge.unknown {
  background: rgba(140, 140, 140, 0.2);
  color: #8c8c8c;
}

.error-model {
  font-size: 26rpx;
  color: #e8e8e8;
  font-weight: 500;
}

.error-item-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.error-message {
  font-size: 24rpx;
  color: #bfbfbf;
  line-height: 1.5;
}

.error-time {
  font-size: 22rpx;
  color: #666;
  text-align: right;
}

.modal-footer {
  padding: 30rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
  display: flex;
  justify-content: center;
}

.modal-confirm-btn {
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
  padding: 20rpx 60rpx;
  border-radius: 30rpx;
  border: none;
}

.modal-confirm-btn::after {
  border: none;
}

.error-log-btn {
  background: rgba(255, 77, 79, 0.2);
  color: #ff4d4f;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  margin-left: 10rpx;
  border: 2rpx solid rgba(255, 77, 79, 0.5);
}
