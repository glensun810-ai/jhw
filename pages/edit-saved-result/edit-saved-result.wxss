/* pages/edit-saved-result/edit-saved-result.wxss */

page {
  background-color: #121826;
  color: #e8e8e8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 40rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background: linear-gradient(135deg, #1a1f29 0%, #121826 100%);
}

/* 页面头部 */
.page-header {
  margin-bottom: 40rpx;
}
.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #FFFFFF;
  display: block;
}

/* 编辑表单 */
.edit-form {
  margin-bottom: 40rpx;
}
.form-group {
  margin-bottom: 40rpx;
}
.label {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #e8e8e8;
  margin-bottom: 15rpx;
}
.input {
  width: 100%;
  height: 80rpx;
  background-color: #1A202C;
  border: 1rpx solid #303030;
  border-radius: 16rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #fff;
}
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  align-items: center;
}
.tag-item {
  display: flex;
  align-items: center;
  background-color: #00A9FF;
  color: #fff;
  padding: 8rpx 15rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}
.remove-tag {
  margin-left: 10rpx;
  font-size: 24rpx;
  font-weight: bold;
}
.add-tag-container {
  display: flex;
  margin-top: 10rpx;
}
.tag-input {
  flex: 1;
  height: 60rpx;
  background-color: #1A202C;
  border: 1rpx solid #303030;
  border-radius: 16rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
  color: #fff;
}
.add-tag-btn {
  width: 100rpx;
  height: 60rpx;
  background: linear-gradient(to right, #00F5A0, #00D18C);
  color: #141414;
  border-radius: 16rpx;
  font-size: 24rpx;
  margin-left: 10rpx;
}
.picker-view {
  width: 100%;
  height: 80rpx;
  background-color: #1A202C;
  border: 1rpx solid #303030;
  border-radius: 16rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #fff;
}
.textarea {
  width: 100%;
  height: 200rpx;
  background-color: #1A202C;
  border: 1rpx solid #303030;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #fff;
  text-align: left;
  vertical-align: top;
}
.switch {
  transform: scale(0.8);
}

/* 保存按钮区域 */
.save-section {
  display: flex;
  gap: 20rpx;
}
.save-btn {
  flex: 1;
  height: 80rpx;
  background: linear-gradient(to right, #00F5A0, #00D18C);
  color: #141414;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cancel-btn {
  flex: 1;
  height: 80rpx;
  background: linear-gradient(to right, #8c8c8c, #6c6c6c);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}