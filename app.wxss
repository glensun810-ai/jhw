/* ==================== 全局变量 ==================== */
page {
  /* 主色调 */
  --primary-color: #1a1a2e;
  --accent-color: #0f3460;
  --secondary-color: #16213e;
  
  /* 功能色 */
  --success-color: #27ae60;
  --warning-color: #f39c12;
  --error-color: #e74c3c;
  --info-color: #3498db;
  
  /* 文本色 */
  --text-primary: #2c3e50;
  --text-secondary: #7f8c8d;
  --text-light: #ffffff;
  --text-muted: rgba(127, 140, 145, 0.8);
  
  /* 背景色 */
  --bg-color: #f5f6fa;
  --bg-dark: #121826;
  --bg-card: #1A202C;
  
  /* 边框色 */
  --border-color: rgba(255, 255, 255, 0.1);
  --border-light: #303030;
  
  /* 阴影 */
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  --shadow-md: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  --shadow-lg: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
  --shadow-glow: 0 0 30rpx rgba(0, 245, 160, 0.3);
  
  /* 过渡动画 */
  --transition-fast: 150ms ease;
  --transition-base: 300ms ease;
  --transition-slow: 500ms cubic-bezier(0.25, 0.46, 0.45, 0.94);
  
  /* 圆角 */
  --radius-sm: 8rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  --radius-xl: 48rpx;
}

