/* components/CompetitorMatrix/CompetitorMatrix.wxss */
.competitor-matrix {
  background-color: #1A202C;
  border: 1rpx solid #303030;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(20px); /* 玻璃拟态 */
  background: rgba(255, 255, 255, 0.05); /* 玻璃拟态背景 */
}

/* 添加海军蓝渐变边框效果 */
.competitor-matrix::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #1A237E, #00E5FF);
  z-index: 1;
}

.matrix-wrapper,
.matrix-header,
.matrix-content,
.placeholder-container {
  position: relative;
  z-index: 2;
}

.matrix-header {
  margin-bottom: 20rpx;
}

.matrix-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #e8e8e8;
}

.cyber-cyan { color: #00E5FF; }

.matrix-content {
  display: flex;
  gap: 20rpx;
}

.column {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.column-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.column-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.column-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #e8e8e8;
}

.keyword-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  min-height: 100rpx;
  padding: 20rpx;
  background-color: #262626;
  border-radius: 12rpx;
}

.keyword-tag {
  font-size: 24rpx;
  padding: 10rpx 16rpx;
  border-radius: 20rpx;
  white-space: nowrap;
  font-weight: bold;
  font-family: 'DIN Alternate', 'Courier New', monospace; /* 字体质感 */
}

.brand-keyword {
  background: linear-gradient(135deg, #00E5FF 0%, #00A9FF 100%); /* 青色渐变 */
  color: #FFFFFF; /* 白色文字 */
  border: 1rpx solid #00E5FF;
  box-shadow: 0 0 15rpx rgba(0, 242, 255, 0.15); /* 发光呼吸感 */
}

.competitor-keyword {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF416C 100%); /* 红色渐变 */
  color: #FFFFFF; /* 白色文字 */
  border: 1rpx solid #FF6B6B;
  box-shadow: 0 0 15rpx rgba(255, 107, 107, 0.15); /* 发光呼吸感 */
}

.shared-keyword {
  background: linear-gradient(135deg, #FFD93D 0%, #FFA726 100%); /* 黄色渐变，表示重叠 */
  color: #1A237E; /* 深色文字 */
  border: 1rpx solid #FFD93D;
  font-weight: bold;
  box-shadow: 0 0 15rpx rgba(255, 217, 61, 0.15); /* 发光呼吸感 */
}

.placeholder {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #00E5FF; /* 使用科技青色 */
  font-size: 24rpx;
  font-weight: bold;
  font-family: 'DIN Alternate', 'Courier New', monospace; /* 字体质感 */
}

.placeholder-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  width: 100%;
  backdrop-filter: blur(10px); /* 玻璃拟态 */
}

.placeholder-text {
  font-size: 28rpx;
  color: #00E5FF; /* 使用科技青色 */
  font-weight: bold;
  font-family: 'DIN Alternate', 'Courier New', monospace; /* 字体质感 */
  text-align: center;
}