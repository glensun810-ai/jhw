/**
 * 情报流水线组件样式 - 增强版
 * 麦肯锡风格 + 科技感视觉设计
 */

.intelligence-pipeline {
  --primary-bg: rgba(255, 255, 255, 0.03);
  --secondary-bg: rgba(255, 255, 255, 0.05);
  --card-bg: rgba(255, 255, 255, 0.04);
  --border-color: rgba(255, 255, 255, 0.08);
  --accent-color: #0f3460;
  --highlight-color: #e94560;
  --success-color: #10b981;
  --warning-color: #f59e0b;
  --error-color: #ef4444;
  --text-primary: #f8fafc;
  --text-secondary: #94a3b8;
  --text-muted: #64748b;

  background: var(--primary-bg);
  border-radius: 24rpx;
  border: 1rpx solid var(--border-color);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.intelligence-pipeline.sse-connected {
  border-color: rgba(233, 69, 96, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(233, 69, 96, 0.15);
}

.intelligence-pipeline.collapsed {
  background: rgba(255, 255, 255, 0.02);
}

/* ====================
   头部区域
   ==================== */
.pipeline-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  cursor: pointer;
  transition: background 0.2s ease;
  border-bottom: 1rpx solid transparent;
}

.pipeline-header:active {
  background: rgba(255, 255, 255, 0.05);
}

.intelligence-pipeline:not(.collapsed) .pipeline-header {
  border-bottom-color: var(--border-color);
}

.pipeline-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}

.pipeline-icon-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pipeline-icon {
  font-size: 40rpx;
  filter: drop-shadow(0 0 12rpx rgba(233, 69, 96, 0.5));
  transition: transform 0.3s ease;
}

.pipeline-icon-wrapper.live .pipeline-icon {
  animation: icon-pulse 2s ease-in-out infinite;
}

@keyframes icon-pulse {
  0%, 100% {
    transform: scale(1) rotate(0deg);
  }
  25% {
    transform: scale(1.15) rotate(-5deg);
  }
  75% {
    transform: scale(1.15) rotate(5deg);
  }
}

.pipeline-text {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  letter-spacing: 1rpx;
}

/* 实时指示器 */
.live-indicator {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: linear-gradient(135deg, rgba(233, 69, 96, 0.2), rgba(233, 69, 96, 0.1));
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(233, 69, 96, 0.3);
  margin-left: 12rpx;
}

.live-dot {
  width: 10rpx;
  height: 10rpx;
  background: var(--highlight-color);
  border-radius: 50%;
  animation: dot-blink 1.5s ease-in-out infinite;
  box-shadow: 0 0 12rpx var(--highlight-color);
}

@keyframes dot-blink {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.4;
    transform: scale(0.85);
  }
}

.live-text {
  font-size: 20rpx;
  font-weight: 700;
  color: var(--highlight-color);
  letter-spacing: 1.5rpx;
}

/* SSE 状态 */
.sse-status {
  display: flex;
  align-items: center;
  gap: 6rpx;
  background: rgba(16, 185, 129, 0.15);
  padding: 6rpx 14rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(16, 185, 129, 0.3);
  margin-left: 12rpx;
}

.sse-icon {
  font-size: 20rpx;
  animation: sse-pulse 2s ease-in-out infinite;
}

@keyframes sse-pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.6;
  }
}

.sse-text {
  font-size: 20rpx;
  font-weight: 600;
  color: var(--success-color);
}

/* 操作区域 */
.pipeline-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.pipeline-count-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  background: rgba(255, 255, 255, 0.05);
  padding: 8rpx 18rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.08);
}

.pipeline-count {
  font-size: 26rpx;
  font-weight: 700;
  color: var(--text-primary);
  font-family: 'SF Mono', monospace;
}

.count-label {
  font-size: 18rpx;
  color: var(--text-muted);
}

.collapse-icon-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.05);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.collapse-icon-wrapper.collapsed {
  transform: rotate(-90deg);
}

.collapse-icon {
  font-size: 20rpx;
  color: var(--text-secondary);
}

/* ====================
   内容区域
   ==================== */
.pipeline-content {
  border-top: 1rpx solid var(--border-color);
}

.pipeline-scroll {
  max-height: 560rpx;
}

.pipeline-list {
  padding: 20rpx;
}

/* 空状态 */
.empty-state {
  padding: 100rpx 32rpx;
  text-align: center;
}

.empty-animation {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.empty-icon-wrapper {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, rgba(15, 52, 96, 0.3), rgba(233, 69, 96, 0.1));
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
}

.empty-icon {
  font-size: 64rpx;
  animation: empty-float 3s ease-in-out infinite;
}

@keyframes empty-float {
  0%, 100% {
    transform: translateY(0) rotate(0deg);
  }
  25% {
    transform: translateY(-16rpx) rotate(5deg);
  }
  75% {
    transform: translateY(-16rpx) rotate(-5deg);
  }
}

.empty-text {
  font-size: 30rpx;
  color: var(--text-primary);
  font-weight: 600;
}

.empty-sub {
  font-size: 24rpx;
  color: var(--text-muted);
}

.empty-loading {
  margin-top: 20rpx;
}

.loading-ring {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.1);
  border-top-color: var(--highlight-color);
  border-radius: 50%;
  animation: ring-spin 1s linear infinite;
}

@keyframes ring-spin {
  to {
    transform: rotate(360deg);
  }
}

/* 加载中状态 */
.loading-state {
  padding: 60rpx 32rpx;
  text-align: center;
}

.loading-spinner-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.loading-spinner {
  width: 56rpx;
  height: 56rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.1);
  border-top-color: var(--highlight-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* 情报项 */
.intelligence-item {
  display: flex;
  gap: 20rpx;
  padding: 24rpx;
  background: var(--card-bg);
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid var(--border-color);
  border-left: 4rpx solid var(--accent-color);
  animation: item-slide-in 0.5s cubic-bezier(0.4, 0, 0.2, 1) backwards;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.intelligence-item:last-child {
  margin-bottom: 0;
}

.intelligence-item:active {
  transform: scale(0.985);
}

.intelligence-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.03), transparent);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.intelligence-item:active::before {
  opacity: 1;
}

@keyframes item-slide-in {
  from {
    opacity: 0;
    transform: translateX(-40rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.intelligence-item.item-processing {
  border-left-color: var(--accent-color);
  background: linear-gradient(135deg, rgba(15, 52, 96, 0.15), rgba(15, 52, 96, 0.08));
}

.intelligence-item.item-success {
  border-left-color: var(--success-color);
  background: linear-gradient(135deg, rgba(16, 185, 129, 0.08), rgba(16, 185, 129, 0.03));
}

.intelligence-item.item-error {
  border-left-color: var(--error-color);
  background: linear-gradient(135deg, rgba(239, 68, 68, 0.08), rgba(239, 68, 68, 0.03));
}

/* 状态指示器 */
.item-status-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  flex-shrink: 0;
}

.item-status {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  flex-shrink: 0;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16rpx;
  font-weight: 700;
  color: var(--text-primary);
  z-index: 1;
}

.status-pending {
  background: rgba(255, 255, 255, 0.2);
}

.status-processing {
  background: var(--accent-color);
  animation: status-blink 1s ease-in-out infinite;
}

.status-success {
  background: var(--success-color);
}

.status-error {
  background: var(--error-color);
}

@keyframes status-blink {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

.status-ring {
  position: absolute;
  top: -6rpx;
  left: -6rpx;
  right: -6rpx;
  bottom: -6rpx;
  border: 3rpx solid var(--accent-color);
  border-radius: 50%;
  animation: ring-pulse 1.5s ease-in-out infinite;
}

@keyframes ring-pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.4);
    opacity: 0;
  }
}

.status-line {
  width: 2rpx;
  flex: 1;
  min-height: 40rpx;
  background: linear-gradient(to bottom, var(--border-color), transparent);
}

/* 内容卡片 */
.item-card {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 头部 */
.item-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 16rpx;
}

.item-question-wrapper {
  flex: 1;
  min-width: 0;
}

.item-question {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-badges {
  display: flex;
  gap: 10rpx;
  flex-shrink: 0;
}

.item-badge {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 10rpx;
  font-weight: 600;
  white-space: nowrap;
}

.model-badge {
  background: linear-gradient(135deg, rgba(15, 52, 96, 0.6), rgba(15, 52, 96, 0.4));
  color: var(--text-primary);
  border: 1rpx solid rgba(15, 52, 96, 0.8);
}

.badge-icon {
  font-size: 18rpx;
}

.status-badge {
  color: var(--text-primary);
}

.status-badge.status-pending {
  background: rgba(255, 255, 255, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.status-badge.status-processing {
  background: var(--accent-color);
  border: 1rpx solid var(--accent-color);
}

.status-badge.status-success {
  background: var(--success-color);
  border: 1rpx solid var(--success-color);
}

.status-badge.status-error {
  background: var(--error-color);
  border: 1rpx solid var(--error-color);
}

/* 元信息 */
.item-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.item-meta-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 22rpx;
  color: var(--text-secondary);
}

.meta-icon {
  font-size: 20rpx;
}

.meta-text {
  font-family: 'SF Mono', monospace;
}

/* 响应预览 */
.item-preview {
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.25);
  border-radius: 14rpx;
  border-left: 4rpx solid var(--success-color);
  position: relative;
  overflow: hidden;
}

.item-preview::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: linear-gradient(to right, var(--success-color), transparent);
}

.preview-label {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 10rpx;
}

.label-icon {
  font-size: 20rpx;
}

.label-text {
  font-size: 22rpx;
  color: var(--success-color);
  font-weight: 600;
}

.preview-text {
  font-size: 24rpx;
  color: rgba(248, 250, 252, 0.75);
  line-height: 1.7;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 错误信息 */
.item-error {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
  padding: 16rpx;
  background: linear-gradient(135deg, rgba(239, 68, 68, 0.1), rgba(239, 68, 68, 0.05));
  border-radius: 14rpx;
  border: 1rpx solid rgba(239, 68, 68, 0.2);
}

.error-wrapper {
  display: flex;
  align-items: center;
  gap: 10rpx;
  flex: 1;
}

.error-icon {
  font-size: 26rpx;
}

.error-text {
  font-size: 24rpx;
  color: var(--error-color);
  flex: 1;
}

.retry-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: linear-gradient(135deg, rgba(239, 68, 68, 0.2), rgba(239, 68, 68, 0.1));
  border: 1rpx solid rgba(239, 68, 68, 0.3);
  padding: 10rpx 20rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  color: var(--error-color);
  font-weight: 600;
}

.retry-btn:active {
  background: rgba(239, 68, 68, 0.3);
}

/* 底部加载指示器 */
.bottom-loading {
  padding: 32rpx;
  text-align: center;
}

.loading-dots {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background: var(--highlight-color);
  border-radius: 50%;
  animation: dot-bounce 1.4s ease-in-out infinite both;
}

.dot:nth-child(1) {
  animation-delay: -0.32s;
}

.dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes dot-bounce {
  0%, 80%, 100% {
    transform: scale(0.6);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

/* ====================
   底部区域
   ==================== */
.pipeline-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid var(--border-color);
  background: rgba(0, 0, 0, 0.15);
}

.footer-stats {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 700;
  font-family: 'SF Mono', monospace;
}

.stat-item.success .stat-value {
  color: var(--success-color);
  text-shadow: 0 0 20rpx rgba(16, 185, 129, 0.4);
}

.stat-item.processing .stat-value {
  color: var(--accent-color);
  text-shadow: 0 0 20rpx rgba(15, 52, 96, 0.4);
}

.stat-item.error .stat-value {
  color: var(--error-color);
  text-shadow: 0 0 20rpx rgba(239, 68, 68, 0.4);
}

.stat-label {
  font-size: 20rpx;
  color: var(--text-muted);
}

.stat-divider {
  width: 1rpx;
  height: 40rpx;
  background: linear-gradient(to bottom, transparent, var(--border-color), transparent);
}

.footer-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 10rpx;
  background: rgba(255, 255, 255, 0.05);
  border: 1rpx solid var(--border-color);
  padding: 12rpx 24rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
  font-weight: 600;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.95);
}

.clear-btn {
  background: linear-gradient(135deg, rgba(239, 68, 68, 0.15), rgba(239, 68, 68, 0.08));
  border: 1rpx solid rgba(239, 68, 68, 0.3);
  color: var(--error-color);
}

.clear-btn:active {
  background: rgba(239, 68, 68, 0.25);
}

.btn-icon {
  font-size: 26rpx;
}

.btn-text {
  font-weight: 600;
}
