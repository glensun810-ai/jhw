/**
 * 情报流水线组件样式 - 增强版
 * 麦肯锡风格 + 科技感视觉设计 + 高级 CSS3 特效
 * 
 * 特效列表:
 * - 玻璃态效果 (Glassmorphism)
 * - 高斯模糊 (Gaussian Blur)
 * - 流光溢彩 (Light Streaming)
 * - 粒子背景 (Particle Background)
 * - 霓虹光晕 (Neon Glow)
 * - 渐变动画 (Gradient Animation)
 */

.intelligence-pipeline {
  /* 核心变量 */
  --primary-bg: rgba(255, 255, 255, 0.03);
  --secondary-bg: rgba(255, 255, 255, 0.05);
  --card-bg: rgba(255, 255, 255, 0.04);
  --border-color: rgba(255, 255, 255, 0.08);
  --accent-color: #0f3460;
  --highlight-color: #e94560;
  --success-color: #10b981;
  --warning-color: #f59e0b;
  --error-color: #ef4444;
  --text-primary: #f8fafc;
  --text-secondary: #94a3b8;
  --text-muted: #64748b;
  
  /* 高级效果变量 */
  --blur-strength: 20rpx;
  --glow-intensity: 0.5;
  --shine-duration: 3s;
  --pulse-duration: 2s;

  position: relative;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.03) 0%,
    rgba(255, 255, 255, 0.01) 100%
  );
  border-radius: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  
  /* 玻璃态效果 */
  backdrop-filter: blur(var(--blur-strength));
  -webkit-backdrop-filter: blur(var(--blur-strength));
  
  /* 多层阴影 */
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.3),
    0 2rpx 8rpx rgba(0, 0, 0, 0.2),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
}

/* SSE 连接状态 - 霓虹光晕 */
.intelligence-pipeline.sse-connected {
  border-color: rgba(233, 69, 96, 0.4);
  box-shadow:
    0 8rpx 32rpx rgba(233, 69, 96, 0.2),
    0 0 40rpx rgba(233, 69, 96, 0.15),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.15);
}

/* 流光溢彩动画 */
.intelligence-pipeline.sse-connected::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 2rpx;
  background: linear-gradient(
    90deg,
    transparent,
    var(--highlight-color),
    transparent
  );
  animation: shine-top var(--shine-duration) ease-in-out infinite;
}

@keyframes shine-top {
  0%, 100% {
    left: -100%;
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
  100% {
    left: 100%;
    opacity: 0;
  }
}

.intelligence-pipeline.collapsed {
  background: rgba(255, 255, 255, 0.02);
}

/* ====================
   背景粒子效果
   ==================== */
.intelligence-pipeline::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background-image: 
    radial-gradient(circle at 20% 50%, rgba(233, 69, 96, 0.05) 0%, transparent 50%),
    radial-gradient(circle at 80% 80%, rgba(15, 52, 96, 0.08) 0%, transparent 50%),
    radial-gradient(circle at 40% 20%, rgba(16, 185, 129, 0.04) 0%, transparent 40%);
  animation: particle-float 20s ease-in-out infinite;
  pointer-events: none;
  z-index: 0;
}

@keyframes particle-float {
  0%, 100% {
    transform: translate(0, 0) rotate(0deg);
  }
  33% {
    transform: translate(30rpx, -30rpx) rotate(120deg);
  }
  66% {
    transform: translate(-20rpx, 20rpx) rotate(240deg);
  }
}

/* ====================
   头部区域
   ==================== */
.pipeline-header {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  cursor: pointer;
  transition: background 0.2s ease;
  border-bottom: 1rpx solid transparent;
  
  /* 头部玻璃态增强 */
  background: linear-gradient(
    180deg,
    rgba(255, 255, 255, 0.05) 0%,
    transparent 100%
  );
}

.pipeline-header:active {
  background: rgba(255, 255, 255, 0.08);
}

.intelligence-pipeline:not(.collapsed) .pipeline-header {
  border-bottom-color: rgba(255, 255, 255, 0.1);
}

.pipeline-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}

.pipeline-icon-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pipeline-icon {
  font-size: 40rpx;
  /* 霓虹光晕效果 */
  filter: drop-shadow(0 0 12rpx rgba(233, 69, 96, 0.6))
          drop-shadow(0 0 24rpx rgba(233, 69, 96, 0.4))
          drop-shadow(0 0 36rpx rgba(233, 69, 96, 0.2));
  transition: transform 0.3s ease;
}

.pipeline-icon-wrapper.live .pipeline-icon {
  animation: icon-pulse-enhanced 2s ease-in-out infinite;
}

@keyframes icon-pulse-enhanced {
  0%, 100% {
    transform: scale(1) rotate(0deg);
    filter: drop-shadow(0 0 12rpx rgba(233, 69, 96, 0.6))
            drop-shadow(0 0 24rpx rgba(233, 69, 96, 0.4));
  }
  50% {
    transform: scale(1.15) rotate(-5deg);
    filter: drop-shadow(0 0 20rpx rgba(233, 69, 96, 0.8))
            drop-shadow(0 0 40rpx rgba(233, 69, 96, 0.6))
            drop-shadow(0 0 60rpx rgba(233, 69, 96, 0.4));
  }
}

.pipeline-text {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  letter-spacing: 1rpx;
  
  /* 文字光晕 */
  text-shadow: 0 0 20rpx rgba(248, 250, 252, 0.3);
}

/* 实时指示器 - 增强版 */
.live-indicator {
  position: relative;
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: linear-gradient(
    135deg,
    rgba(233, 69, 96, 0.25),
    rgba(233, 69, 96, 0.1)
  );
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(233, 69, 96, 0.4);
  margin-left: 12rpx;
  
  /* 流光溢彩 */
  overflow: hidden;
}

.live-indicator::after {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    45deg,
    transparent 30%,
    rgba(255, 255, 255, 0.1) 50%,
    transparent 70%
  );
  animation: live-shine 3s ease-in-out infinite;
}

@keyframes live-shine {
  0%, 100% {
    transform: translateX(-100%) rotate(45deg);
  }
  100% {
    transform: translateX(100%) rotate(45deg);
  }
}

.live-dot {
  position: relative;
  z-index: 1;
  width: 10rpx;
  height: 10rpx;
  background: var(--highlight-color);
  border-radius: 50%;
  animation: dot-blink-enhanced 1.5s ease-in-out infinite;
  box-shadow: 
    0 0 12rpx var(--highlight-color),
    0 0 24rpx var(--highlight-color),
    0 0 36rpx rgba(233, 69, 96, 0.5);
}

@keyframes dot-blink-enhanced {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
    box-shadow: 
      0 0 12rpx var(--highlight-color),
      0 0 24rpx var(--highlight-color);
  }
  50% {
    opacity: 0.4;
    transform: scale(0.85);
    box-shadow: 
      0 0 6rpx var(--highlight-color),
      0 0 12rpx var(--highlight-color);
  }
}

.live-text {
  position: relative;
  z-index: 1;
  font-size: 20rpx;
  font-weight: 700;
  color: var(--highlight-color);
  letter-spacing: 1.5rpx;
  
  /* 文字霓虹效果 */
  text-shadow: 
    0 0 10rpx var(--highlight-color),
    0 0 20rpx rgba(233, 69, 96, 0.5);
}

/* SSE 状态 - 增强版 */
.sse-status {
  position: relative;
  display: flex;
  align-items: center;
  gap: 6rpx;
  background: linear-gradient(
    135deg,
    rgba(16, 185, 129, 0.2),
    rgba(16, 185, 129, 0.1)
  );
  padding: 6rpx 14rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(16, 185, 129, 0.4);
  margin-left: 12rpx;
  
  /* 呼吸光晕 */
  animation: sse-glow 2s ease-in-out infinite;
}

@keyframes sse-glow {
  0%, 100% {
    box-shadow: 
      0 0 12rpx rgba(16, 185, 129, 0.3),
      inset 0 0 12rpx rgba(16, 185, 129, 0.1);
  }
  50% {
    box-shadow: 
      0 0 24rpx rgba(16, 185, 129, 0.5),
      inset 0 0 24rpx rgba(16, 185, 129, 0.2);
  }
}

.sse-icon {
  font-size: 20rpx;
  animation: sse-pulse 2s ease-in-out infinite;
  filter: drop-shadow(0 0 8rpx rgba(16, 185, 129, 0.6));
}

@keyframes sse-pulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.6;
    transform: scale(1.1);
  }
}

.sse-text {
  font-size: 20rpx;
  font-weight: 600;
  color: var(--success-color);
  text-shadow: 0 0 12rpx rgba(16, 185, 129, 0.5);
}

/* 操作区域 */
.pipeline-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.pipeline-count-wrapper {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.08),
    rgba(255, 255, 255, 0.03)
  );
  padding: 8rpx 18rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  
  /* 内发光效果 */
  box-shadow: inset 0 0 20rpx rgba(255, 255, 255, 0.05);
}

.pipeline-count {
  font-size: 26rpx;
  font-weight: 700;
  color: var(--text-primary);
  font-family: 'SF Mono', monospace;
  
  /* 数字霓虹效果 */
  text-shadow: 0 0 16rpx rgba(248, 250, 252, 0.4);
}

.count-label {
  font-size: 18rpx;
  color: var(--text-muted);
}

.collapse-icon-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.08),
    rgba(255, 255, 255, 0.03)
  );
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.collapse-icon-wrapper.collapsed {
  transform: rotate(-90deg);
}

.collapse-icon-wrapper::before {
  content: '';
  position: absolute;
  inset: -2rpx;
  border-radius: 50%;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.2),
    transparent
  );
  z-index: -1;
}

.collapse-icon {
  font-size: 20rpx;
  color: var(--text-secondary);
  text-shadow: 0 0 8rpx rgba(148, 163, 184, 0.5);
}

/* ====================
   内容区域
   ==================== */
.pipeline-content {
  position: relative;
  z-index: 1;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}

.pipeline-scroll {
  max-height: 560rpx;
}

.pipeline-list {
  padding: 20rpx;
}

/* 空状态 - 增强版 */
.empty-state {
  position: relative;
  padding: 100rpx 32rpx;
  text-align: center;
}

.empty-animation {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.empty-icon-wrapper {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(
    135deg,
    rgba(15, 52, 96, 0.4),
    rgba(233, 69, 96, 0.15)
  );
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.15);
  
  /* 多层光晕 */
  box-shadow: 
    0 0 40rpx rgba(15, 52, 96, 0.4),
    0 0 80rpx rgba(233, 69, 96, 0.2),
    inset 0 0 40rpx rgba(255, 255, 255, 0.05);
  
  /* 旋转光效 */
  animation: empty-rotate 10s linear infinite;
}

@keyframes empty-rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.empty-icon {
  font-size: 64rpx;
  animation: empty-float-enhanced 3s ease-in-out infinite;
  filter: drop-shadow(0 0 20rpx rgba(255, 255, 255, 0.4));
}

@keyframes empty-float-enhanced {
  0%, 100% {
    transform: translateY(0) rotate(0deg);
  }
  25% {
    transform: translateY(-16rpx) rotate(5deg);
  }
  75% {
    transform: translateY(-16rpx) rotate(-5deg);
  }
}

.empty-text {
  font-size: 30rpx;
  color: var(--text-primary);
  font-weight: 600;
  text-shadow: 0 0 20rpx rgba(248, 250, 252, 0.3);
}

.empty-sub {
  font-size: 24rpx;
  color: var(--text-muted);
}

.empty-loading {
  margin-top: 20rpx;
}

.loading-ring {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.1);
  border-top-color: var(--highlight-color);
  border-radius: 50%;
  animation: ring-spin 1s linear infinite;
  box-shadow: 0 0 20rpx rgba(233, 69, 96, 0.3);
}

@keyframes ring-spin {
  to {
    transform: rotate(360deg);
  }
}

/* 加载中状态 */
.loading-state {
  position: relative;
  padding: 60rpx 32rpx;
  text-align: center;
}

.loading-spinner-wrapper {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.loading-spinner {
  width: 56rpx;
  height: 56rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.1);
  border-top-color: var(--highlight-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  
  /* 多层光晕 */
  box-shadow: 
    0 0 24rpx rgba(233, 69, 96, 0.3),
    0 0 48rpx rgba(233, 69, 96, 0.15);
}

.loading-text {
  font-size: 26rpx;
  color: var(--text-secondary);
  text-shadow: 0 0 12rpx rgba(148, 163, 184, 0.3);
}

/* 情报项 - 增强版 */
.intelligence-item {
  position: relative;
  display: flex;
  gap: 20rpx;
  padding: 24rpx;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.05),
    rgba(255, 255, 255, 0.02)
  );
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-left: 4rpx solid var(--accent-color);
  animation: item-slide-in-enhanced 0.5s cubic-bezier(0.4, 0, 0.2, 1) backwards;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
  
  /* 玻璃态增强 */
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
}

.intelligence-item:last-child {
  margin-bottom: 0;
}

.intelligence-item:active {
  transform: scale(0.985);
}

/* 流光溢彩效果 */
.intelligence-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.08),
    transparent
  );
  transition: left 0.5s ease;
}

.intelligence-item:active::before {
  left: 100%;
}

@keyframes item-slide-in-enhanced {
  from {
    opacity: 0;
    transform: translateX(-40rpx);
    filter: blur(10rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
    filter: blur(0);
  }
}

.intelligence-item.item-processing {
  border-left-color: var(--accent-color);
  background: linear-gradient(
    135deg,
    rgba(15, 52, 96, 0.2),
    rgba(15, 52, 96, 0.08)
  );
  box-shadow: 
    0 0 24rpx rgba(15, 52, 96, 0.2),
    inset 0 0 24rpx rgba(15, 52, 96, 0.05);
}

.intelligence-item.item-success {
  border-left-color: var(--success-color);
  background: linear-gradient(
    135deg,
    rgba(16, 185, 129, 0.1),
    rgba(16, 185, 129, 0.03)
  );
  box-shadow: 
    0 0 24rpx rgba(16, 185, 129, 0.15),
    inset 0 0 24rpx rgba(16, 185, 129, 0.05);
}

.intelligence-item.item-error {
  border-left-color: var(--error-color);
  background: linear-gradient(
    135deg,
    rgba(239, 68, 68, 0.1),
    rgba(239, 68, 68, 0.03)
  );
  box-shadow: 
    0 0 24rpx rgba(239, 68, 68, 0.15),
    inset 0 0 24rpx rgba(239, 68, 68, 0.05);
}

/* 状态指示器 */
.item-status-wrapper {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  flex-shrink: 0;
}

.item-status {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  flex-shrink: 0;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16rpx;
  font-weight: 700;
  color: var(--text-primary);
  z-index: 1;
}

.status-pending {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 0.1));
  box-shadow: 0 0 12rpx rgba(255, 255, 255, 0.3);
}

.status-processing {
  background: linear-gradient(135deg, var(--accent-color), rgba(15, 52, 96, 0.8));
  animation: status-blink-enhanced 1s ease-in-out infinite;
  box-shadow: 
    0 0 12rpx var(--accent-color),
    0 0 24rpx rgba(15, 52, 96, 0.5);
}

.status-success {
  background: linear-gradient(135deg, var(--success-color), rgba(16, 185, 129, 0.8));
  box-shadow: 
    0 0 12rpx var(--success-color),
    0 0 24rpx rgba(16, 185, 129, 0.4);
}

.status-error {
  background: linear-gradient(135deg, var(--error-color), rgba(239, 68, 68, 0.8));
  box-shadow: 
    0 0 12rpx var(--error-color),
    0 0 24rpx rgba(239, 68, 68, 0.4);
}

@keyframes status-blink-enhanced {
  0%, 100% {
    opacity: 1;
    box-shadow: 
      0 0 12rpx var(--accent-color),
      0 0 24rpx rgba(15, 52, 96, 0.5);
  }
  50% {
    opacity: 0.5;
    box-shadow: 
      0 0 6rpx var(--accent-color),
      0 0 12rpx rgba(15, 52, 96, 0.3);
  }
}

.status-ring {
  position: absolute;
  top: -6rpx;
  left: -6rpx;
  right: -6rpx;
  bottom: -6rpx;
  border: 3rpx solid var(--accent-color);
  border-radius: 50%;
  animation: ring-pulse-enhanced 1.5s ease-in-out infinite;
}

@keyframes ring-pulse-enhanced {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
    border-color: var(--accent-color);
  }
  50% {
    transform: scale(1.4);
    opacity: 0;
    border-color: rgba(15, 52, 96, 0.5);
  }
}

.status-line {
  width: 2rpx;
  flex: 1;
  min-height: 40rpx;
  background: linear-gradient(
    to bottom,
    rgba(255, 255, 255, 0.1),
    transparent
  );
}

/* 内容卡片 */
.item-card {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 头部 */
.item-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 16rpx;
}

.item-question-wrapper {
  flex: 1;
  min-width: 0;
}

.item-question {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-shadow: 0 0 12rpx rgba(248, 250, 252, 0.2);
}

.item-badges {
  display: flex;
  gap: 10rpx;
  flex-shrink: 0;
}

.item-badge {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 10rpx;
  font-weight: 600;
  white-space: nowrap;
}

.model-badge {
  background: linear-gradient(
    135deg,
    rgba(15, 52, 96, 0.7),
    rgba(15, 52, 96, 0.4)
  );
  color: var(--text-primary);
  border: 1rpx solid rgba(15, 52, 96, 0.8);
  box-shadow: 
    0 0 12rpx rgba(15, 52, 96, 0.3),
    inset 0 0 12rpx rgba(255, 255, 255, 0.05);
}

.badge-icon {
  font-size: 18rpx;
}

.status-badge {
  color: var(--text-primary);
}

.status-badge.status-pending {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 0.15));
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 0 12rpx rgba(255, 255, 255, 0.2);
}

.status-badge.status-processing {
  background: linear-gradient(135deg, var(--accent-color), rgba(15, 52, 96, 0.8));
  border: 1rpx solid var(--accent-color);
  box-shadow: 0 0 12rpx var(--accent-color);
}

.status-badge.status-success {
  background: linear-gradient(135deg, var(--success-color), rgba(16, 185, 129, 0.8));
  border: 1rpx solid var(--success-color);
  box-shadow: 0 0 12rpx var(--success-color);
}

.status-badge.status-error {
  background: linear-gradient(135deg, var(--error-color), rgba(239, 68, 68, 0.8));
  border: 1rpx solid var(--error-color);
  box-shadow: 0 0 12rpx var(--error-color);
}

/* 元信息 */
.item-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.item-meta-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 22rpx;
  color: var(--text-secondary);
}

.meta-icon {
  font-size: 20rpx;
  filter: drop-shadow(0 0 8rpx rgba(255, 255, 255, 0.3));
}

.meta-text {
  font-family: 'SF Mono', monospace;
  text-shadow: 0 0 8rpx rgba(148, 163, 184, 0.2);
}

/* 响应预览 */
.item-preview {
  position: relative;
  padding: 20rpx;
  background: linear-gradient(
    135deg,
    rgba(0, 0, 0, 0.3),
    rgba(0, 0, 0, 0.2)
  );
  border-radius: 14rpx;
  border-left: 4rpx solid var(--success-color);
  overflow: hidden;
  
  /* 内发光 */
  box-shadow: 
    inset 0 0 24rpx rgba(16, 185, 129, 0.1),
    0 0 12rpx rgba(16, 185, 129, 0.1);
}

.item-preview::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: linear-gradient(
    to right,
    var(--success-color),
    rgba(16, 185, 129, 0.5),
    transparent
  );
}

.preview-label {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 10rpx;
}

.label-icon {
  font-size: 20rpx;
  animation: label-pulse 2s ease-in-out infinite;
}

@keyframes label-pulse {
  0%, 100% {
    filter: drop-shadow(0 0 8rpx var(--success-color));
  }
  50% {
    filter: drop-shadow(0 0 16rpx var(--success-color));
  }
}

.label-text {
  font-size: 22rpx;
  color: var(--success-color);
  font-weight: 600;
  text-shadow: 0 0 12rpx rgba(16, 185, 129, 0.4);
}

.preview-text {
  position: relative;
  z-index: 1;
  font-size: 24rpx;
  color: rgba(248, 250, 252, 0.8);
  line-height: 1.7;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-shadow: 0 0 12rpx rgba(255, 255, 255, 0.1);
}

/* 错误信息 */
.item-error {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
  padding: 16rpx;
  background: linear-gradient(
    135deg,
    rgba(239, 68, 68, 0.15),
    rgba(239, 68, 68, 0.08)
  );
  border-radius: 14rpx;
  border: 1rpx solid rgba(239, 68, 68, 0.3);
  
  /* 错误光晕 */
  box-shadow: 
    0 0 24rpx rgba(239, 68, 68, 0.15),
    inset 0 0 24rpx rgba(239, 68, 68, 0.05);
}

.error-wrapper {
  display: flex;
  align-items: center;
  gap: 10rpx;
  flex: 1;
}

.error-icon {
  font-size: 26rpx;
  animation: error-shake 0.5s ease-in-out infinite;
}

@keyframes error-shake {
  0%, 100% {
    transform: translateX(0);
  }
  25% {
    transform: translateX(-4rpx);
  }
  75% {
    transform: translateX(4rpx);
  }
}

.error-text {
  font-size: 24rpx;
  color: var(--error-color);
  flex: 1;
  text-shadow: 0 0 12rpx rgba(239, 68, 68, 0.3);
}

.retry-btn {
  position: relative;
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: linear-gradient(
    135deg,
    rgba(239, 68, 68, 0.25),
    rgba(239, 68, 68, 0.15)
  );
  border: 1rpx solid rgba(239, 68, 68, 0.4);
  padding: 10rpx 20rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  color: var(--error-color);
  font-weight: 600;
  transition: all 0.2s ease;
  
  /* 流光效果 */
  overflow: hidden;
}

.retry-btn::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    45deg,
    transparent 30%,
    rgba(255, 255, 255, 0.1) 50%,
    transparent 70%
  );
  animation: retry-shine 3s ease-in-out infinite;
}

@keyframes retry-shine {
  0%, 100% {
    transform: translateX(-100%) rotate(45deg);
  }
  100% {
    transform: translateX(100%) rotate(45deg);
  }
}

.retry-btn:active {
  background: rgba(239, 68, 68, 0.35);
  box-shadow: 0 0 24rpx rgba(239, 68, 68, 0.3);
}

/* 底部加载指示器 */
.bottom-loading {
  padding: 32rpx;
  text-align: center;
}

.loading-dots {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background: linear-gradient(
    135deg,
    var(--highlight-color),
    rgba(233, 69, 96, 0.6)
  );
  border-radius: 50%;
  animation: dot-bounce-enhanced 1.4s ease-in-out infinite both;
  box-shadow: 0 0 12rpx var(--highlight-color);
}

.dot:nth-child(1) {
  animation-delay: -0.32s;
}

.dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes dot-bounce-enhanced {
  0%, 80%, 100% {
    transform: scale(0.6);
    opacity: 0.5;
    box-shadow: 0 0 6rpx var(--highlight-color);
  }
  40% {
    transform: scale(1);
    opacity: 1;
    box-shadow: 
      0 0 12rpx var(--highlight-color),
      0 0 24rpx var(--highlight-color);
  }
}

/* ====================
   底部区域
   ==================== */
.pipeline-footer {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
  background: linear-gradient(
    180deg,
    rgba(0, 0, 0, 0.2) 0%,
    rgba(0, 0, 0, 0.15) 100%
  );
  
  /* 玻璃态 */
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
}

.footer-stats {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 700;
  font-family: 'SF Mono', monospace;
}

.stat-item.success .stat-value {
  color: var(--success-color);
  text-shadow: 
    0 0 20rpx rgba(16, 185, 129, 0.5),
    0 0 40rpx rgba(16, 185, 129, 0.3);
}

.stat-item.processing .stat-value {
  color: var(--accent-color);
  text-shadow: 
    0 0 20rpx rgba(15, 52, 96, 0.5),
    0 0 40rpx rgba(15, 52, 96, 0.3);
}

.stat-item.error .stat-value {
  color: var(--error-color);
  text-shadow: 
    0 0 20rpx rgba(239, 68, 68, 0.5),
    0 0 40rpx rgba(239, 68, 68, 0.3);
}

.stat-label {
  font-size: 20rpx;
  color: var(--text-muted);
}

.stat-divider {
  width: 1rpx;
  height: 40rpx;
  background: linear-gradient(
    to bottom,
    transparent,
    rgba(255, 255, 255, 0.15),
    transparent
  );
}

.footer-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  position: relative;
  display: flex;
  align-items: center;
  gap: 10rpx;
  background: rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  padding: 12rpx 24rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
  font-weight: 600;
  transition: all 0.2s ease;
  
  /* 玻璃态 */
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
}

.action-btn:active {
  transform: scale(0.95);
}

.clear-btn {
  background: linear-gradient(
    135deg,
    rgba(239, 68, 68, 0.2),
    rgba(239, 68, 68, 0.1)
  );
  border: 1rpx solid rgba(239, 68, 68, 0.4);
  color: var(--error-color);
  box-shadow: 0 0 12rpx rgba(239, 68, 68, 0.15);
}

.clear-btn:active {
  background: rgba(239, 68, 68, 0.3);
  box-shadow: 0 0 24rpx rgba(239, 68, 68, 0.25);
}

.btn-icon {
  font-size: 26rpx;
  filter: drop-shadow(0 0 8rpx rgba(255, 255, 255, 0.3));
}

.btn-text {
  font-weight: 600;
}
