<!-- components/ViewSwitcher/ViewSwitcher.wxml -->
<view class="view-switcher-container">
  <view class="view-switcher">
    <view
      class="switcher-option {{currentView === view.id ? 'active' : ''}}"
      wx:for="{{views}}"
      wx:key="id"
      data-view="{{view.id}}"
      bindtap="switchView">
      <text>{{view.label}}</text>
    </view>
    <view class="switcher-slider {{currentView === 'model' ? 'slide-to-model' : currentView === 'question' ? 'slide-to-question' : 'slide-to-standard'}}"></view>
  </view>
</view>