/* components/ViewSwitcher/ViewSwitcher.wxss */
.view-switcher-container {
  width: 100%;
  margin: 20rpx 0 40rpx 0;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.view-switcher {
  position: relative;
  width: 100%;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.05); /* 玻璃拟态 */
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 40rpx;
  backdrop-filter: blur(10px); /* 玻璃拟态模糊 */
  display: flex;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); /* 苹果级过渡 */
}

.switcher-option {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  z-index: 2;
  color: #8c8c8c;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); /* 苹果级过渡 */
}

.switcher-option.active {
  color: #00F2FF; /* 高亮科技青 */
}

.switcher-slider {
  position: absolute;
  top: 4rpx;
  height: calc(100% - 8rpx);
  width: calc(33.33% - 20rpx);
  background: linear-gradient(135deg, #00F2FF 0%, #00C853 100%); /* 科技青到绿渐变 */
  border-radius: 36rpx;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1); /* 苹果级过渡 */
  z-index: 1;
}

.slide-to-standard {
  transform: translateX(20rpx);
}

.slide-to-model {
  transform: translateX(calc(100% + 20rpx));
}

.slide-to-question {
  transform: translateX(calc(200% + 40rpx));
}