<!-- 分析图表主组件模板 -->
<view class="analysis-charts">
  <!-- 雷达图 -->
  <view class="chart-section">
    <view class="section-title">品牌雷达图</view>
    <radar-chart
      data="{{radarData}}"
      loading="{{loading}}"
      height="{{chartHeight}}"
      bind:rendercomplete="onRadarComplete"
    />
  </view>

  <!-- 趋势图 -->
  <view class="chart-section">
    <view class="section-title">趋势分析图</view>
    <trend-chart
      data="{{trendData}}"
      loading="{{loading}}"
      height="{{chartHeight}}"
      bind:rendercomplete="onTrendComplete"
    />
  </view>
</view>
