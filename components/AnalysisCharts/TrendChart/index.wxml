<!-- 趋势图组件模板 -->
<view class="trend-chart-container">
  <view wx:if="{{loading}}" class="loading-state">
    <view class="loading-spinner"></view>
    <text>图表加载中...</text>
  </view>
  
  <ec-canvas 
    wx:else
    id="trend-chart" 
    canvas-id="trend-chart"
    ec="{{trendEc}}"
    style="height: {{height}}px"
  />
</view>
