/**
 * 竞品分析组件样式
 * 版本：v2.0
 */

.competitive-container {
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 头部 */
.ca-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a2e;
}

.mode-switcher {
  display: flex;
  gap: 8rpx;
  background: #f8fafc;
  padding: 4rpx;
  border-radius: 8rpx;
}

.mode-option {
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  color: #64748b;
  border-radius: 6rpx;
  transition: all 0.2s ease;
}

.mode-option.active {
  background: #0f3460;
  color: #fff;
}

/* 对比摘要 */
.comparison-summary {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.summary-card {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: linear-gradient(135deg, #f8fafc, #f1f5f9);
  border-radius: 12rpx;
  border: 1rpx solid #e2e8f0;
}

.card-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.card-content {
  flex: 1;
}

.card-label {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 4rpx;
}

.card-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a2e;
  display: flex;
  flex-direction: column;
}

.rank-desc,
.gap-desc,
.avg-desc {
  font-size: 22rpx;
  color: #94a3b8;
  font-weight: normal;
  margin-top: 2rpx;
}

.card-value.good {
  color: #10b981;
}

.card-value.warning {
  color: #f59e0b;
}

/* 雷达图模式 */
.radar-mode {
  margin-bottom: 24rpx;
}

.radar-chart {
  position: relative;
  height: 500rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.radar-placeholder {
  text-align: center;
  color: #94a3b8;
}

.placeholder-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.placeholder-text {
  font-size: 26rpx;
}

.radar-canvas {
  width: 100%;
  height: 100%;
}

.radar-legend {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 16rpx;
  padding: 16rpx;
  background: #f8fafc;
  border-radius: 8rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.legend-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 4rpx;
}

.legend-label {
  font-size: 24rpx;
  color: #1a1a2e;
}

/* 表格模式 */
.table-mode {
  margin-bottom: 24rpx;
}

.data-table {
  border: 1rpx solid #e2e8f0;
  border-radius: 12rpx;
  overflow: hidden;
}

.table-header {
  display: flex;
  background: #0f3460;
  color: #fff;
}

.th {
  flex: 1;
  padding: 16rpx 8rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: 500;
}

.th:first-child {
  flex: 2;
  text-align: left;
  padding-left: 16rpx;
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid #f1f5f9;
  transition: all 0.2s ease;
}

.table-row:last-child {
  border-bottom: none;
}

.table-row.my-brand {
  background: rgba(233, 69, 96, 0.05);
}

.table-row.selected {
  background: rgba(15, 52, 96, 0.05);
}

.td {
  flex: 1;
  padding: 16rpx 8rpx;
  text-align: center;
  font-size: 26rpx;
  color: #1a1a2e;
}

.td:first-child {
  flex: 2;
  text-align: left;
  padding-left: 16rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.brand-icon {
  font-size: 32rpx;
}

.brand-name {
  font-size: 26rpx;
  color: #1a1a2e;
}

.td.score {
  font-weight: 500;
}

.td.score.overall {
  color: #0f3460;
  font-weight: 600;
}

/* 竞品详情 */
.competitor-detail {
  border: 1rpx solid #e2e8f0;
  border-radius: 12rpx;
  overflow: hidden;
}

.detail-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, #0f3460, #16213e);
  color: #fff;
}

.detail-title {
  font-size: 28rpx;
  font-weight: 600;
}

.detail-grade {
  font-size: 32rpx;
  font-weight: 700;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.detail-content {
  padding: 24rpx;
}

.detail-section {
  margin-bottom: 20rpx;
}

.detail-section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1a1a2e;
  margin-bottom: 12rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.tag.success {
  background: rgba(16, 185, 129, 0.1);
  color: #10b981;
  border: 1rpx solid rgba(16, 185, 129, 0.3);
}

.tag.warning {
  background: rgba(245, 158, 11, 0.1);
  color: #f59e0b;
  border: 1rpx solid rgba(245, 158, 11, 0.3);
}
