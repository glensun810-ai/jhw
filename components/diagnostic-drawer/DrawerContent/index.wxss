/* 诊断抽屉内容组件样式 */

.drawer-content {
  padding: 32rpx;
  min-height: 400rpx;
}

/* 渲染中提示 */
.rendering-hint {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.rendering-hint text {
  color: #999;
  font-size: 28rpx;
}

/* 内容节点 */
.content-nodes {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.content-node {
  padding: 20rpx 24rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  line-height: 1.8;
}

.node-text {
  font-size: 28rpx;
  color: #333;
  white-space: pre-wrap;
}

.node-image image {
  width: 100%;
  border-radius: 8rpx;
}

/* 滚动控制 */
.scroll-controls {
  display: flex;
  justify-content: flex-end;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.scroll-btn {
  background: #667eea;
  color: #fff;
  border: none;
  padding: 12rpx 32rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
}
