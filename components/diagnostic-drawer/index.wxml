<!-- 诊断抽屉主组件模板 -->
<view class="diagnostic-drawer">
  <!-- 核心组件 -->
  <drawer-core
    showDrawer="{{showDrawer}}"
    currentQuestionData="{{currentQuestionData}}"
    brandName="{{brandName}}"
    competitors="{{competitors}}"
    bind:close="onClose"
    bind:dataready="onDataReady"
    bind:modelchange="onModelChange"
    bind:sourcetap="onSourceTap"
  >
    <!-- 内容组件插槽 -->
    <view slot="content">
      <drawer-content
        responseText="{{responseText}}"
        bind:rendercomplete="onRenderComplete"
      />
    </view>
  </drawer-core>
</view>
