/* 诊断抽屉核心组件样式 */

.drawer-core {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 85vh;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  z-index: 1000;
  overflow: hidden;
}

.drawer-core.show {
  transform: translateY(0);
}

/* 头部 */
.drawer-header {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.drawer-handle {
  position: absolute;
  top: 12rpx;
  width: 80rpx;
  height: 6rpx;
  background: #e0e0e0;
  border-radius: 3rpx;
}

.drawer-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 加载状态 */
.drawer-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.drawer-loading text {
  margin-top: 24rpx;
  color: #999;
  font-size: 28rpx;
}

/* 错误状态 */
.drawer-error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.drawer-error text {
  color: #f44;
  font-size: 28rpx;
  margin-bottom: 24rpx;
}

.retry-btn {
  background: #667eea;
  color: #fff;
  border: none;
  padding: 16rpx 48rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
}

/* 内容区域 */
.drawer-content {
  height: calc(100% - 120rpx);
  overflow-y: auto;
  padding: 32rpx;
}

/* 指标卡片 */
.metrics-card {
  display: flex;
  justify-content: space-around;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.metric-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.metric-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 8rpx;
}

.metric-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
}

.metric-value.positive {
  color: #52c41a;
}

.metric-value.negative {
  color: #ff4d4f;
}

/* 模型切换 */
.model-switcher {
  margin-bottom: 32rpx;
}

.model-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.model-selector text {
  font-size: 28rpx;
  color: #333;
}

/* 信源列表 */
.source-list {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.source-items {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.source-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.source-name {
  font-size: 26rpx;
  color: #666;
  flex: 1;
}

.source-score {
  font-size: 24rpx;
  color: #999;
  margin-left: 16rpx;
}
