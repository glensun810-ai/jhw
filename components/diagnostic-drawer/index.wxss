/**
 * 详情抽屉组件样式
 * 
 * 特性：
 * - 平滑滑出动画
 * - 粘性头部
 * - 语义化高亮颜色
 * - 黑暗模式兼容 (WCAG)
 */

/* 抽屉遮罩层 */
.drawer-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.drawer-mask.show {
  opacity: 1;
  visibility: visible;
}

/* 抽屉容器 */
.drawer-container {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #ffffff;
  z-index: 1000;
  border-radius: 16px 16px 0 0;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  max-height: 85vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.drawer-container.show {
  transform: translateY(0);
}

/* 粘性头部 */
.drawer-header {
  position: sticky;
  top: 0;
  background-color: #ffffff;
  border-bottom: 1px solid #e5e7eb;
  padding: 16px;
  z-index: 10;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-metrics {
  display: flex;
  gap: 16px;
  flex: 1;
}

.metric-item {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.metric-label {
  font-size: 12px;
  color: #6b7280;
}

.metric-value {
  font-size: 18px;
  font-weight: 600;
}

/* 指标状态颜色 */
.metric-value.critical {
  color: #ef4444;
}

.metric-value.warning {
  color: #f59e0b;
}

.metric-value.safe {
  color: #22c55e;
}

.metric-value.sentiment-positive {
  color: #22c55e;
}

.metric-value.sentiment-neutral {
  color: #6b7280;
}

.metric-value.sentiment-negative {
  color: #ef4444;
}

/* 关闭按钮 */
.close-btn {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #f3f4f6;
}

.close-btn-hover {
  background-color: #e5e7eb;
}

.close-icon {
  font-size: 18px;
  color: #6b7280;
}

/* 拖动手柄 */
.drag-handle {
  width: 40px;
  height: 4px;
  background-color: #d1d5db;
  border-radius: 2px;
  margin: 12px auto 0;
}

/* 多模型切换 Segmented Control */
.model-segmented-control {
  padding: 12px 16px;
  border-bottom: 1px solid #e5e7eb;
  background-color: #f9fafb;
}

.model-scroll {
  white-space: nowrap;
}

.model-list {
  display: inline-flex;
  gap: 8px;
}

.model-tab {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 8px 16px;
  background-color: #ffffff;
  border-radius: 8px;
  border: 1px solid #e5e7eb;
  gap: 4px;
  min-width: 80px;
}

.model-tab-hover {
  background-color: #f3f4f6;
}

.model-tab.active {
  background-color: #3b82f6;
  border-color: #3b82f6;
}

.model-tab.active .model-name,
.model-tab.active .model-rank {
  color: #ffffff;
}

.model-tab.anomaly {
  border-color: #f59e0b;
  background-color: #fffbeb;
}

.model-name {
  font-size: 14px;
  color: #374151;
}

.model-rank {
  font-size: 12px;
  color: #6b7280;
}

.anomaly-badge {
  display: flex;
  align-items: center;
  gap: 2px;
  font-size: 10px;
  color: #d97706;
}

/* 内容区域 */
.drawer-content {
  flex: 1;
  overflow-y: auto;
  padding: 16px;
}

.content-scroll {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

/* 问题区域 */
.question-section {
  padding: 16px;
  background-color: #f9fafb;
  border-radius: 8px;
  border-left: 4px solid #3b82f6;
}

.question-label {
  font-size: 14px;
  color: #6b7280;
  display: block;
  margin-bottom: 8px;
}

.question-text {
  font-size: 16px;
  color: #111827;
  font-weight: 500;
  line-height: 1.6;
}

/* AI 回答区域 */
.answer-section {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.answer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 8px;
  border-bottom: 1px solid #e5e7eb;
}

.answer-model {
  font-size: 14px;
  color: #374151;
  font-weight: 600;
}

/* 渲染指示器 */
.rendering-indicator {
  display: flex;
  align-items: center;
  gap: 4px;
  opacity: 0;
  transition: opacity 0.3s;
}

.rendering-indicator.active {
  opacity: 1;
}

.cursor-blink {
  font-size: 16px;
  color: #3b82f6;
  animation: blink 1s infinite;
}

@keyframes blink {
  0%, 50% { opacity: 1; }
  51%, 100% { opacity: 0; }
}

.rendering-text {
  font-size: 12px;
  color: #6b7280;
}

/* 内容分片 */
.answer-content {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.content-chunk {
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.chunk-text {
  font-size: 15px;
  line-height: 1.8;
  color: #374151;
}

/* 【任务 2】骨架屏样式 */
.skeleton-container {
  display: flex;
  flex-direction: column;
  gap: 12px;
  padding: 16px;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.skeleton-container.show {
  opacity: 1;
  visibility: visible;
}

.skeleton-container.hide {
  opacity: 0;
  visibility: hidden;
  position: absolute;
  pointer-events: none;
}

.skeleton-line {
  height: 16px;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  border-radius: 8px;
  animation: shimmer 1.5s infinite;
}

.skeleton-line.short {
  width: 60%;
}

@keyframes shimmer {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

.answer-content.hidden {
  opacity: 0;
  visibility: hidden;
  position: absolute;
  pointer-events: none;
}

/* 语义化高亮 */
.highlight-brand {
  background-color: #dbeafe;
  padding: 2px 4px;
  border-radius: 4px;
  color: #1d4ed8;
  font-weight: 600;
}

.highlight-competitor {
  background-color: #fee2e2;
  padding: 2px 4px;
  border-radius: 4px;
  color: #b91c1c;
  font-weight: 600;
}

.highlight-keyword {
  background-color: #fef3c7;
  padding: 2px 4px;
  border-radius: 4px;
  color: #b45309;
  font-weight: 600;
}

/* 黑暗模式兼容 */
page[theme="dark"] .highlight-brand {
  background-color: #1e3a5f;
  color: #93c5fd;
}

page[theme="dark"] .highlight-competitor {
  background-color: #450a0a;
  color: #fca5a5;
}

page[theme="dark"] .highlight-keyword {
  background-color: #422006;
  color: #fcd34d;
}

/* 信源证据区 */
.sources-section {
  margin-top: 20px;
  padding-top: 16px;
  border-top: 1px solid #e5e7eb;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 12px;
}

.title-icon {
  font-size: 18px;
}

.title-text {
  font-size: 14px;
  color: #374151;
  font-weight: 600;
}

.source-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.source-card {
  padding: 12px;
  background-color: #f9fafb;
  border-radius: 8px;
  border-left: 4px solid #e5e7eb;
  transition: all 0.2s;
}

.source-card-hover {
  background-color: #f3f4f6;
  transform: translateX(4px);
}

.source-card.attitude-positive {
  border-left-color: #22c55e;
  background-color: #f0fdf4;
}

.source-card.attitude-neutral {
  border-left-color: #6b7280;
  background-color: #f9fafb;
}

.source-card.attitude-negative {
  border-left-color: #ef4444;
  background-color: #fef2f2;
}

.source-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.source-site {
  font-size: 14px;
  color: #111827;
  font-weight: 600;
}

.source-badge {
  font-size: 10px;
  padding: 2px 8px;
  border-radius: 12px;
  font-weight: 500;
}

/* 【任务 3】态度染色 - 视觉背景色 */
.source-badge.positive {
  background-color: #dcfce7;
  color: #166534;
}

.source-badge.neutral {
  background-color: #f3f4f6;
  color: #4b5563;
}

.source-badge.negative {
  background-color: #fee2e2;
  color: #991b1b;
}

/* 黑暗模式兼容 */
page[theme="dark"] .source-badge.positive {
  background-color: #14532d;
  color: #86efac;
}

page[theme="dark"] .source-badge.neutral {
  background-color: #374151;
  color: #d1d5db;
}

page[theme="dark"] .source-badge.negative {
  background-color: #7f1d1d;
  color: #fca5a5;
}

.source-url {
  font-size: 12px;
  color: #6b7280;
  display: block;
  margin-bottom: 8px;
  word-break: break-all;
}

.source-meta {
  display: flex;
  gap: 12px;
}

.meta-item {
  font-size: 11px;
  color: #9ca3af;
}

/* 图片容器 */
.image-container {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-top: 16px;
}

.lazy-image {
  width: 100%;
  border-radius: 8px;
  background-color: #f3f4f6;
}

/* 底部操作区 */
.drawer-footer {
  padding: 12px 16px;
  border-top: 1px solid #e5e7eb;
  background-color: #ffffff;
}

.footer-actions {
  display: flex;
  justify-content: space-around;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
  padding: 8px 16px;
}

.action-btn-hover {
  background-color: #f3f4f6;
  border-radius: 8px;
}

.action-icon {
  font-size: 20px;
}

.action-text {
  font-size: 12px;
  color: #6b7280;
}

/* 黑暗模式整体适配 */
page[theme="dark"] .drawer-container {
  background-color: #1f2937;
}

page[theme="dark"] .drawer-header {
  background-color: #1f2937;
  border-bottom-color: #374151;
}

page[theme="dark"] .metric-label {
  color: #9ca3af;
}

page[theme="dark"] .metric-value {
  color: #f3f4f6;
}

page[theme="dark"] .close-btn {
  background-color: #374151;
}

page[theme="dark"] .close-icon {
  color: #d1d5db;
}

page[theme="dark"] .drag-handle {
  background-color: #4b5563;
}

page[theme="dark"] .model-segmented-control {
  background-color: #111827;
  border-bottom-color: #374151;
}

page[theme="dark"] .model-tab {
  background-color: #1f2937;
  border-color: #374151;
}

page[theme="dark"] .model-name {
  color: #e5e7eb;
}

page[theme="dark"] .model-rank {
  color: #9ca3af;
}

page[theme="dark"] .drawer-content {
  background-color: #1f2937;
}

page[theme="dark"] .question-section {
  background-color: #111827;
}

page[theme="dark"] .question-text {
  color: #e5e7eb;
}

page[theme="dark"] .answer-model {
  color: #e5e7eb;
}

page[theme="dark"] .chunk-text {
  color: #d1d5db;
}

page[theme="dark"] .sources-section {
  border-top-color: #374151;
}

page[theme="dark"] .title-text {
  color: #e5e7eb;
}

page[theme="dark"] .source-card {
  background-color: #111827;
}

page[theme="dark"] .source-card-hover {
  background-color: #1f2937;
}

page[theme="dark"] .source-site {
  color: #e5e7eb;
}

page[theme="dark"] .source-url {
  color: #9ca3af;
}

page[theme="dark"] .drawer-footer {
  background-color: #1f2937;
  border-top-color: #374151;
}

page[theme="dark"] .action-text {
  color: #9ca3af;
}
