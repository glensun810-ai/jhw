/* components/auth-wrapper/auth-wrapper.wxss */

.auth-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  text-align: center;
  background-color: #1A202C;
  border-radius: 16rpx;
  margin: 20rpx 0;
}

.prompt-text {
  font-size: 28rpx;
  color: #8c8c8c;
  margin-bottom: 20rpx;
}

.login-link {
  font-size: 28rpx;
  color: #00A9FF;
  text-decoration: underline;
}