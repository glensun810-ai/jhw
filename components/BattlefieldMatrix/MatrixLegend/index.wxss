/* 矩阵图例组件样式 */

.matrix-legend {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

/* 视图切换 */
.view-switcher {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.view-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.view-option.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.view-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.view-label {
  font-size: 24rpx;
  color: #666;
}

.view-option.active .view-label {
  color: #fff;
}

/* 图例说明 */
.legend-items {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.legend-icon {
  font-size: 28rpx;
}

.legend-color {
  width: 16rpx;
  height: 16rpx;
  border-radius: 4rpx;
}

/* 图例状态 */
.legend-success {
  background: #f6ffed;
  color: #52c41a;
}

.legend-error {
  background: #fff2f0;
  color: #ff4d4f;
}

.legend-positive {
  background: #e6f7ff;
  color: #1890ff;
}

.legend-negative {
  background: #fff7e6;
  color: #fa8c16;
}

.legend-neutral {
  background: #f5f5f5;
  color: #999;
}
