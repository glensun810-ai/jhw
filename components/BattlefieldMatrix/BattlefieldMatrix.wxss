/* 战地矩阵主组件样式 - 简化版 */

.battlefield-matrix {
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 32rpx;
}

/* 矩阵内容 */
.matrix-content {
  transition: opacity 0.3s ease;
}

.matrix-content.animating {
  opacity: 0.5;
}

/* 表头 */
.matrix-header {
  display: flex;
  margin-bottom: 16rpx;
}

.header-cell {
  min-width: 120rpx;
  padding: 16rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}

.header-cell:first-child {
  min-width: 160rpx;
  text-align: left;
}

/* 行 */
.matrix-rows {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.matrix-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.row-label {
  min-width: 160rpx;
  padding: 16rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  text-align: left;
}

.row-cells {
  display: flex;
  gap: 12rpx;
  flex: 1;
  overflow-x: auto;
}

/* 空状态 */
.empty-state {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 300rpx;
  color: #999;
  font-size: 28rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
  gap: 24rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-state text {
  color: #999;
  font-size: 28rpx;
}
