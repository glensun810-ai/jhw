/* components/login-prompt/login-prompt.wxss */

.login-prompt-container {
  margin: 20rpx 0;
}

.login-prompt {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background: linear-gradient(135deg, #00A9FF, #00F5A0);
  border-radius: 16rpx;
  color: #141414;
}

.prompt-text {
  flex: 1;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.login-btn {
  background-color: #141414;
  color: #00F5A0;
  border-radius: 8rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  font-weight: bold;
  border: none;
}